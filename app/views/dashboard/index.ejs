<%- include('../partials/header', { title: 'Dashboard - EDU LMS', headerTitle: 'Dashboard', adminName: user.name }) %>
<%- include('../partials/navigation') %>

<div class="dashboard-container <%= user.role.toLowerCase() %>-theme">
  <!-- Sidebar -->
  <div class="sidebar">
    <%- include('../partials/sidebar', { user: user, activePage: 'dashboard' }) %>
  </div>

  <!-- Main Content -->
  <main class="dashboard-main">
    <div class="dashboard-header">
      <div>
        <h2>Welcome back, <%= user.name %>!</h2>
        <p>Here's what's happening in your EDU LMS account today.</p>
      </div>
    </div>

    <!-- Stats -->
    <div class="stats-grid">
      <% if (data.stats) { %>
        <% Object.keys(data.stats).forEach(function(key) { %>
          <div class="stat-card">
            <div class="stat-icon">üìä</div>
            <span class="stat-number"><%= data.stats[key] %></span>
            <div class="stat-label"><%= key %></div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No stats available.</p>
      <% } %>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
      <h3>Quick Actions</h3>
      <div class="actions-grid">
        <a href="/courses" class="action-card">
          <div class="action-icon">üìñ</div>
          <h4>View Courses</h4>
        </a>
        <a href="/assignments" class="action-card">
          <div class="action-icon">üìù</div>
          <h4>Submit Assignment</h4>
        </a>
        <a href="/grades" class="action-card">
          <div class="action-icon">üìä</div>
          <h4>Check Grades</h4>
        </a>
        <a href="/settings" class="action-card">
          <div class="action-icon">‚öôÔ∏è</div>
          <h4>Account Settings</h4>
        </a>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="recent-activity">
      <h3>Recent Activity</h3>
      <% if (data.recentActivity && data.recentActivity.length > 0) { %>
        <% data.recentActivity.forEach(activity => { %>
          <div class="activity-item">
            <div class="activity-icon">üîî</div>
            <div>
              <p><%= activity.message || activity.action %></p>
              <div class="activity-time"><%= activity.created_at || activity.time %></div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No recent activity.</p>
      <% } %>
    </div>
  </main>
</div>

<style>
body {
  margin: 0;
  font-family: 'Segoe UI', Arial, sans-serif;
  color: #222;
}

.dashboard-container {
  display: flex;
  width: 100%;
  height: 100vh;
}

.sidebar {
  width: 240px;
  color: #fff;
  height: 100%;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.5);
}

.dashboard-main {
  flex: 1;
  padding: 20px;
  overflow-y: auto;
}

.dashboard-header {
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  color: white;
}

.stats-grid {
  display: flex;
  gap: 15px;
  margin-bottom: 20px;
}

.stat-card {
  flex: 1;
  background: white;
  padding: 15px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.stat-icon {
  font-size: 1.8em;
  margin-bottom: 10px;
}

.stat-number {
  font-size: 1.5em;
  font-weight: bold;
}

.stat-label {
  font-size: 0.85em;
  color: #555;
}

.actions-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-top: 10px;
}

.action-card {
  flex: 1 1 calc(25% - 15px);
  background: white;
  padding: 15px;
  border-radius: 8px;
  text-align: center;
  text-decoration: none;
  color: inherit;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.action-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 12px rgba(0,0,0,0.15);
}

.action-icon {
  font-size: 1.8em;
  margin-bottom: 10px;
}

.recent-activity {
  background: white;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  margin-top: 20px;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  background: #f8f9fa;
  padding: 8px;
  border-radius: 50%;
  margin-right: 10px;
  font-size: 1.2em;
}

.activity-time {
  font-size: 0.85em;
  color: #888;
}

/* Role Themes */
.dashboard-container.admin-theme .dashboard-header {
  background: linear-gradient(135deg,#1f6feb,#10b981);
}
.dashboard-container.teacher-theme .dashboard-header {
  background: linear-gradient(135deg,#10b981,#3b82f6);
}
.dashboard-container.student-theme .dashboard-header {
  background: linear-gradient(135deg,#f59e0b,#f97316);
}
.dashboard-container.finance-theme .dashboard-header {
  background: linear-gradient(135deg,#ef4444,#b91c1c);
}

.dashboard-container.admin-theme .stat-number { color: #1f6feb; }
.dashboard-container.teacher-theme .stat-number { color: #10b981; }
.dashboard-container.student-theme .stat-number { color: #f59e0b; }
.dashboard-container.finance-theme .stat-number { color: #ef4444; }
</style>

<%- include('../partials/footer') %>
