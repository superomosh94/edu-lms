<style>
body {
  margin: 0;
  font-family: 'Segoe UI', Arial, sans-serif;
  color: #222;
}

/* Dashboard container layout */
.dashboard-container {
  display: flex;
  width: 100%;
  height: 100vh;
}

/* Sidebar fixed position */
.sidebar {
  width: 240px;
  color: #fff;
  height: 100vh;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  background: #0d1117;
}

/* Main content pushed right */
.dashboard-main {
  flex: 1;
  margin-left: 240px;
  padding: 20px;
  overflow-y: auto;
}

.dashboard-header {
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  background: linear-gradient(135deg,#6c63ff,#00c4ff);
  color: white;
}

.stats-grid {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.stat-card {
  flex: 1 1 calc(50% - 15px);
  background: white;
  padding: 15px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.stat-icon {
  font-size: 1.8em;
  margin-bottom: 10px;
}

.stat-number {
  font-size: 1.5em;
  font-weight: bold;
}

.stat-label {
  font-size: 0.85em;
  color: #555;
}

.actions-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-top: 10px;
}

.action-card {
  flex: 1 1 calc(50% - 15px);
  background: white;
  padding: 15px;
  border-radius: 8px;
  text-align: center;
  text-decoration: none;
  color: inherit;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.action-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 12px rgba(0,0,0,0.15);
}

.action-icon {
  font-size: 1.8em;
  margin-bottom: 10px;
}

.recent-activity {
  background: white;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  margin-top: 20px;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  background: #f8f9fa;
  padding: 8px;
  border-radius: 50%;
  margin-right: 10px;
  font-size: 1.2em;
}

.activity-time {
  font-size: 0.85em;
  color: #888;
}

/* Guest theme */
.dashboard-container.guest-theme .stat-number { color: #6c63ff; }

@media (max-width: 1024px) {
  .dashboard-container {
    flex-direction: column;
    height: auto;
  }
  .sidebar {
    position: relative;
    width: 100%;
    height: auto;
  }
  .dashboard-main {
    margin-left: 0;
  }
}

@media (max-width: 768px) {
  .stats-grid { flex-direction: column; }
  .stat-card { flex: 1 1 100%; }
  .actions-grid { flex-direction: column; }
  .action-card { flex: 1 1 100%; }
}

@media (max-width: 480px) {
  .dashboard-header h2 { font-size: 1.3em; }
  .dashboard-header p { font-size: 0.9em; }
  .stat-number { font-size: 1.2em; }
}
</style>

