<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - EDU LMS</title>
  
  <%- include('../partials/header') %>

  <style>
  </style>
</head>
<body class="<%= typeof darkMode !== 'undefined' && darkMode ? 'dark-mode' : '' %>">

  <%- include('../partials/navigation') %>

  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-md-3 col-lg-2 sidebar">
        <%- include('../partials/adminSidebar') %>
      </div>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Admin Dashboard</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle me-2">
              <i class="fas fa-download me-1"></i>Export
            </button>
            <button class="btn btn-sm btn-primary" onclick="refreshDashboard()">
              <i class="fas fa-sync-alt me-1"></i>Refresh
            </button>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="row admin-stats">
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col">
                    <div class="stat-label">Total Users</div>
                    <div class="stat-value"><%= data.stats.totalUsers || 0 %></div>
                    <div class="text-success" style="font-size: 0.75rem;">
                      <i class="fas fa-arrow-up me-1"></i>12% from last month
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-users stat-icon text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col">
                    <div class="stat-label">Active Courses</div>
                    <div class="stat-value"><%= data.stats.courses || 0 %></div>
                    <div class="text-success" style="font-size: 0.75rem;">
                      <i class="fas fa-arrow-up me-1"></i>8% from last month
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-book stat-icon text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col">
                    <div class="stat-label">Pending Approvals</div>
                    <div class="stat-value"><%= data.stats.pendingApprovals || 0 %></div>
                    <div class="text-danger" style="font-size: 0.75rem;">
                      <i class="fas fa-clock me-1"></i>Requires attention
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-clock stat-icon text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col">
                    <div class="stat-label">System Health</div>
                    <div class="stat-value text-success">98%</div>
                    <div class="text-success" style="font-size: 0.75rem;">
                      <i class="fas fa-check me-1"></i>All systems operational
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-heart stat-icon text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card shadow">
              <div class="card-header py-3">
                Quick Actions
              </div>
              <div class="card-body text-center quick-actions">
                <a href="/admin/users/add" class="btn btn-primary">
                  <i class="fas fa-user-plus"></i> Add User
                </a>
                <a href="/admin/courses/add" class="btn btn-success">
                  <i class="fas fa-plus-circle"></i> Create Course
                </a>
                <a href="/admin/reports" class="btn btn-info">
                  <i class="fas fa-chart-bar"></i> Reports
                </a>
                <a href="/admin/settings" class="btn btn-warning">
                  <i class="fas fa-cogs"></i> Settings
                </a>
                <a href="/admin/announcements/add" class="btn btn-danger">
                  <i class="fas fa-bullhorn"></i> Announcements
                </a>
                <a href="/admin/audit-logs" class="btn" style="background: #8b5cf6; color: white;">
                  <i class="fas fa-history"></i> Audit Logs
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Users & System Alerts -->
        <div class="row">
          <!-- Recent Users -->
          <div class="col-md-6">
            <div class="card shadow mb-4">
              <div class="card-header d-flex justify-content-between align-items-center">
                <span>Recent Users</span>
                <a href="/admin/users" class="btn btn-sm btn-outline-primary">View All</a>
              </div>
              <div class="card-body user-management">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Joined</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (data.recentUsers && data.recentUsers.length > 0) { %>
                        <% data.recentUsers.forEach(user => { %>
                          <tr>
                            <td>
                              <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                  <%= user.name.charAt(0).toUpperCase() %>
                                </div>
                                <div>
                                  <div class="fw-semibold"><%= user.name %></div>
                                  <small class="text-muted"><%= user.email %></small>
                                </div>
                              </div>
                            </td>
                            <td>
                              <span class="badge bg-<%= user.role === 'admin' ? 'danger' : user.role === 'teacher' ? 'warning' : 'info' %>">
                                <%= user.role %>
                              </span>
                            </td>
                            <td>
                              <span class="badge bg-<%= user.status === 'active' ? 'success' : 'secondary' %>">
                                <%= user.status %>
                              </span>
                            </td>
                            <td>
                              <small class="text-muted">
                                <%= new Date(user.createdAt).toLocaleDateString() %>
                              </small>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center py-4">
                            <div class="text-muted">
                              <i class="fas fa-users fa-2x mb-2"></i>
                              <div>No recent users</div>
                            </div>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          <!-- System Alerts -->
          <div class="col-md-6">
            <div class="card shadow mb-4">
              <div class="card-header d-flex justify-content-between align-items-center">
                <span>System Alerts</span>
                <span class="badge bg-danger"><%= (data.alerts && data.alerts.length) || 0 %></span>
              </div>
              <div class="card-body">
                <% if (data.alerts && data.alerts.length > 0) { %>
                  <div class="list-group list-group-flush">
                    <% data.alerts.forEach(alert => { %>
                      <div class="list-group-item list-group-item-<%= alert.type || 'info' %> d-flex justify-content-between">
                        <div>
                          <strong><%= alert.title %></strong><br>
                          <small class="text-muted"><%= alert.message %></small><br>
                          <small class="text-muted">
                            <%= new Date(alert.timestamp).toLocaleString() %>
                          </small>
                        </div>
                        <span class="badge bg-<%= alert.priority === 'high' ? 'danger' : alert.priority === 'medium' ? 'warning' : 'info' %> rounded-pill">
                          <%= alert.priority %>
                        </span>
                      </div>
                    <% }) %>
                  </div>
                <% } else { %>
                  <div class="text-center py-4">
                    <div class="text-muted">
                      <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                      <div>No system alerts</div>
                      <small>All systems are running smoothly</small>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Stats Section -->
        <div class="row">
          <div class="col-12">
            <div class="card shadow">
              <div class="card-header">
                Platform Overview
              </div>
              <div class="card-body">
                <div class="row text-center">
                  <div class="col-md-3 col-6 mb-3">
                    <div class="h4 text-primary mb-1"><%= data.stats.assignments || 0 %></div>
                    <div class="text-muted">Assignments</div>
                  </div>
                  <div class="col-md-3 col-6 mb-3">
                    <div class="h4 text-success mb-1"><%= data.stats.submissions || 0 %></div>
                    <div class="text-muted">Submissions</div>
                  </div>
                  <div class="col-md-3 col-6 mb-3">
                    <div class="h4 text-info mb-1"><%= data.stats.teachers || 0 %></div>
                    <div class="text-muted">Teachers</div>
                  </div>
                  <div class="col-md-3 col-6 mb-3">
                    <div class="h4 text-warning mb-1"><%= data.stats.students || 0 %></div>
                    <div class="text-muted">Students</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Footer partial -->
  <%- include('../partials/footer') %>

  <!-- Footer scripts partial -->
  <%- include('../partials/footer-scripts') %>

  <script>
    // Refresh dashboard data
    function refreshDashboard() {
      const refreshBtn = event.target.closest('button');
      const originalHtml = refreshBtn.innerHTML;
      
      refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Refreshing...';
      refreshBtn.disabled = true;

      // Simulate API call
      setTimeout(() => {
        window.location.reload();
      }, 1000);
    }

    // Initialize dashboard
    document.addEventListener('DOMContentLoaded', function() {
      // Add loading states to cards that might fetch data
      const statsCards = document.querySelectorAll('.admin-stats .card');
      statsCards.forEach(card => {
        card.classList.add('loading');
        setTimeout(() => card.classList.remove('loading'), 1000);
      });

      // Initialize tooltips
      const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltips.forEach(tooltip => {
        new bootstrap.Tooltip(tooltip);
      });
    });

    // Export dashboard data
    function exportDashboard() {
      // Implementation for exporting dashboard data
      console.log('Exporting dashboard data...');
      // You would typically make an API call here to generate and download a report
    }
  </script>
</body>
</html>