<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard - EDU LMS</title>
    <link rel="icon" href="/public/images/favicon/favicon.ico" type="image/x-icon">
    <%- include('../partials/header') %>

    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #2980b9;
            --success: #27ae60;
            --info: #16a085;
            --warning: #f39c12;
            --danger: #c0392b;
            --light-bg: #f8f9fa;
            --card-bg: #ffffff;
            --text-color: #2c3e50;
            --shadow: rgba(0, 0, 0, 0.1);
        }

        body {
            background: var(--light-bg);
            font-family: 'Segoe UI', sans-serif;
            color: var(--text-color);
        }

        /* Sidebar */
        .sidebar {
            background: linear-gradient(180deg, var(--primary), var(--secondary));
            color: white;
            min-height: 100vh;
            width: 250px;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            transition: transform 0.3s ease-in-out;
            z-index: 1000;
        }

        .sidebar a {
            color: white;
            transition: color 0.2s ease;
        }

        .sidebar a:hover {
            color: var(--warning);
        }

        /* Hamburger button */
        .hamburger {
            display: none;
            font-size: 1.5rem;
            color: white;
            cursor: pointer;
            padding: 10px;
            background: var(--secondary);
            border-radius: 8px;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1100;
        }

        /* Teacher stats cards */
        .teacher-stats .card {
            background: var(--card-bg);
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .teacher-stats .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px var(--shadow);
        }

        .card-header {
            background: linear-gradient(90deg, var(--secondary), var(--primary));
            color: white;
            border-radius: 8px 8px 0 0;
            font-weight: 600;
        }

        .progress {
            height: 10px;
            border-radius: 5px;
        }

        .progress-bar {
            background: linear-gradient(90deg, var(--info), var(--success));
        }

        .list-group-item {
            border: none;
            padding: 0.75rem 1rem;
            border-radius: 6px;
            transition: background 0.2s ease;
        }

        .list-group-item:hover {
            background: rgba(41, 128, 185, 0.1);
        }

        @media (max-width: 768px) {
            .hamburger {
                display: block;
            }
            .sidebar {
                transform: translateX(-100%);
            }
            .sidebar.open {
                transform: translateX(0);
            }
            main {
                margin-left: 0 !important;
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/navigation') %>

    <!-- Hamburger toggle -->
    <div class="hamburger" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </div>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-auto p-0">
                <%- include('../partials/sidebar') %>
            </div>

            <!-- Main Content -->
            <main class="col px-md-4" style=" margin-left: 260px; min-height: 100vh;">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Teacher Dashboard</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/courses/create" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus me-1"></i>New Course
                        </a>
                    </div>
                </div>

                <div class="alert alert-info">
                    <h4>Welcome, Professor <%= user?.firstName %>!</h4>
                    <p>You have <strong><%= stats?.pendingGrading || 0 %> assignments</strong> waiting to be graded.</p>
                </div>

                <!-- Stats -->
                <div class="row teacher-stats">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col">
                                        <div class="text-xs font-weight-bold text-primary mb-1">My Courses</div>
                                        <div class="h5 mb-0 font-weight-bold"><%= stats?.myCourses || 0 %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-book fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col">
                                        <div class="text-xs font-weight-bold text-success mb-1">Total Students</div>
                                        <div class="h5 mb-0 font-weight-bold"><%= stats?.totalStudents || 0 %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col">
                                        <div class="text-xs font-weight-bold text-info mb-1">Pending Grading</div>
                                        <div class="h5 mb-0 font-weight-bold"><%= stats?.pendingGrading || 0 %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-tasks fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col">
                                        <div class="text-xs font-weight-bold text-warning mb-1">Upcoming Classes</div>
                                        <div class="h5 mb-0 font-weight-bold"><%= stats?.upcomingClasses || 0 %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
        }

        document.addEventListener('click', function(e) {
            const sidebar = document.querySelector('.sidebar');
            const hamburger = document.querySelector('.hamburger');
            if (!sidebar.contains(e.target) && !hamburger.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>
</html>
