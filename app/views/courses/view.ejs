<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.title %> - EDU LMS</title>
    <%- include('../partials/header') %>
    <style>
        .course-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }
        .course-sidebar {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
        }
        .module-item {
            border-left: 3px solid #007bff;
            margin-bottom: 1rem;
            padding-left: 1rem;
        }
        .lesson-item {
            padding: 0.5rem 1rem;
            margin: 0.25rem 0;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .lesson-item:hover {
            background-color: #e9ecef;
        }
        .lesson-item.completed {
            background-color: #d4edda;
            border-left: 3px solid #28a745;
        }
        .lesson-item.active {
            background-color: #cce5ff;
            border-left: 3px solid #007bff;
        }
        .progress-circle {
            width: 100px;
            height: 100px;
        }
        .tab-content {
            min-height: 400px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navigation') %>

    <!-- Course Hero Section -->
    <div class="course-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent p-0">
                            <li class="breadcrumb-item"><a href="/courses" class="text-white">Courses</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page"><%= course.title %></li>
                        </ol>
                    </nav>
                    <h1 class="display-5 fw-bold"><%= course.title %></h1>
                    <p class="lead mb-4"><%= course.description %></p>
                    <div class="d-flex flex-wrap gap-3">
                        <span class="badge bg-light text-dark">
                            <i class="fas fa-user-tie me-1"></i><%= course.instructor %>
                        </span>
                        <span class="badge bg-light text-dark">
                            <i class="fas fa-clock me-1"></i><%= course.duration %> weeks
                        </span>
                        <span class="badge bg-light text-dark">
                            <i class="fas fa-chart-bar me-1"></i><%= course.difficulty %>
                        </span>
                        <% if (course.isEnrolled) { %>
                            <span class="badge bg-success">
                                <i class="fas fa-check me-1"></i>Enrolled
                            </span>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="progress-circle position-relative d-inline-block">
                        <svg width="100" height="100" viewBox="0 0 36 36" class="circular-chart">
                            <path class="circle-bg"
                                d="M18 2.0845
                                  a 15.9155 15.9155 0 0 1 0 31.831
                                  a 15.9155 15.9155 0 0 1 0 -31.831"
                                fill="none"
                                stroke="#eee"
                                stroke-width="3"/>
                            <path class="circle"
                                stroke-dasharray="<%= course.progress || 0 %>, 100"
                                d="M18 2.0845
                                  a 15.9155 15.9155 0 0 1 0 31.831
                                  a 15.9155 15.9155 0 0 1 0 -31.831"
                                fill="none"
                                stroke="#007bff"
                                stroke-width="3"
                                stroke-linecap="round"/>
                            <text x="18" y="20.35" class="percentage" fill="#fff" text-anchor="middle" dy="0.3em" font-size="8">
                                <%= course.progress || 0 %>%
                            </text>
                        </svg>
                    </div>
                    <div class="mt-3">
                        <% if (course.isEnrolled) { %>
                            <button class="btn btn-light me-2">Continue Learning</button>
                        <% } else { %>
                            <button class="btn btn-light me-2">Enroll Now</button>
                        <% } %>
                        <button class="btn btn-outline-light">Add to Wishlist</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Course Tabs -->
                <ul class="nav nav-tabs" id="courseTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="content-tab" data-bs-toggle="tab" data-bs-target="#content" type="button" role="tab">
                            <i class="fas fa-play-circle me-2"></i>Content
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">
                            <i class="fas fa-info-circle me-2"></i>Overview
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="announcements-tab" data-bs-toggle="tab" data-bs-target="#announcements" type="button" role="tab">
                            <i class="fas fa-bullhorn me-2"></i>Announcements
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="discussions-tab" data-bs-toggle="tab" data-bs-target="#discussions" type="button" role="tab">
                            <i class="fas fa-comments me-2"></i>Discussions
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="courseTabsContent">
                    <!-- Content Tab -->
                    <div class="tab-pane fade show active" id="content" role="tabpanel">
                        <div class="card border-top-0">
                            <div class="card-body">
                                <h5 class="card-title">Course Content</h5>
                                <% if (course.modules && course.modules.length > 0) { %>
                                    <div class="accordion" id="modulesAccordion">
                                        <% course.modules.forEach((module, index) => { %>
                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="heading<%= index %>">
                                                    <button class="accordion-button <%= index === 0 ? '' : 'collapsed' %>" 
                                                            type="button" data-bs-toggle="collapse" 
                                                            data-bs-target="#collapse<%= index %>">
                                                        <i class="fas fa-folder me-2"></i>
                                                        <%= module.title %>
                                                        <span class="badge bg-secondary ms-2"><%= module.lessons.length %> lessons</span>
                                                    </button>
                                                </h2>
                                                <div id="collapse<%= index %>" 
                                                     class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" 
                                                     data-bs-parent="#modulesAccordion">
                                                    <div class="accordion-body">
                                                        <% module.lessons.forEach((lesson, lessonIndex) => { %>
                                                            <div class="lesson-item <%= lesson.completed ? 'completed' : '' %> <%= lesson.active ? 'active' : '' %>"
                                                                 onclick="loadLesson(<%= lesson.id %>)">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <div>
                                                                        <i class="fas fa-<%= lesson.type === 'video' ? 'play-circle' : 'file-alt' %> me-2"></i>
                                                                        <%= lesson.title %>
                                                                    </div>
                                                                    <div>
                                                                        <% if (lesson.completed) { %>
                                                                            <i class="fas fa-check text-success"></i>
                                                                        <% } %>
                                                                        <small class="text-muted"><%= lesson.duration %></small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        <% }) %>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <p class="text-muted">No content available yet.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Overview Tab -->
                    <div class="tab-pane fade" id="overview" role="tabpanel">
                        <div class="card border-top-0">
                            <div class="card-body">
                                <h5 class="card-title">Course Overview</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>What you'll learn</h6>
                                        <ul>
                                            <% if (course.objectives && course.objectives.length > 0) { %>
                                                <% course.objectives.forEach(objective => { %>
                                                    <li><%= objective %></li>
                                                <% }) %>
                                            <% } else { %>
                                                <li>No learning objectives specified</li>
                                            <% } %>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Requirements</h6>
                                        <ul>
                                            <% if (course.prerequisites && course.prerequisites.length > 0) { %>
                                                <% course.prerequisites.forEach(req => { %>
                                                    <li><%= req %></li>
                                                <% }) %>
                                            <% } else { %>
                                                <li>No prerequisites</li>
                                            <% } %>
                                        </ul>
                                    </div>
                                </div>

                                <h6 class="mt-4">Description</h6>
                                <p><%= course.fullDescription || course.description %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Announcements Tab -->
                    <div class="tab-pane fade" id="announcements" role="tabpanel">
                        <div class="card border-top-0">
                            <div class="card-body">
                                <h5 class="card-title">Announcements</h5>
                                <% if (course.announcements && course.announcements.length > 0) { %>
                                    <% course.announcements.forEach(announcement => { %>
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <h6><%= announcement.title %></h6>
                                                <p class="text-muted"><small>Posted on <%= announcement.date %> by <%= announcement.author %></small></p>
                                                <p><%= announcement.content %></p>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted">No announcements yet.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Discussions Tab -->
                    <div class="tab-pane fade" id="discussions" role="tabpanel">
                        <div class="card border-top-0">
                            <div class="card-body">
                                <h5 class="card-title">Course Discussions</h5>
                                <% if (course.discussions && course.discussions.length > 0) { %>
                                    <% course.discussions.forEach(discussion => { %>
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between">
                                                    <h6><%= discussion.title %></h6>
                                                    <span class="badge bg-primary"><%= discussion.replies %> replies</span>
                                                </div>
                                                <p class="text-muted"><small>Started by <%= discussion.author %> on <%= discussion.date %></small></p>
                                                <p><%= discussion.preview %>...</p>
                                                <a href="#" class="btn btn-sm btn-outline-primary">Join Discussion</a>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted">No discussions yet. Be the first to start a discussion!</p>
                                    <button class="btn btn-primary">Start Discussion</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="course-sidebar sticky-top" style="top: 20px;">
                    <h6>Course Progress</h6>
                    <div class="progress mb-3">
                        <div class="progress-bar" style="width: <%= course.progress || 0 %>%"></div>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <small>Completed: <%= course.progress || 0 %>%</small>
                        <small>Time: <%= course.timeSpent || '0h 0m' %></small>
                    </div>

                    <h6>Instructor</h6>
                    <div class="d-flex align-items-center mb-3">
                        <img src="<%= course.instructorImage || 'https://via.placeholder.com/50' %>" 
                             class="rounded-circle me-3" width="50" height="50" alt="Instructor">
                        <div>
                            <strong><%= course.instructor %></strong>
                            <br>
                            <small class="text-muted"><%= course.instructorTitle || 'Course Instructor' %></small>
                        </div>
                    </div>

                    <h6 class="mt-4">Course Info</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-video me-2"></i>
                            <span><%= course.videoCount || 0 %> video lessons</span>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-file-alt me-2"></i>
                            <span><%= course.documentCount || 0 %> resources</span>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-tasks me-2"></i>
                            <span><%= course.assignmentCount || 0 %> assignments</span>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-users me-2"></i>
                            <span><%= course.studentCount || 0 %> students enrolled</span>
                        </li>
                    </ul>

                    <% if (!course.isEnrolled) { %>
                        <div class="d-grid mt-4">
                            <button class="btn btn-primary btn-lg">Enroll in Course</button>
                            <small class="text-center mt-2 text-muted">
                                <% if (course.price > 0) { %>
                                    $<%= course.price %> one-time payment
                                <% } else { %>
                                    Free enrollment
                                <% } %>
                            </small>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        function loadLesson(lessonId) {
            // Simulate lesson loading
            console.log('Loading lesson:', lessonId);
            // In a real application, this would fetch lesson content via AJAX
        }

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
</body>
</html>