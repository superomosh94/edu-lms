<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Course - Admin</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --gold-primary: #D4AF37;
            --gold-light: #F7E98E;
            --gold-dark: #B8860B;
            --gold-accent: #FFD700;
            --gold-bg: #FFFDF5;
            --gold-border: #E8D9A5;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --light: #f8fafc;
            --dark: #1e293b;
            --gray: #6b7280;
            --light-gray: #e5e7eb;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #fcf9f0 0%, #f8f4e8 100%);
            color: #334155;
            line-height: 1.6;
            min-height: 100vh;
        }

        .create-course-container {
            min-height: 100vh;
            padding: 2rem 0;
        }

        .page-header {
            background: linear-gradient(135deg, var(--gold-dark) 0%, var(--gold-primary) 100%);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(184, 134, 11, 0.2);
            color: white;
        }

        .page-header h2 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            opacity: 0.9;
            margin-bottom: 0;
        }

        .form-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            border: 1px solid var(--gold-border);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 2rem;
        }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        .card-header {
            background: linear-gradient(135deg, var(--gold-dark), var(--gold-primary));
            border-radius: 15px 15px 0 0 !important;
            padding: 1.5rem;
            border-bottom: none;
        }

        .card-header h4 {
            margin: 0;
            color: white;
            font-weight: 600;
            display: flex;
            align-items: center;
        }

        .form-section {
            padding: 2rem;
            border-bottom: 1px solid var(--gold-border);
            background: var(--gold-bg);
        }

        .form-section:last-of-type {
            border-bottom: none;
        }

        .section-title {
            color: var(--gold-dark);
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--gold-border);
            font-size: 1.2rem;
        }

        .section-title i {
            color: var(--gold-primary);
            font-size: 1.3rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--gold-dark);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-label i {
            color: var(--gold-primary);
            font-size: 0.9rem;
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            border: 1px solid var(--gold-border);
            transition: all 0.3s ease;
            font-family: 'Inter', sans-serif;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--gold-primary);
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.15);
        }

        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .objective-item {
            margin-bottom: 0.75rem;
        }

        .objective-item .input-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .remove-objective {
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            border: 1px solid var(--gold-border);
            background: white;
            color: var(--danger);
            transition: all 0.3s ease;
        }

        .remove-objective:hover {
            background: var(--danger);
            color: white;
            transform: scale(1.05);
        }

        .feature-checkbox {
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 10px;
            background: white;
            border: 1px solid var(--gold-border);
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .feature-checkbox:hover {
            background: var(--gold-bg);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .feature-checkbox .form-check-label {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            color: var(--dark);
        }

        .feature-checkbox .form-check-input:checked {
            background-color: var(--gold-primary);
            border-color: var(--gold-primary);
        }

        .file-upload-area {
            border: 2px dashed var(--gold-border);
            border-radius: 12px;
            padding: 2.5rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background-color: white;
        }

        .file-upload-area:hover {
            border-color: var(--gold-primary);
            background-color: var(--gold-bg);
            transform: translateY(-2px);
        }

        .file-upload-area.dragover {
            border-color: var(--gold-primary);
            background-color: var(--gold-bg);
        }

        .file-upload-area i {
            font-size: 3rem;
            color: var(--gold-primary);
            margin-bottom: 1rem;
        }

        .file-upload-area h5 {
            color: var(--gold-dark);
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .file-upload-area p {
            color: var(--gray);
            margin-bottom: 0;
        }

        .thumbnail-preview {
            max-width: 200px;
            max-height: 150px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border: 2px solid var(--gold-border);
        }

        .preview-container {
            position: relative;
            display: inline-block;
        }

        .preview-remove {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--danger);
            color: white;
            border: none;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .preview-remove:hover {
            transform: scale(1.1);
            box-shadow: 0 3px 8px rgba(0,0,0,0.3);
        }

        .btn {
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            border: none;
            font-family: 'Inter', sans-serif;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-accent));
            color: var(--dark);
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
        }

        .btn-success:hover {
            background: linear-gradient(135deg, var(--gold-dark), var(--gold-primary));
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
        }

        .btn-outline-primary {
            border: 2px solid var(--gold-primary);
            color: var(--gold-primary);
            background: transparent;
        }

        .btn-outline-primary:hover {
            background: var(--gold-primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
        }

        .btn-light {
            background: white;
            color: var(--gold-dark);
            border: 1px solid var(--gold-border);
        }

        .btn-light:hover {
            background: var(--gold-bg);
            color: var(--gold-dark);
            border-color: var(--gold-primary);
            transform: translateY(-2px);
        }

        .alert-container {
            padding: 1.5rem 2rem 0;
        }

        .alert {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border-left: 4px solid transparent;
        }

        .alert-success {
            background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
            color: #0369a1;
            border-left-color: var(--success);
        }

        .alert-danger {
            background: linear-gradient(135deg, #fef2f2, #fee2e2);
            color: #dc2626;
            border-left-color: var(--danger);
        }

        .alert i {
            font-size: 1.1rem;
        }

        .progress-container {
            margin-top: 1rem;
            display: none;
        }

        .progress {
            height: 10px;
            border-radius: 5px;
            background-color: var(--light-gray);
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-accent));
            transition: width 0.3s ease;
        }

        .form-actions {
            background: white !important;
        }

        .feature-icon {
            font-size: 1.1rem;
        }

        @media (max-width: 768px) {
            .form-section {
                padding: 1.5rem;
            }
            
            .file-upload-area {
                padding: 1.5rem;
            }
            
            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
            
            .form-actions .d-flex {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .page-header {
                padding: 1.5rem;
            }
        }

        .required-field::after {
            content: " *";
            color: var(--danger);
        }
    </style>
</head>
<body class="admin-layout">
    
    <div class="main-content">
        <div class="create-course-container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="page-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h2 class="text-white mb-1">
                                        <i class="fas fa-plus-circle me-2"></i>Create New Course
                                    </h2>
                                    <p class="text-white-50 mb-0">Design and publish a new course for your institution</p>
                                </div>
                                <a href="/admin/courses" class="btn btn-light">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Courses
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <div class="card form-card">
                            <div class="card-header">
                                <h4 class="mb-0">
                                    <i class="fas fa-book me-2"></i>Course Creation Form
                                </h4>
                            </div>

                            <!-- Alert Container -->
                            <div class="alert-container">
                                <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <i class="fas fa-check-circle me-2"></i>
                                        <%= success_msg %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                <% } %>
                                <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        <%= error_msg %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                <% } %>
                            </div>

                            <form id="courseForm" action="/admin/courses/add" method="POST" enctype="multipart/form-data">
                                <!-- Basic Information Section -->
                                <div class="form-section">
                                    <h5 class="section-title">
                                        <i class="fas fa-info-circle"></i>Basic Information
                                    </h5>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label required-field">
                                                <i class="fas fa-heading"></i>Course Title
                                            </label>
                                            <input type="text" class="form-control" name="title" required 
                                                   placeholder="e.g., Introduction to Mathematics">
                                            <div class="invalid-feedback">Please provide a course title.</div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                <i class="fas fa-tags"></i>Course Category
                                            </label>
                                            <select class="form-select" name="category">
                                                <option value="">Select Category</option>
                                                <option value="Mathematics">Mathematics</option>
                                                <option value="Science">Science</option>
                                                <option value="Computer Science">Computer Science</option>
                                                <option value="Business">Business</option>
                                                <option value="Arts">Arts</option>
                                                <option value="Languages">Languages</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required-field">
                                            <i class="fas fa-align-left"></i>Course Description
                                        </label>
                                        <textarea class="form-control form-textarea" name="description" required 
                                                  placeholder="Provide a detailed description of the course..."></textarea>
                                        <div class="invalid-feedback">Please provide a course description.</div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <label class="form-label">
                                                <i class="fas fa-signal"></i>Difficulty Level
                                            </label>
                                            <select class="form-select" name="difficulty">
                                                <option value="Beginner">Beginner</option>
                                                <option value="Intermediate">Intermediate</option>
                                                <option value="Advanced">Advanced</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label class="form-label required-field">
                                                <i class="fas fa-clock"></i>Duration (weeks)
                                            </label>
                                            <input type="number" class="form-control" name="duration" min="1" max="52" required 
                                                   placeholder="e.g., 12">
                                            <div class="invalid-feedback">Please provide a valid duration.</div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label class="form-label required-field">
                                                <i class="fas fa-user-tie"></i>Instructor
                                            </label>
                                            <select class="form-select" name="teacher_id" required>
                                                <option value="">Select Instructor</option>
                                                <% if (typeof teachers !== 'undefined' && teachers && teachers.length > 0) { %>
                                                    <% teachers.forEach(teacher => { %>
                                                        <option value="<%= teacher.id %>"><%= teacher.name %></option>
                                                    <% }); %>
                                                <% } else { %>
                                                    <option value="" disabled>No instructors available</option>
                                                <% } %>
                                            </select>
                                            <div class="invalid-feedback">Please select an instructor.</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Course Content Section -->
                                <div class="form-section">
                                    <h5 class="section-title">
                                        <i class="fas fa-book-open"></i>Course Content
                                    </h5>
                                    
                                    <div class="mb-4">
                                        <label class="form-label">
                                            <i class="fas fa-bullseye"></i>Learning Objectives
                                        </label>
                                        <div id="objectivesContainer">
                                            <div class="objective-item">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="objectives[]" 
                                                           placeholder="Enter learning objective (e.g., Understand basic algebra concepts)">
                                                    <button type="button" class="btn btn-outline-danger remove-objective">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary mt-2" id="addObjective">
                                            <i class="fas fa-plus me-2"></i>Add Objective
                                        </button>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-list-ol"></i>Course Outline
                                        </label>
                                        <textarea class="form-control form-textarea" name="outline" 
                                                  placeholder="Provide detailed course outline and syllabus..."></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-clipboard-check"></i>Prerequisites
                                        </label>
                                        <textarea class="form-control form-textarea" name="prerequisites" 
                                                  placeholder="List any prerequisites for this course..."></textarea>
                                    </div>
                                </div>

                                <!-- Course Features -->
                                <div class="form-section">
                                    <h5 class="section-title">
                                        <i class="fas fa-star"></i>Course Features
                                    </h5>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="feature-checkbox">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="feature_certificate" id="feature_certificate">
                                                    <label class="form-check-label" for="feature_certificate">
                                                        <i class="fas fa-certificate feature-icon text-warning"></i>Issue Certificate
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="feature-checkbox">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="feature_discussions" id="feature_discussions" checked>
                                                    <label class="form-check-label" for="feature_discussions">
                                                        <i class="fas fa-comments feature-icon text-info"></i>Enable Discussions
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="feature-checkbox">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="feature_quizzes" id="feature_quizzes">
                                                    <label class="form-check-label" for="feature_quizzes">
                                                        <i class="fas fa-question-circle feature-icon text-success"></i>Include Quizzes
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="feature-checkbox">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="feature_assignments" id="feature_assignments" checked>
                                                    <label class="form-check-label" for="feature_assignments">
                                                        <i class="fas fa-tasks feature-icon text-primary"></i>Include Assignments
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Media & Files Section -->
                                <div class="form-section">
                                    <h5 class="section-title">
                                        <i class="fas fa-images"></i>Media & Files
                                    </h5>
                                    
                                    <div class="mb-4">
                                        <label class="form-label">
                                            <i class="fas fa-image"></i>Course Thumbnail
                                        </label>
                                        <div class="file-upload-area" id="thumbnailUploadArea">
                                            <i class="fas fa-cloud-upload-alt"></i>
                                            <h5>Drag and drop course thumbnail here</h5>
                                            <p class="text-muted">or click to browse (JPG, PNG, GIF - Max 5MB)</p>
                                            <input type="file" class="form-control d-none" name="thumbnail" id="thumbnailInput" accept="image/*">
                                        </div>
                                        <div id="thumbnailPreview" class="mt-3 text-center"></div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-file-alt"></i>Additional Documents
                                        </label>
                                        <input type="file" class="form-control" name="documents" multiple 
                                               accept=".pdf,.doc,.docx,.txt,.ppt,.pptx">
                                        <div class="form-text">Upload syllabus, reading materials, etc. (Multiple files allowed)</div>
                                    </div>
                                </div>

                                <!-- Progress Bar -->
                                <div class="progress-container" id="progressContainer">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Uploading...</span>
                                        <span id="progressPercent">0%</span>
                                    </div>
                                    <div class="progress">
                                        <div id="progressBar" class="progress-bar" role="progressbar" style="width: 0%;"></div>
                                    </div>
                                </div>

                                <!-- Form Actions -->
                                <div class="form-section form-actions">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a href="/admin/courses" class="btn btn-light">
                                                <i class="fas fa-arrow-left me-2"></i>Cancel
                                            </a>
                                        </div>
                                        <div>
                                            <button type="button" class="btn btn-outline-primary me-2" id="previewBtn">
                                                <i class="fas fa-eye me-2"></i>Preview
                                            </button>
                                            <button type="submit" class="btn btn-success" id="submitBtn">
                                                <i class="fas fa-save me-2"></i>Create Course
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Objectives Management
        document.getElementById('addObjective').addEventListener('click', () => {
            const container = document.getElementById('objectivesContainer');
            const newObjective = document.createElement('div');
            newObjective.className = 'objective-item';
            newObjective.innerHTML = `
                <div class="input-group">
                    <input type="text" class="form-control" name="objectives[]" 
                           placeholder="Enter learning objective">
                    <button type="button" class="btn btn-outline-danger remove-objective">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            container.appendChild(newObjective);
        });

        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('remove-objective') || 
                e.target.closest('.remove-objective')) {
                const btn = e.target.classList.contains('remove-objective') ? e.target : e.target.closest('.remove-objective');
                btn.closest('.objective-item').remove();
            }
        });

        // Thumbnail Upload Area
        const thumbnailUploadArea = document.getElementById('thumbnailUploadArea');
        const thumbnailInput = document.getElementById('thumbnailInput');
        
        thumbnailUploadArea.addEventListener('click', () => {
            thumbnailInput.click();
        });
        
        thumbnailUploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            thumbnailUploadArea.classList.add('dragover');
        });
        
        thumbnailUploadArea.addEventListener('dragleave', () => {
            thumbnailUploadArea.classList.remove('dragover');
        });
        
        thumbnailUploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            thumbnailUploadArea.classList.remove('dragover');
            
            if (e.dataTransfer.files.length) {
                thumbnailInput.files = e.dataTransfer.files;
                handleThumbnailPreview(e.dataTransfer.files[0]);
            }
        });

        // Thumbnail Preview
        function handleThumbnailPreview(file) {
            const preview = document.getElementById('thumbnailPreview');
            
            if (file) {
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    thumbnailInput.value = '';
                    preview.innerHTML = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `
                        <div class="preview-container">
                            <img src="${e.target.result}" alt="Preview" class="thumbnail-preview">
                            <button type="button" class="preview-remove" onclick="document.getElementById('thumbnailPreview').innerHTML = ''; document.getElementById('thumbnailInput').value = '';">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    `;
                };
                reader.readAsDataURL(file);
            }
        }

        thumbnailInput.addEventListener('change', function(e) {
            if (e.target.files.length) {
                handleThumbnailPreview(e.target.files[0]);
            }
        });

        // Form Validation and Submission
        document.getElementById('courseForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            const requiredFields = this.querySelectorAll('[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    isValid = false;
                    field.classList.add('is-invalid');
                } else {
                    field.classList.remove('is-invalid');
                }
            });

            if (!isValid) {
                e.preventDefault();
                // Scroll to first invalid field
                const firstInvalid = this.querySelector('.is-invalid');
                firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                firstInvalid.focus();
            } else {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creating...';
                submitBtn.disabled = true;
                
                // Show progress bar for file uploads
                const files = document.querySelector('input[type="file"]').files;
                if (files.length > 0) {
                    document.getElementById('progressContainer').style.display = 'block';
                    simulateProgress();
                }
            }
        });

        // Simulate progress for file upload
        function simulateProgress() {
            let progress = 0;
            const progressBar = document.getElementById('progressBar');
            const progressPercent = document.getElementById('progressPercent');
            
            const interval = setInterval(() => {
                progress += Math.random() * 10;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(interval);
                }
                
                progressBar.style.width = `${progress}%`;
                progressPercent.textContent = `${Math.round(progress)}%`;
            }, 200);
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Preview button functionality
        document.getElementById('previewBtn').addEventListener('click', function() {
            alert('Preview functionality would open a modal or new page with course preview');
            // In a real implementation, this would gather form data and show a preview
        });

        // Real-time validation
        document.querySelectorAll('[required]').forEach(field => {
            field.addEventListener('blur', function() {
                if (!this.value.trim()) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                }
            });
        });
    </script>
