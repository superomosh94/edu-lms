<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header', { title: "Courses" }) %>
<%- include('../partials/navigation') %>

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Courses</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    background: #f4f6f8;
    color: #333;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }

 

  .container {
    display: flex;
    flex: 1;
    overflow: hidden;
  }

  aside {
    /* margin-top: 20px; */
    width: 220px;
    background: #111;
    color: #fff;
    padding: 20px;
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 64px; /* height of header */
    bottom: 0;
    left: 0;
    overflow-y: auto;
  }

  aside h3 {
    font-size: 1.1rem;
    margin-bottom: 15px;
    border-bottom: 1px solid #444;
    padding-bottom: 5px;
  }

  aside a {
    display: block;
    color: #fff;
    padding: 10px;
    text-decoration: none;
    border-radius: 5px;
    margin-bottom: 5px;
    font-size: 0.95rem;
    transition: background 0.3s;
  }

  aside a:hover {
    background: rgba(255,255,255,0.1);
  }

  main {
    flex: 1;
    margin-left: 240px; /* width of sidebar + padding */
    padding: 20px;
    overflow-y: auto;
    height: calc(100vh - 64px);
  }

  h1 {
    margin-top: 0;
    color: #1e3c72;
    font-size: 1.8rem;
    margin-bottom: 15px;
  }

  .search-box {
    margin-bottom: 20px;
    position: relative;
  }

  .search-box input {
    width: 100%;
    padding: 10px 10px 10px 40px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 0.95rem;
  }

  .search-box i {
    position: absolute;
    top: 50%;
    left: 12px;
    transform: translateY(-50%);
    color: #888;
  }

  .course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 20px;
  }

  .course-card {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .course-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
  }

  .course-card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .card-body {
    padding: 15px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-title {
    font-size: 1.1rem;
    margin: 0 0 8px;
    font-weight: bold;
    color: #1e3c72;
  }

  .card-text {
    font-size: 0.9rem;
    color: #555;
    flex-grow: 1;
  }

  small {
    color: #888;
    font-size: 0.8rem;
  }

  .btn {
    display: block;
    text-align: center;
    padding: 10px;
    background: #1e90ff;
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    margin-top: 10px;
    transition: background 0.3s ease;
  }

  .btn:hover {
    background: #1565c0;
  }

  @media (max-width: 768px) {
    aside {
      position: relative;
      width: 100%;
      top: 0;
      height: auto;
    }

    main {
      margin-left: 0;
    }
  }
</style>
</head>

<body>

<!-- <header>EDU LMS - Courses</header> -->

<div class="container">
  <!-- Sidebar -->
  <aside>
    <h3>Menu</h3>
    <a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
    <a href="/courses"><i class="fas fa-book"></i> Courses</a>
    <a href="/assignments"><i class="fas fa-tasks"></i> Assignments</a>
    <% if (user && (user.role === 'teacher' || user.role === 'admin')) { %>
      <a href="/courses/create"><i class="fas fa-plus-circle"></i> Create Course</a>
    <% } %>
  </aside>

  <!-- Main Content -->
  <main>
    <h1>Courses</h1>

    <!-- Search -->
    <div class="search-box">
      <i class="fas fa-search"></i>
      <input type="text" id="course-search" placeholder="Search courses...">
    </div>

    <!-- Courses Grid -->
    <div class="course-grid" id="courses-grid">
      <% if (courses && courses.length > 0) { %>
        <% courses.forEach(course => { %>
          <div class="course-card" data-title="<%= course.title.toLowerCase() %>" data-description="<%= (course.description || '').toLowerCase() %>">
            <img src="<%= course.image || '/public/images/placeholder/course-300x200.svg' %>" alt="<%= course.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= (course.description || '').substring(0, 100) %>...</p>
              <small>Instructor: <%= course.instructor || 'N/A' %></small>
              <a href="/courses/view/<%= course.id %>" class="btn">
                <%= course.isEnrolled ? 'Continue Learning' : 'View Course' %>
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No courses available.</p>
      <% } %>
    </div>
  </main>
</div>

<script>
const searchInput = document.getElementById('course-search');

function filterCourses() {
  const searchTerm = searchInput.value.toLowerCase();
  document.querySelectorAll('.course-card').forEach(card => {
    const title = card.dataset.title;
    const description = card.dataset.description;
    card.style.display = (title.includes(searchTerm) || description.includes(searchTerm)) ? 'block' : 'none';
  });
}

searchInput.addEventListener('input', filterCourses);
</script>

</body>
</html>
