<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header', { title: "Courses" }) %>
<%- include('../partials/navigation') %>

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Courses</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
  :root {
    --gold-primary: #D4AF37;
    --gold-light: #F7E98E;
    --gold-dark: #B8860B;
    --gold-accent: #FFD700;
    --gold-bg: #FFFDF5;
    --gold-border: #E8D9A5;
    --bg-light: #fefefe;
    --bg-dark: #1a1a1a;
    --text-dark: #333;
    --text-medium: #555;
    --text-light: #777;
    --text-lighter: #999;
    --shadow: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-hover: 0 8px 25px rgba(0,0,0,0.15);
    --border-radius: 12px;
    --transition: all 0.3s ease;
  }

  * {
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    background: linear-gradient(135deg, #fcf9f0 0%, #f8f4e8 100%);
    color: var(--text-dark);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    line-height: 1.6;
  }

  .container {
    display: flex;
    flex: 1;
    overflow: hidden;
  }

  main {
    flex: 1;
    margin-left: 0; /* Sidebar is now handled by partial */
    padding: 30px;
    overflow-y: auto;
    height: calc(100vh - 70px);
    background: var(--gold-bg);
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    flex-wrap: wrap;
    gap: 15px;
  }

  h1 {
    margin: 0;
    color: var(--gold-dark);
    font-size: 2.2rem;
    font-weight: 700;
    position: relative;
    padding-bottom: 12px;
  }

  h1:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: linear-gradient(to right, var(--gold-primary), var(--gold-accent));
    border-radius: 2px;
  }

  .header-actions {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .search-box {
    position: relative;
    width: 100%;
    max-width: 400px;
  }

  .search-box input {
    width: 100%;
    padding: 14px 20px 14px 50px;
    border: 1px solid var(--gold-border);
    border-radius: var(--border-radius);
    font-size: 1rem;
    background: white;
    box-shadow: var(--shadow);
    transition: var(--transition);
    font-family: 'Inter', sans-serif;
  }

  .search-box input:focus {
    outline: none;
    border-color: var(--gold-primary);
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.2);
  }

  .search-box i {
    position: absolute;
    top: 50%;
    left: 20px;
    transform: translateY(-50%);
    color: var(--gold-dark);
    font-size: 1.1rem;
  }

  .filter-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 18px;
    background: white;
    border: 1px solid var(--gold-border);
    border-radius: var(--border-radius);
    color: var(--text-medium);
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: var(--shadow);
  }

  .filter-btn:hover {
    border-color: var(--gold-primary);
    color: var(--gold-dark);
  }

  .course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
  }

  .course-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    display: flex;
    flex-direction: column;
    transition: var(--transition);
    overflow: hidden;
    border: 1px solid var(--gold-border);
    position: relative;
  }

  .course-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-hover);
    border-color: var(--gold-primary);
  }

  .course-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    position: relative;
  }

  .course-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: var(--gold-primary);
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  }

  .card-body {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-title {
    font-size: 1.3rem;
    margin: 0 0 12px;
    font-weight: 600;
    color: var(--gold-dark);
    line-height: 1.4;
  }

  .card-text {
    font-size: 0.95rem;
    color: var(--text-medium);
    flex-grow: 1;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    font-size: 0.85rem;
  }

  .instructor {
    color: var(--text-light);
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .instructor i {
    color: var(--gold-primary);
  }

  .rating {
    color: var(--gold-accent);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .progress-container {
    margin-bottom: 20px;
  }

  .progress-label {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .progress-bar {
    height: 6px;
    background: #f0f0f0;
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(to right, var(--gold-primary), var(--gold-accent));
    border-radius: 3px;
  }

  .btn {
    display: block;
    text-align: center;
    padding: 14px;
    background: linear-gradient(to right, var(--gold-primary), var(--gold-accent));
    color: var(--text-dark);
    text-decoration: none;
    border-radius: var(--border-radius);
    font-weight: 600;
    margin-top: auto;
    transition: var(--transition);
    box-shadow: 0 3px 8px rgba(212, 175, 55, 0.3);
    border: none;
    cursor: pointer;
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
  }

  .btn:hover {
    background: linear-gradient(to right, var(--gold-dark), var(--gold-primary));
    color: white;
    box-shadow: 0 5px 15px rgba(212, 175, 55, 0.4);
    transform: translateY(-2px);
  }

  .btn-outline {
    background: transparent;
    border: 1px solid var(--gold-primary);
    color: var(--gold-dark);
    box-shadow: none;
  }

  .btn-outline:hover {
    background: var(--gold-primary);
    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-light);
    grid-column: 1 / -1;
  }

  .empty-state i {
    font-size: 4rem;
    color: var(--gold-light);
    margin-bottom: 20px;
  }

  .empty-state h3 {
    color: var(--text-lighter);
    margin-bottom: 15px;
    font-size: 1.5rem;
    font-weight: 500;
  }

  .empty-state p {
    max-width: 500px;
    margin: 0 auto 25px;
    line-height: 1.6;
  }

  .course-stats {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .stat-card {
    background: white;
    padding: 20px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    border-left: 4px solid var(--gold-primary);
    flex: 1;
    min-width: 200px;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--gold-dark);
    margin-bottom: 5px;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-light);
  }

  @media (max-width: 1024px) {
    .course-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 25px;
    }
  }

  @media (max-width: 768px) {
    main {
      padding: 20px;
    }
    
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .header-actions {
      width: 100%;
      justify-content: space-between;
    }
    
    .search-box {
      max-width: 100%;
    }
    
    .course-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }
    
    h1 {
      font-size: 1.8rem;
    }
    
    .course-stats {
      gap: 15px;
    }
    
    .stat-card {
      min-width: 150px;
    }
  }

  @media (max-width: 576px) {
    .course-grid {
      grid-template-columns: 1fr;
    }
    
    .header-actions {
      flex-direction: column;
      gap: 10px;
    }
    
    .filter-btn {
      width: 100%;
      justify-content: center;
    }
    
    .stat-card {
      min-width: 100%;
    }
  }
</style>
</head>

<body>

<div class="container">
  <!-- Sidebar Partial -->
  <div class="sidebar">
    <%- include('../partials/sidebar') %>
  </div>

  <!-- Main Content -->
  <main style="margin-left: 260px;">
    <div class="page-header">
      <h1>Courses</h1>
      <div class="header-actions">
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" id="course-search" placeholder="Search courses...">
        </div>
        <button class="filter-btn">
          <i class="fas fa-filter"></i>
          Filter
        </button>
      </div>
    </div>

    <!-- Course Stats -->
    <div class="course-stats">
      <div class="stat-card">
        <div class="stat-value"><%= courses ? courses.length : 0 %></div>
        <div class="stat-label">Total Courses</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">
          <% 
            let enrolledCount = 0;
            if (courses) {
              enrolledCount = courses.filter(course => course.isEnrolled).length;
            }
          %>
          <%= enrolledCount %>
        </div>
        <div class="stat-label">Enrolled Courses</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">
          <%
            let completedCount = 0;
            if (courses) {
              completedCount = courses.filter(course => course.progress && course.progress === 100).length;
            }
          %>
          <%= completedCount %>
        </div>
        <div class="stat-label">Completed</div>
      </div>
    </div>

    <!-- Courses Grid -->
    <div class="course-grid" id="courses-grid">
      <% if (courses && courses.length > 0) { %>
        <% courses.forEach(course => { %>
          <div class="course-card" data-title="<%= course.title.toLowerCase() %>" data-description="<%= (course.description || '').toLowerCase() %>">
            <img src="<%= course.image || '/public/images/placeholder/course-300x200.svg' %>" alt="<%= course.title %>" class="course-image">
            <% if (course.isEnrolled) { %>
              <div class="course-badge">Enrolled</div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= (course.description || '').substring(0, 100) %>...</p>
              
              <% if (course.isEnrolled && course.progress !== undefined) { %>
                <div class="progress-container">
                  <div class="progress-label">
                    <span>Progress</span>
                    <span><%= course.progress %>%</span>
                  </div>
                  <div class="progress-bar">
                    <div class="progress-fill" style="width: <%= course.progress %>%"></div>
                  </div>
                </div>
              <% } %>
              
              <div class="card-meta">
                <span class="instructor">
                  <i class="fas fa-user"></i>
                  <%= course.instructor || 'N/A' %>
                </span>
                <span class="rating">
                  <i class="fas fa-star"></i> 
                  <%= course.rating || '4.5' %>
                </span>
              </div>
              <a href="/courses/view/<%= course.id %>" class="btn">
                <%= course.isEnrolled ? 'Continue Learning' : 'View Course' %>
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-book-open"></i>
          <h3>No courses available</h3>
          <p>Check back later or create a new course if you're an instructor.</p>
          <% if (user && (user.role === 'teacher' || user.role === 'admin')) { %>
            <a href="/courses/create" class="btn btn-outline">
              <i class="fas fa-plus-circle"></i> Create Your First Course
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </main>
</div>

<script>
const searchInput = document.getElementById('course-search');

function filterCourses() {
  const searchTerm = searchInput.value.toLowerCase();
  const courseCards = document.querySelectorAll('.course-card');
  let visibleCount = 0;
  
  courseCards.forEach(card => {
    const title = card.dataset.title;
    const description = card.dataset.description;
    const isVisible = title.includes(searchTerm) || description.includes(searchTerm);
    card.style.display = isVisible ? 'block' : 'none';
    
    if (isVisible) visibleCount++;
  });
  
  // Show empty state if no courses match
  const emptyState = document.querySelector('.empty-state');
  if (emptyState) {
    emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
  }
}

searchInput.addEventListener('input', filterCourses);

// Add debounce to search for better performance
function debounce(func, wait) {
  let timeout;
  return function executedFunction(...args) {
    const later = () => {
      clearTimeout(timeout);
      func(...args);
    };
    clearTimeout(timeout);
    timeout = setTimeout(later, wait);
  };
}

const debouncedFilter = debounce(filterCourses, 300);
searchInput.addEventListener('input', debouncedFilter);

// Filter button functionality
const filterBtn = document.querySelector('.filter-btn');
filterBtn.addEventListener('click', function() {
  alert('Filter functionality would open here in a real application');
});
</script>

</body>
</html>