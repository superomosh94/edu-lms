<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<div class="container py-4">
    <h2><%= title %></h2>

    <% if (grades && grades.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                <% grades.forEach(g => { %>
                    <tr>
                        <td><%= g.course %></td>
                        <td><%= g.grade %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No grades available.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
