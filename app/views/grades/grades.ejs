<%- include('../partials/header', { title: 'Grades | Panel' }) %>
<%- include('../partials/navigation') %>

<div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <% if (user && user.role === 'admin') { %>
            <h2>Admin Panel</h2>
            <nav>
                <%- include('../partials/adminSidebar', { user: user, activePage: 'grades' }) %>
            </nav>
        <% } else { %>
            <h2>Student Panel</h2>
            <nav>
                <%- include('../partials/sidebar', { user: user, activePage: 'grades' }) %>
            </nav>
        <% } %>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Grades</h1>

        <% if (grades && grades.length > 0) { %>
            <table class="grades-table">
                <thead>
                    <tr>
                        <% if (!singleStudent) { %>
                            <th>Student Name</th>
                        <% } %>
                        <th>Course</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <% grades.forEach(g => { %>
                        <tr>
                            <% if (!singleStudent) { %>
                                <td><%= g.student_name %></td>
                            <% } %>
                            <td><%= g.course %></td>
                            <td><%= g.grade %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No grades available.</p>
        <% } %>
    </div>
</div>

<footer>
    <%- include('../partials/footer') %>
</footer>

<style>
body {
    margin: 0;
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #121212;
    color: #eee;
}

.container {
    display: flex;
    height: 100vh;
}

/* Sidebar */
.sidebar {
    width: 250px;
    background: linear-gradient(180deg, #121212, #1f1f1f);
    color: #ddd;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 0 8px rgba(0,0,0,0.3);
}

.sidebar h2 {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    padding: 20px 0;
    border-bottom: 1px solid #333;
}

.sidebar nav {
    display: flex;
    flex-direction: column;
}

.sidebar-link {
    display: block;
    padding: 14px 20px;
    color: #ccc;
    text-decoration: none;
    font-size: 15px;
    transition: background 0.2s ease, color 0.2s ease;
}

.sidebar-link.active,
.sidebar-link:hover {
    background: #1a73e8;
    color: white;
}

.sidebar-link i {
    margin-right: 10px;
}

/* Main Content */
.main-content {
    flex-grow: 1;
    padding: 30px;
    background: #1c1c1c;
    color: #eee;
}

.main-content h1 {
    margin-top: 0;
    font-size: 24px;
    border-bottom: 2px solid #333;
    padding-bottom: 10px;
    margin-bottom: 25px;
}

/* Grades Table */
.grades-table {
    width: 100%;
    border-collapse: collapse;
    background: #222;
    border-radius: 6px;
    overflow: hidden;
}

.grades-table th,
.grades-table td {
    padding: 14px 16px;
    text-align: left;
}

.grades-table th {
    background: #1a73e8;
    color: white;
}

.grades-table tr:nth-child(even) {
    background: #2a2a2a;
}

.grades-table tr:hover {
    background: #333;
}

/* Footer */
footer {
    padding: 15px 20px;
    background: #121212;
    color: #aaa;
    text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
    .container {
        flex-direction: column;
    }
    .sidebar {
        width: 100%;
        flex-direction: row;
        overflow-x: auto;
    }
    .sidebar h2 {
        display: none;
    }
    .sidebar nav a {
        flex: 1;
        text-align: center;
        font-size: 14px;
        padding: 12px;
        border-left: none;
        border-bottom: 3px solid transparent;
    }
    .sidebar nav a.active {
        border-bottom: 3px solid #1a73e8;
    }
    footer {
        margin-left: 0;
    }
}
</style>
