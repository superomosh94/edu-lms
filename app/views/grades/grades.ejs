<%- include('../partials/header', { title: title }) %>
<%- include('../partials/navigation') %>

<div class="container flex-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <% if (user && user.role && user.role.toLowerCase() === 'admin') { %>
            <h2>Admin Panel</h2>
            <nav>
                <%- include('../partials/adminSidebar', { user: user, activePage: activePage }) %>
            </nav>
        <% } else { %>
            <h2>Student Panel</h2>
            <nav>
                <%- include('../partials/sidebar', { user: user, activePage: activePage }) %>
            </nav>
        <% } %>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <h2><%= title %></h2>

        <% if (grades && grades.length > 0) { %>
            <div class="table-responsive">
                <table class="grades-table">
                    <thead>
                        <tr>
                            <% if (!singleStudent) { %>
                                <th>Student Name</th>
                            <% } %>
                            <th>Course</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% grades.forEach(grade => { %>
                            <tr>
                                <% if (!singleStudent) { %>
                                    <td><%= grade.student_name %></td>
                                <% } %>
                                <td><%= grade.course %></td>
                                <td><%= grade.grade %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert">No grades available.</div>
        <% } %>
    </main>
</div>

<%- include('../partials/footer') %>

<style>
body {
    margin: 0;
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #1d2022;
    color: #333;
}

.flex-container {
    display: flex;
    min-height: 100vh;
}

/* Sidebar */
.sidebar {
    width: 250px;
    background: linear-gradient(180deg, #0d1117, #161b22);
    color: #fff;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 0 8px rgba(0,0,0,0.3);
}

.sidebar h2 {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    padding: 20px 0;
    border-bottom: 1px solid #333;
}

.sidebar nav {
    display: flex;
    flex-direction: column;
}

.sidebar-link {
    display: block;
    padding: 14px 20px;
    color: #ccc;
    text-decoration: none;
    font-size: 15px;
    transition: background 0.2s ease, color 0.2s ease;
}

.sidebar-link.active,
.sidebar-link:hover {
    background: #1a73e8;
    color: white;
}

.sidebar-link i {
    margin-right: 10px;
}

/* Main Content */
.main-content {
    flex-grow: 1;
    padding: 30px;
    background: #fff;
    border-left: 1px solid #ddd;
}

.main-content h2 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #1a73e8;
    border-bottom: 2px solid #ddd;
    padding-bottom: 10px;
}

/* Grades Table */
.table-responsive {
    overflow-x: auto;
}

.grades-table {
    width: 100%;
    border-collapse: collapse;
    box-shadow: 0 3px 8px rgba(0,0,0,0.05);
    background: white;
}

.grades-table th,
.grades-table td {
    padding: 14px;
    text-align: left;
    border-bottom: 1px solid #eee;
}

.grades-table th {
    background: #1a73e8;
    color: white;
}

.grades-table tr:nth-child(even) {
    background: #f9f9f9;
}

.grades-table tr:hover {
    background: #f1f1f1;
}

/* Alerts */
.alert {
    padding: 15px;
    background-color: #f9f9f9;
    border-left: 4px solid #1a73e8;
    margin-top: 20px;
    font-size: 16px;
}

/* Footer */
footer {
    padding: 15px;
    text-align: center;
    background: #f4f6f8;
    border-top: 1px solid #ddd;
    font-size: 14px;
    color: #666;
}

/* Responsive */
@media (max-width: 768px) {
    .flex-container {
        flex-direction: column;
    }
    .sidebar {
        width: 100%;
        flex-direction: row;
        overflow-x: auto;
    }
    .sidebar h2 {
        display: none;
    }
    .sidebar nav a {
        flex: 1;
        text-align: center;
        font-size: 14px;
        padding: 12px;
        border-left: none;
        border-bottom: 3px solid transparent;
    }
    .sidebar nav a.active {
        border-bottom: 3px solid #1a73e8;
    }
    .main-content {
        padding: 20px;
    }
}
</style>
