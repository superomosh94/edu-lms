<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #f4f6f9;
  }

  /* Layout */
  .layout {
    display: flex;
  }

  /* Sidebar */
  .sidebar {
    width: 250px;
    background: #0d1117;
    color: #fff;
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    padding: 20px;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    transition: transform 0.3s ease-in-out;
    z-index: 1000;
  }

  /* Hamburger Menu */
  .hamburger {
    display: none;
    font-size: 1.5rem;
    color: white;
    cursor: pointer;
    padding: 12px;
    background: #1f6feb;
    border-radius: 8px;
    margin: 10px;
  }

  /* Main Content */
  .main-content {
    margin-left: 250px;
    padding: 20px;
    flex-grow: 1;
    width: calc(100% - 250px);
  }

  /* Brand */
  .brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 1.3rem;
    color: white;
    text-decoration: none;
    margin-bottom: 18px;
    background: linear-gradient(45deg, #1f6feb, #10b981);
    padding: 10px 14px;
    border-radius: 8px;
    transition: background 0.3s ease;
  }

  .brand:hover {
    background: linear-gradient(45deg, #10b981, #1f6feb);
  }

  .brand i {
    font-size: 1.4rem;
    color: #fff;
  }

  /* Divider */
  .sidebar hr {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin: 16px 0;
  }

  /* Navigation */
  .nav {
    list-style: none;
    padding: 0;
    margin: 0;
    flex-grow: 1;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 12px;
    color: rgba(255, 255, 255, 0.85);
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 8px;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 0.2s, color 0.2s;
  }

  .nav-link i {
    width: 20px;
    text-align: center;
    font-size: 1rem;
  }

  .nav-link:hover {
    background: rgba(31, 111, 235, 0.2);
    color: #fff;
  }

  .nav-link.active {
    background: linear-gradient(90deg, #1f6feb, #10b981);
    color: #fff;
    font-weight: 500;
  }

  /* User Info */
  .user-wrap {
    margin-top: auto;
    display: flex;
    align-items: center;
    gap: 12px;
    padding-top: 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .avatar {
    position: relative;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #1f6feb;
    color: white;
    font-weight: bold;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.15);
    flex-shrink: 0;
    text-decoration: none;
  }

  .avatar-initials {
    text-transform: uppercase;
  }

  .online-dot {
    position: absolute;
    right: 2px;
    bottom: 2px;
    width: 10px;
    height: 10px;
    background: #28a745;
    border: 2px solid #0d1117;
    border-radius: 50%;
  }

  .user-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: #fff;
    text-decoration: none;
    padding-bottom: 2px;
  }

  .user-name:hover {
    text-decoration: underline;
  }

  .user-role {
    font-size: 0.78rem;
    color: rgba(255, 255, 255, 0.65);
    margin-top: -2px;
  }

  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .sidebar {
      transform: translateX(-100%);
    }

    .sidebar.open {
      transform: translateX(0);
    }

    .main-content {
      margin-left: 0;
      width: 100%;
    }
  }
</style>

<div class="layout">
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <!-- Brand -->
    <a href="/" class="brand">
      <i class="fas fa-graduation-cap"></i> EDU LMS
    </a>
    <hr>

    <!-- Navigation -->
    <ul class="nav nav-pills flex-column mb-auto">
      <% if (menuItems && menuItems.length) { %>
        <% menuItems.forEach(item => { %>
          <li>
            <a href="<%= item.url %>" class="nav-link <%= activePage === item.page ? 'active' : '' %>">
              <i class="fas fa-<%= item.icon %>"></i> <span style="padding-left: 4px;"><%= item.label %></span>
            </a>
          </li>
        <% }) %>
      <% } %>
    </ul>

    <hr>

    <!-- User Info -->
    <div class="user-wrap">
      <a href="/settings/profile" class="avatar">
        <% if (user && user.name) {
            let parts = user.name.split(' ');
            let initials = parts.map(p => p[0]).join('').toUpperCase();
        %>
          <div class="avatar-initials"><%= initials %></div>
        <% } else { %>
          <div class="avatar-initials">U</div>
        <% } %>
        <span class="online-dot"></span>
      </a>
      <div style="display:flex;flex-direction:column; padding-left: 8px;">
        <a href="/settings/profile" class="user-name"><%= user?.name || 'User' %></a>
        <span class="user-role"><%= user?.roleName || user?.role || 'Member' %></span>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <header>
      <h1>Page Title</h1>
    </header>
    <section>
      <p>This is the page body content. It appears to the right of the sidebar.</p>
    </section>
    <footer>
      <p>Footer content here</p>
    </footer>
  </div>
</div>

<!-- Hamburger toggle -->
<div class="hamburger" onclick="toggleSidebar()">
  <i class="fas fa-bars"></i>
</div>

<script>
  function toggleSidebar() {
    document.getElementById('sidebar').classList.toggle('open');
  }
</script>
