<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #f4f6f9;
  }

  .sidebar {
    width: 250px;
    background: #0d1117;
    color: #fff;
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    padding: 18px;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
  }

  .sidebar .brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 1.25rem;
    color: white;
    text-decoration: none;
    margin-bottom: 16px;
    background: linear-gradient(45deg, #1f6feb, #10b981);
    padding: 6px 10px;
    border-radius: 8px;
  }

  .sidebar .brand i {
    font-size: 1.4rem;
    color: #fff;
  }

  .sidebar hr {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin: 14px 0 20px;
  }

  .sidebar .nav {
    list-style: none;
    padding: 0;
    margin: 0;
    flex-grow: 1;
  }

  .sidebar .nav-link {
    display: flex;
    align-items: center;
    gap: 12px;
    color: rgba(255, 255, 255, 0.85);
    padding: 10px 14px;
    border-radius: 6px;
    margin-bottom: 6px;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 0.2s, color 0.2s;
  }

  .sidebar .nav-link i {
    width: 20px;
    text-align: center;
    font-size: 1rem;
  }

  .sidebar .nav-link:hover {
    background: rgba(31, 111, 235, 0.2);
    color: #fff;
  }

  .sidebar .nav-link.active {
    background: linear-gradient(90deg, #1f6feb, #10b981);
    color: #fff;
    font-weight: 500;
  }

  .sidebar .user-wrap {
    margin-top: auto;
    display: flex;
    align-items: center;
    gap: 10px;
    padding-top: 14px;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .sidebar .avatar {
    position: relative;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #1f6feb;
    color: white;
    font-weight: bold;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.15);
    flex-shrink: 0;
  }

  .avatar-initials {
    text-transform: uppercase;
  }

  .sidebar .online-dot {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 10px;
    height: 10px;
    background: #28a745;
    border: 2px solid #0d1117;
    border-radius: 50%;
  }

  .sidebar .user-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: #fff;
    text-decoration: none;
  }

  .sidebar .user-name:hover {
    text-decoration: underline;
  }

  .sidebar .user-role {
    font-size: 0.78rem;
    color: rgba(255, 255, 255, 0.65);
    margin-top: -2px;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      padding-bottom: 12px;
    }
  }
</style>

<div class="sidebar">
  <!-- Brand -->
  <a href="/" class="brand">
    <i class="fas fa-graduation-cap"></i>
    EDU LMS
  </a>
  <hr>

  <ul class="nav nav-pills flex-column mb-auto">
    <% if (user && user.role === 'Admin') { %>
      <li><a href="/dashboard" class="nav-link <%= activePage==='dashboard'?'active':'' %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="/admin/users" class="nav-link <%= activePage==='users'?'active':'' %>"><i class="fas fa-users-cog"></i> User Management</a></li>
      <li><a href="/admin/courses" class="nav-link <%= activePage==='courses'?'active':'' %>"><i class="fas fa-book"></i> Course Management</a></li>
      <li><a href="/admin/reports" class="nav-link <%= activePage==='reports'?'active':'' %>"><i class="fas fa-chart-bar"></i> Reports</a></li>
      <li><a href="/admin/stats" class="nav-link <%= activePage==='stats'?'active':'' %>"><i class="fas fa-chart-pie"></i> System Stats</a></li>
      <li><a href="/admin/announcements" class="nav-link <%= activePage==='announcements'?'active':'' %>"><i class="fas fa-bullhorn"></i> Announcements</a></li>
      <li><a href="/admin/audit-logs" class="nav-link <%= activePage==='audit-logs'?'active':'' %>"><i class="fas fa-file-alt"></i> Audit Logs</a></li>
      <li><a href="/admin/settings" class="nav-link <%= activePage==='settings'?'active':'' %>"><i class="fas fa-sliders-h"></i> Settings</a></li>
      <li><a href="/admin/system" class="nav-link <%= activePage==='system'?'active':'' %>"><i class="fas fa-cogs"></i> System Settings</a></li>
    <% } else if (user && user.role === 'Teacher') { %>
      <li><a href="/teacher" class="nav-link <%= activePage==='dashboard'?'active':'' %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="/teacher/courses" class="nav-link <%= activePage==='courses'?'active':'' %>"><i class="fas fa-chalkboard-teacher"></i> My Courses</a></li>
      <li><a href="/teacher/assignments" class="nav-link <%= activePage==='assignments'?'active':'' %>"><i class="fas fa-tasks"></i> Assignments</a></li>
      <li><a href="/teacher/submissions" class="nav-link <%= activePage==='submissions'?'active':'' %>"><i class="fas fa-folder-open"></i> Student Submissions</a></li>
      <li><a href="/teacher/grades" class="nav-link <%= activePage==='grades'?'active':'' %>"><i class="fas fa-clipboard-check"></i> Gradebook</a></li>
      <li><a href="/teacher/announcements" class="nav-link <%= activePage==='announcements'?'active':'' %>"><i class="fas fa-bullhorn"></i> Announcements</a></li>
      <li><a href="/teacher/reports" class="nav-link <%= activePage==='reports'?'active':'' %>"><i class="fas fa-chart-line"></i> Reports</a></li>
    <% } else if (user && user.role === 'Student') { %>
      <li><a href="/student/dashboard" class="nav-link <%= activePage==='dashboard'?'active':'' %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="/student/courses" class="nav-link <%= activePage==='courses'?'active':'' %>"><i class="fas fa-book-open"></i> Enrolled Courses</a></li>
      <li><a href="/student/assignments" class="nav-link <%= activePage==='assignments'?'active':'' %>"><i class="fas fa-pencil-alt"></i> Assignments</a></li>
      <li><a href="/student/submissions" class="nav-link <%= activePage==='submissions'?'active':'' %>"><i class="fas fa-upload"></i> My Submissions</a></li>
      <li><a href="/student/grades" class="nav-link <%= activePage==='grades'?'active':'' %>"><i class="fas fa-chart-line"></i> My Grades</a></li>
      <li><a href="/student/recommendations" class="nav-link <%= activePage==='recommendations'?'active':'' %>"><i class="fas fa-lightbulb"></i> Recommendations</a></li>
      <li><a href="/student/notifications" class="nav-link <%= activePage==='notifications'?'active':'' %>"><i class="fas fa-bell"></i> Notifications</a></li>
      <li><a href="/settings/profile" class="nav-link <%= activePage==='profile'?'active':'' %>"><i class="fas fa-user"></i> Profile</a></li>
    <% } else if (user && (user.role==='Finance' || user.role==='Finance Officer')) { %>
      <li><a href="/dashboard/finance" class="nav-link <%= activePage==='dashboard'?'active':'' %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="/finance/payments" class="nav-link <%= activePage==='payments'?'active':'' %>"><i class="fas fa-credit-card"></i> Payments</a></li>
      <li><a href="/finance/invoices" class="nav-link <%= activePage==='invoices'?'active':'' %>"><i class="fas fa-file-invoice-dollar"></i> Invoices</a></li>
      <li><a href="/finance/reports" class="nav-link <%= activePage==='reports'?'active':'' %>"><i class="fas fa-receipt"></i> Financial Reports</a></li>
    <% } %>
  </ul>

  <hr>

  <!-- User Info -->
  <div class="user-wrap">
    <a href="/settings/profile" class="avatar">
      <% if (user && user.name) {
           let parts = user.name.split(' ');
           let initials = parts.map(p => p[0]).join('').toUpperCase();
      %>
        <div class="avatar-initials"><%= initials %></div>
      <% } else { %>
        <div class="avatar-initials">U</div>
      <% } %>
      <span class="online-dot"></span>
    </a>
    <div style="display:flex;flex-direction:column;">
      <a href="/settings/profile" class="user-name"><%= user && user.name ? user.name : 'User' %></a>
      <span class="user-role"><%= user && (user.roleName || user.role) ? (user.roleName || user.role) : 'Member' %></span>
    </div>
  </div>
</div>
