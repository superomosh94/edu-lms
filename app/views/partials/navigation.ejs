}

/* Individual Right Menu Items */
.theme-container,
.notification-container,
.message-container,
.profile-container {
  display: flex;
  align-items: center;
}

/* Navigation Links */
.navbar .nav-link { 
  color: rgba(255, 255, 255, 0.95); 
  padding: 0.75rem 1rem; 
  border-radius: 8px; 
  transition: all 0.3s ease; 
  font-weight: 600;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin: 0 0.125rem;
  font-size: 0.9rem;
}

.navbar .nav-link::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 3px;
  background: var(--warning);
  transition: all 0.3s ease;
  transform: translateX(-50%);
  border-radius: 2px;
}

.navbar .nav-link:hover::before {
  width: 70%;
}

.navbar .nav-link:hover { 
  color: #ffffff; 
