}

/* Badge Positioning */
.badge {
  font-size: 0.65rem;
  padding: 0.35rem 0.5rem;
  min-width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translate(-60%, -40%);
  font-weight: 700;
  border: 2px solid var(--primary);
}

/* Notification and Message Pulse Effects */
.notification-pulse, .message-pulse {
  position: relative;
}

.notification-pulse.pulse-active::after, 
.message-pulse.pulse-active::after {
  content: '';
  position: absolute;
  top: -2px;
  right: -2px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: var(--warning);
  animation: notificationPulse 2s infinite;
  box-shadow: 0 0 10px var(--warning);
}

