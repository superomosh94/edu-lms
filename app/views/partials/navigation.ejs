<script>
document.addEventListener('DOMContentLoaded', () => {
  // Theme Toggle with enhanced functionality
  const toggle = document.getElementById('themeToggle');
  const currentTheme = localStorage.getItem('theme') || 'light';
  
  if (currentTheme === 'dark') {
    toggle.checked = true;
    document.documentElement.setAttribute('data-theme', 'dark');
    document.body.classList.add('dark-theme');
  }

  toggle.addEventListener('change', () => {
    if (toggle.checked) {
      document.documentElement.setAttribute('data-theme', 'dark');
      document.body.classList.add('dark-theme');
      localStorage.setItem('theme', 'dark');
    } else {
      document.documentElement.removeAttribute('data-theme');
      document.body.classList.remove('dark-theme');
      localStorage.setItem('theme', 'light');
    }
  });

  // Enhanced notification and message system
  const initializeNotifications = async () => {
    const role = "<%= user ? user.role : 'guest' %>";
    const paths = {
      student: "/student/notifications/count",
      teacher: "/teacher/notifications/count", 
      admin: "/admin/notifications/count",
      guest: "/notifications/count"
    };

    try {
      const response = await fetch(paths[role] || paths.guest);
      const data = await response.json();
      
      const badge = document.getElementById('notificationBadge');
      badge.textContent = data.count || 0;
      
      if (data.count > 0) {
        badge.classList.add('pulse');
        document.getElementById('notificationDropdown').classList.add('pulse-active');
      }
      
      // Update notification content
      const notifContainer = document.getElementById('notifications');
      if (data.notifications?.length) {
        notifContainer.innerHTML = data.notifications.map(n => `
          <li>
            <a class="dropdown-item d-flex align-items-start py-2" href="${n.link}">
              <i class="fas fa-${n.icon || 'bell'} mt-1 me-2 text-${n.type || 'warning'}"></i>
              <div class="flex-grow-1">
                <div class="fw-semibold">${n.title}</div>
                <small class="text-muted">${n.message}</small>
                <div class="text-xs text-muted mt-1">${new Date(n.timestamp).toLocaleDateString()}</div>
              </div>
            </a>
          </li>
        `).join('');
      } else {
        notifContainer.innerHTML = `
          <li>
            <div class="dropdown-item text-center text-muted py-4">
              <i class="fas fa-bell-slash fa-2x mb-2 opacity-50"></i>
              <div>No new notifications</div>
            </div>
          </li>
        `;
      }
    } catch (error) {
      console.error('Failed to load notifications:', error);
    }
  };

  // Initialize all components
  initializeNotifications();
  
  // Add interactive effects
  const interactiveElements = document.querySelectorAll('.nav-link, .dropdown-item, .btn');
  interactiveElements.forEach(el => {
    el.addEventListener('mouseenter', function() {
      this.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
    });
  });

  // Auto-refresh notifications every 30 seconds
  setInterval(initializeNotifications, 30000);
});
</script>