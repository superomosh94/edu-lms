<div class="course-card" data-course-id="<%= course._id %>">
    <style>
        .course-card {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .course-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border-color: #4f46e5;
        }

        .course-card.featured {
            border: 2px solid #f59e0b;
        }

        .course-card.enrolled {
            border-left: 4px solid #10b981;
        }

        .course-image {
            width: 100%;
            height: 160px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
        }

        .course-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .course-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.3));
            display: flex;
            align-items: flex-end;
            padding: 16px;
        }

        .course-category {
            background: rgba(255, 255, 255, 0.9);
            color: #1f2937;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .course-content {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .course-header {
            margin-bottom: 12px;
        }

        .course-code {
            font-size: 0.8rem;
            color: #6b7280;
            margin-bottom: 4px;
            font-weight: 500;
        }

        .course-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            line-height: 1.3;
        }

        .course-title a {
            color: inherit;
            text-decoration: none;
        }

        .course-title a:hover {
            color: #4f46e5;
        }

        .course-instructor {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
            font-size: 0.9rem;
            color: #6b7280;
        }

        .instructor-avatar {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background: #4f46e5;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            font-weight: 600;
        }

        .course-description {
            color: #4b5563;
            line-height: 1.5;
            margin-bottom: 16px;
            flex: 1;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .course-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
            font-size: 0.85rem;
            color: #6b7280;
        }

        .meta-items {
            display: flex;
            gap: 16px;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .course-rating {
            display: flex;
            align-items: center;
            gap: 4px;
            background: #fffbeb;
            padding: 4px 8px;
            border-radius: 12px;
            font-weight: 600;
            color: #92400e;
        }

        .course-progress {
            margin-bottom: 16px;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
            font-size: 0.85rem;
            color: #6b7280;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: #f3f4f6;
            border-radius: 3px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #4f46e5, #7c3aed);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .course-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 16px;
            border-top: 1px solid #f3f4f6;
            margin-top: auto;
        }

        .course-price {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
        }

        .course-price.free {
            color: #10b981;
        }

        .course-actions {
            display: flex;
            gap: 8px;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 0.9rem;
        }

        .btn-primary {
            background: #4f46e5;
            color: white;
        }

        .btn-primary:hover {
            background: #4338ca;
            transform: translateY(-1px);
        }

        .btn-secondary {
            background: #f3f4f6;
            color: #374151;
            border: 1px solid #d1d5db;
        }

        .btn-secondary:hover {
            background: #e5e7eb;
        }

        .btn-outline {
            background: transparent;
            color: #4f46e5;
            border: 1px solid #4f46e5;
        }

        .btn-outline:hover {
            background: #4f46e5;
            color: white;
        }

        .course-badges {
            position: absolute;
            top: 12px;
            right: 12px;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge-featured {
            background: #fef3c7;
            color: #92400e;
        }

        .badge-new {
            background: #d1fae5;
            color: #065f46;
        }

        .badge-popular {
            background: #fce7f3;
            color: #be185d;
        }

        .enrollment-status {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 4px 12px;
            background: #d1fae5;
            color: #065f46;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .course-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 12px;
            margin: 16px 0;
            padding: 16px;
            background: #f8fafc;
            border-radius: 8px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
            display: block;
        }

        .stat-label {
            font-size: 0.75rem;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Difficulty indicators */
        .difficulty-beginner { border-left: 4px solid #10b981; }
        .difficulty-intermediate { border-left: 4px solid #f59e0b; }
        .difficulty-advanced { border-left: 4px solid #ef4444; }

        /* Responsive design */
        @media (max-width: 768px) {
            .course-card {
                margin-bottom: 16px;
            }

            .course-content {
                padding: 16px;
            }

            .course-meta {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }

            .course-footer {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }

            .course-actions {
                width: 100%;
                justify-content: space-between;
            }

            .course-stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .course-stats {
                grid-template-columns: 1fr;
            }

            .course-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }

        /* Dark mode support */
        @media (prefers-color-scheme: dark) {
            .course-card {
                background: #1f2937;
                border-color: #374151;
            }

            .course-title {
                color: #f9fafb;
            }

            .course-description {
                color: #d1d5db;
            }

            .course-price {
                color: #f9fafb;
            }

            .btn-secondary {
                background: #374151;
                color: #d1d5db;
                border-color: #4b5563;
            }

            .course-footer {
                border-top-color: #374151;
            }

            .progress-bar {
                background: #374151;
            }

            .course-stats {
                background: #374151;
            }

            .stat-value {
                color: #f9fafb;
            }
        }
    </style>

    <div class="course-image">
        <% if (course.image) { %>
            <img src="<%= course.image %>" alt="<%= course.title %>">
        <% } else { %>
            <div style="background: linear-gradient(135deg, <%= course.color || '#667eea' %> 0%, <%= course.color ? '#764ba2' : '#764ba2' %> 100%); height: 100%;"></div>
        <% } %>
        <div class="course-overlay">
            <span class="course-category"><%= course.category || 'General' %></span>
        </div>
        
        <div class="course-badges">
            <% if (course.featured) { %>
                <span class="badge badge-featured">Featured</span>
            <% } %>
            <% if (course.isNew) { %>
                <span class="badge badge-new">New</span>
            <% } %>
            <% if (course.popular) { %>
                <span class="badge badge-popular">Popular</span>
            <% } %>
        </div>
    </div>

    <div class="course-content">
        <div class="course-header">
            <div class="course-code"><%= course.code || 'CS101' %></div>
            <h3 class="course-title">
                <a href="/courses/view/<%= course._id %>">
                    <%= course.title %>
                </a>
            </h3>
        </div>

        <% if (course.instructor) { %>
        <div class="course-instructor">
            <div class="instructor-avatar">
                <%= course.instructor.name ? course.instructor.name.charAt(0).toUpperCase() : 'I' %>
            </div>
            <span>Prof. <%= course.instructor.name %></span>
        </div>
        <% } %>

        <% if (course.description) { %>
        <div class="course-description">
            <%= course.description.substring(0, 120) %>
            <%= course.description.length > 120 ? '...' : '' %>
        </div>
        <% } %>

        <% if (course.stats) { %>
        <div class="course-stats">
            <div class="stat-item">
                <span class="stat-value"><%= course.stats.students || 0 %></span>
                <span class="stat-label">Students</span>
            </div>
            <div class="stat-item">
                <span class="stat-value"><%= course.stats.lessons || 0 %></span>
                <span class="stat-label">Lessons</span>
            </div>
            <div class="stat-item">
                <span class="stat-value"><%= course.stats.assignments || 0 %></span>
                <span class="stat-label">Assignments</span>
            </div>
        </div>
        <% } %>

        <div class="course-meta">
            <div class="meta-items">
                <div class="meta-item">
                    <span>üìö</span>
                    <span><%= course.lessonsCount || 0 %> lessons</span>
                </div>
                <div class="meta-item">
                    <span>‚è±Ô∏è</span>
                    <span><%= course.duration || 'Self-paced' %></span>
                </div>
            </div>
            <% if (course.rating) { %>
            <div class="course-rating">
                <span>‚≠ê</span>
                <span><%= course.rating %></span>
            </div>
            <% } %>
        </div>

        <% if (course.progress !== undefined) { %>
        <div class="course-progress">
            <div class="progress-header">
                <span>Course Progress</span>
                <span><%= course.progress %>%</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: <%= course.progress %>%;"></div>
            </div>
        </div>
        <% } %>

        <div class="course-footer">
            <div class="course-price <%= course.price === 0 ? 'free' : '' %>">
                <%= course.price === 0 ? 'Free' : `$${course.price}` %>
            </div>
            <div class="course-actions">
                <% if (course.isEnrolled) { %>
                    <span class="enrollment-status">‚úÖ Enrolled</span>
                    <a href="/courses/view/<%= course._id %>" class="btn btn-primary">
                        Continue
                    </a>
                <% } else if (course.price === 0) { %>
                    <button class="btn btn-primary" onclick="enrollCourse('<%= course._id %>')">
                        Enroll Free
                    </button>
                <% } else { %>
                    <button class="btn btn-outline" onclick="viewCourse('<%= course._id %>')">
                        View Details
                    </button>
                    <button class="btn btn-primary" onclick="enrollCourse('<%= course._id %>')">
                        Enroll Now
                    </button>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    function viewCourse(courseId) {
        window.location.href = `/courses/view/${courseId}`;
    }

    function enrollCourse(courseId) {
        // Show confirmation for paid courses
        const courseElement = document.querySelector(`[data-course-id="${courseId}"]`);
        const price = courseElement.querySelector('.course-price').textContent;
        
        if (price !== 'Free') {
            if (!confirm(`Enroll in this course for ${price}?`)) {
                return;
            }
        }

        // Simulate API call
        fetch(`/api/courses/${courseId}/enroll`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Successfully enrolled in the course!');
                window.location.reload();
            } else {
                alert('Enrollment failed: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred during enrollment.');
        });
    }

    // Add click handler for entire card
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.course-card');
        cards.forEach(card => {
            card.addEventListener('click', function(e) {
                // Don't trigger if action button was clicked
                if (!e.target.closest('.course-actions') && !e.target.closest('.course-badges')) {
                    const courseId = this.getAttribute('data-course-id');
                    viewCourse(courseId);
                }
            });
        });
    });
</script>