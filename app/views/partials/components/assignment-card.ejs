<div class="assignment-card" data-assignment-id="<%= assignment._id %>">
    <style>
        .assignment-card {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .assignment-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            border-color: #4f46e5;
        }

        .assignment-card.overdue {
            border-left: 4px solid #ef4444;
        }

        .assignment-card.due-soon {
            border-left: 4px solid #f59e0b;
        }

        .assignment-card.submitted {
            border-left: 4px solid #10b981;
        }

        .assignment-header {
            display: flex;
            justify-content: between;
            align-items: flex-start;
            margin-bottom: 12px;
        }

        .assignment-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0;
            flex: 1;
            line-height: 1.4;
        }

        .assignment-title a {
            color: inherit;
            text-decoration: none;
        }

        .assignment-title a:hover {
            color: #4f46e5;
        }

        .assignment-actions {
            display: flex;
            gap: 8px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .assignment-card:hover .assignment-actions {
            opacity: 1;
        }

        .btn-icon {
            width: 32px;
            height: 32px;
            border: none;
            border-radius: 6px;
            background: #f3f4f6;
            color: #6b7280;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-icon:hover {
            background: #4f46e5;
            color: white;
        }

        .assignment-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            margin-bottom: 16px;
            font-size: 0.85rem;
            color: #6b7280;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .meta-icon {
            width: 16px;
            height: 16px;
        }

        .assignment-description {
            color: #4b5563;
            line-height: 1.5;
            margin-bottom: 16px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .assignment-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 16px;
            border-top: 1px solid #f3f4f6;
        }

        .assignment-status {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending { background: #fef3c7; color: #92400e; }
        .status-submitted { background: #d1fae5; color: #065f46; }
        .status-graded { background: #dbeafe; color: #1e40af; }
        .status-late { background: #fee2e2; color: #991b1b; }

        .assignment-due-date {
            font-size: 0.85rem;
            color: #6b7280;
        }

        .assignment-due-date.overdue {
            color: #ef4444;
            font-weight: 600;
        }

        .assignment-due-date.due-soon {
            color: #f59e0b;
            font-weight: 600;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: #f3f4f6;
            border-radius: 3px;
            overflow: hidden;
            margin: 12px 0;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #4f46e5, #7c3aed);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .assignment-stats {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
            color: #6b7280;
            margin-top: 8px;
        }

        .attachment-list {
            margin-top: 12px;
        }

        .attachment-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 0;
            font-size: 0.85rem;
            color: #6b7280;
        }

        .attachment-icon {
            width: 16px;
            height: 16px;
        }

        .attachment-link {
            color: #4f46e5;
            text-decoration: none;
        }

        .attachment-link:hover {
            text-decoration: underline;
        }

        /* Course badge */
        .course-badge {
            display: inline-block;
            padding: 2px 8px;
            background: #e0e7ff;
            color: #3730a3;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            margin-bottom: 8px;
        }

        /* Priority indicators */
        .priority-high::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 20px 20px 0;
            border-color: transparent #ef4444 transparent transparent;
        }

        .priority-medium::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 20px 20px 0;
            border-color: transparent #f59e0b transparent transparent;
        }

        /* Responsive design */
        @media (max-width: 640px) {
            .assignment-card {
                padding: 16px;
            }

            .assignment-header {
                flex-direction: column;
                gap: 12px;
            }

            .assignment-actions {
                opacity: 1;
                align-self: flex-end;
            }

            .assignment-footer {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }

            .assignment-meta {
                gap: 12px;
            }
        }

        /* Dark mode support */
        @media (prefers-color-scheme: dark) {
            .assignment-card {
                background: #1f2937;
                border-color: #374151;
                color: #f9fafb;
            }

            .assignment-title {
                color: #f9fafb;
            }

            .assignment-description {
                color: #d1d5db;
            }

            .btn-icon {
                background: #374151;
                color: #d1d5db;
            }

            .assignment-footer {
                border-top-color: #374151;
            }

            .progress-bar {
                background: #374151;
            }
        }
    </style>

    <% if (assignment.course) { %>
    <div class="course-badge"><%= assignment.course.name %></div>
    <% } %>

    <div class="assignment-header">
        <h3 class="assignment-title">
            <a href="/assignments/view/<%= assignment._id %>">
                <%= assignment.title %>
            </a>
        </h3>
        <div class="assignment-actions">
            <% if (assignment.status === 'pending' && !assignment.submitted) { %>
                <button class="btn-icon" title="Submit Assignment" onclick="submitAssignment('<%= assignment._id %>')">
                    üì§
                </button>
            <% } %>
            <button class="btn-icon" title="View Details" onclick="viewAssignment('<%= assignment._id %>')">
                üëÅÔ∏è
            </button>
            <% if (user.role === 'teacher' || user.role === 'admin') { %>
                <button class="btn-icon" title="Edit Assignment" onclick="editAssignment('<%= assignment._id %>')">
                    ‚úèÔ∏è
                </button>
            <% } %>
        </div>
    </div>

    <div class="assignment-meta">
        <div class="meta-item">
            <span class="meta-icon">üìÖ</span>
            <span>Due: <%= new Date(assignment.dueDate).toLocaleDateString() %></span>
        </div>
        <div class="meta-item">
            <span class="meta-icon">‚è±Ô∏è</span>
            <span><%= assignment.points %> points</span>
        </div>
        <% if (assignment.estimatedTime) { %>
        <div class="meta-item">
            <span class="meta-icon">üïí</span>
            <span><%= assignment.estimatedTime %> min</span>
        </div>
        <% } %>
    </div>

    <% if (assignment.description) { %>
    <div class="assignment-description">
        <%= assignment.description.substring(0, 150) %>
        <%= assignment.description.length > 150 ? '...' : '' %>
    </div>
    <% } %>

    <% if (assignment.attachments && assignment.attachments.length > 0) { %>
    <div class="attachment-list">
        <% assignment.attachments.forEach(attachment => { %>
        <div class="attachment-item">
            <span class="attachment-icon">üìé</span>
            <a href="<%= attachment.url %>" class="attachment-link" target="_blank">
                <%= attachment.name %>
            </a>
        </div>
        <% }); %>
    </div>
    <% } %>

    <% if (assignment.progress !== undefined) { %>
    <div class="progress-bar">
        <div class="progress-fill" style="width: <%= assignment.progress %>%;"></div>
    </div>
    <div class="assignment-stats">
        <span>Progress: <%= assignment.progress %>%</span>
        <span><%= assignment.completedTasks %>/<%= assignment.totalTasks %> tasks</span>
    </div>
    <% } %>

    <div class="assignment-footer">
        <div class="assignment-status">
            <% const status = assignment.status || 'pending'; %>
            <span class="status-badge status-<%= status %>">
                <%= status %>
            </span>
            <% if (assignment.grade) { %>
            <span class="grade">Grade: <%= assignment.grade %>/<%= assignment.points %></span>
            <% } %>
        </div>
        <div class="assignment-due-date <%= assignment.isOverdue ? 'overdue' : assignment.isDueSoon ? 'due-soon' : '' %>">
            <% if (assignment.isOverdue) { %>
                Overdue
            <% } else if (assignment.isDueSoon) { %>
                Due soon
            <% } else { %>
                Due in <%= assignment.daysUntilDue %> days
            <% } %>
        </div>
    </div>
</div>

<script>
    function viewAssignment(assignmentId) {
        window.location.href = `/assignments/view/${assignmentId}`;
    }

    function editAssignment(assignmentId) {
        window.location.href = `/assignments/edit/${assignmentId}`;
    }

    function submitAssignment(assignmentId) {
        window.location.href = `/assignments/submit/${assignmentId}`;
    }

    // Add click handler for entire card
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.assignment-card');
        cards.forEach(card => {
            card.addEventListener('click', function(e) {
                // Don't trigger if action button was clicked
                if (!e.target.closest('.assignment-actions')) {
                    const assignmentId = this.getAttribute('data-assignment-id');
                    viewAssignment(assignmentId);
                }
            });
        });
    });
</script>