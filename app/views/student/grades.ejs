<%- include('../partials/header', { title: 'Grades | Student Panel' }) %>
<%- include('../partials/navigation') %>

<div class="student-page">
  <aside class="sidebar">
    <%- include('../partials/sidebar') %>
  </aside>

  <main class="content">
    <header class="page-header">
      <h1><%= title %></h1>
    </header>

    <section class="page-content">
      <% if (grades && grades.length > 0) { %>
        <ul class="item-list">
          <% grades.forEach(grade => { %>
            <li class="item-card">
              <h3><%= grade.assignmentTitle %></h3>
              <p>Grade: <strong><%= grade.grade %></strong></p>
              <span class="item-date">Submitted: <%= new Date(grade.submittedAt).toLocaleDateString() %></span>
            </li>
          <% }) %>
        </ul>

        <div class="grade-summary">
          <p><strong>Average Grade:</strong> <%= overallStats.averageGrade %></p>
          <p><strong>Total Assignments:</strong> <%= overallStats.totalAssignments %></p>
          <p><strong>Completed Assignments:</strong> <%= overallStats.completedAssignments %></p>
          <p><strong>Pending Assignments:</strong> <%= overallStats.pendingAssignments %></p>
        </div>
      <% } else { %>
        <p>No grades available.</p>
      <% } %>
    </section>
  </main>
</div>

<footer><%- include('../partials/footer') %></footer>

<style>
body.student-page {
  display: flex;
  font-family: 'Segoe UI', Arial, sans-serif;
  background: #f4f6f8;
  margin: 0;
  padding: 0;
  min-height: 100vh;
}
.sidebar {
  width: 240px;
  background: #2c3e50;
  color: white;
  padding: 20px;
  position: fixed;
  height: 100%;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.2);
}
.content {
  margin-left: 240px;
  padding: 20px;
  flex-grow: 1;
}
.page-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 20px;
}
.page-header h1 {
  margin: 0;
  font-size: 1.8rem;
}
.page-content {
  background: white;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.item-list {
  list-style: none;
  padding: 0;
}
.item-card {
  padding: 15px;
  border-bottom: 1px solid #e0e0e0;
  border-radius: 4px;
  margin-bottom: 10px;
  background: #f9f9f9;
}
.item-card h3 {
  margin: 0 0 5px;
  font-size: 1.1rem;
}
.item-card p {
  margin: 0;
  font-size: 0.95rem;
}
.item-date {
  display: block;
  margin-top: 8px;
  font-size: 0.85rem;
  color: #777;
}
.grade-summary {
  margin-top: 20px;
  padding: 15px;
  background: #f9f9f9;
  border-radius: 5px;
  box-shadow: 0 1px 5px rgba(0,0,0,0.1);
}
footer {
  margin-left: 120px;
  padding: 15px 20px;
  background: #fff;
  border-top: 1px solid #e0e0e0;
  text-align: center;
  font-size: 0.9rem;
  color: #555;
}
@media (max-width: 1024px) {
  body.student-page {
    flex-direction: column;
  }
  .sidebar {
    width: 100%;
    position: relative;
    height: auto;
  }
  .content {
    margin-left: 0;
    padding: 15px;
  }
  footer {
    margin-left: 0;
  }
}
</style>
