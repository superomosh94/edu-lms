<%- include('../partials/header', { title: 'Assignment Detail | Student Panel' }) %>
<%- include('../partials/navigation') %>

<div class="student-page">
  <aside class="sidebar">
    <%- include('../partials/sidebar', { user: user, activePage: 'assignments' }) %>
  </aside>

  <main class="content">
    <header class="page-header">
      <h1>Assignment Detail</h1>
    </header>

    <section class="page-content">
      <% if (assignment) { %>
        <h2><%= assignment.title %></h2>
        <p><%= assignment.description %></p>

        <ul>
          <li>Due Date: <%= new Date(assignment.dueDate).toLocaleString() %></li>
          <li>Status: <strong><%= submission ? "Submitted" : "Pending" %></strong></li>
          <% if (submission) { %>
            <li>Grade: <%= submission.grade !== null ? submission.grade : "Not graded yet" %></li>
            <li>Submitted At: <%= new Date(submission.submittedAt).toLocaleString() %></li>
          <% } %>
        </ul>
      <% } else { %>
        <p>No assignment details found.</p>
      <% } %>
    </section>
  </main>
</div>

<footer><%- include('../partials/footer') %></footer>

<style>
body.student-page {
  display: flex;
  font-family: 'Segoe UI', Arial, sans-serif;
  background: #f4f6f8;
  margin: 0;
  padding: 0;
  min-height: 100vh;
}

.sidebar {
  width: 240px;
  background: #2c3e50;
  color: white;
  padding: 20px;
  position: fixed;
  height: 100%;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.2);
}

.content {
  margin-left: 240px;
  padding: 20px;
  flex-grow: 1;
}

.page-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 20px;
}
.page-header h1 {
  margin: 0;
  font-size: 1.8rem;
}

.page-content {
  background: white;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.page-content h2 {
  margin-top: 0;
}

.page-content ul {
  list-style: none;
  padding: 0;
}

.page-content li {
  margin-bottom: 8px;
}

footer {
  margin-left: 120px;
  padding: 15px 20px;
  background: #fff;
  border-top: 1px solid #e0e0e0;
  text-align: center;
  font-size: 0.9rem;
  color: #555;
}

@media (max-width: 1024px) {
  body.student-page {
    flex-direction: column;
  }
  .sidebar {
    width: 100%;
    position: relative;
    height: auto;
  }
  .content {
    margin-left: 0;
    padding: 15px;
  }
  footer {
    margin-left: 0;
  }
}
</style>
