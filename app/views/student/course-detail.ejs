<%- include('../partials/header', { title: 'Course Detail | Student Panel' }) %>
<%- include('../partials/navigation') %>

<div class="student-page">
  <aside class="sidebar">
    <%- include('../partials/sidebar') %>
  </aside>

  <main class="content">
    <header class="page-header">
      <h1><%= title %></h1>
    </header>

    <section class="page-content">
      <% if (course) { %>
        <h2><%= course.title %></h2>
        <p><%= course.description %></p>
        <p><strong>Category:</strong> <%= course.category %></p>
        <p><strong>Instructor:</strong> <%= course.instructorName %></p>

        <h3>Assignments</h3>
        <% if (assignments && assignments.length > 0) { %>
          <ul class="assignments-list">
            <% assignments.forEach(assignment => { %>
              <li class="assignment-card">
                <h4><%= assignment.title %></h4>
                <p>Status: <strong><%= assignment.submissionStatus %></strong></p>
                <% if (assignment.grade) { %>
                  <p>Grade: <strong><%= assignment.grade %></strong></p>
                <% } %>
                <span class="assignment-date">Due: <%= new Date(assignment.dueDate).toLocaleString() %></span>
                <a href="/student/assignments/<%= assignment.id %>" class="view-assignment-btn">View Assignment</a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No assignments available for this course.</p>
        <% } %>
      <% } else { %>
        <p>Course details not found.</p>
      <% } %>
    </section>
  </main>
</div>

<footer><%- include('../partials/footer') %></footer>

<style>
body.student-page {
  display: flex;
  font-family: 'Segoe UI', Arial, sans-serif;
  background: #f4f6f8;
  margin: 0;
  padding: 0;
  min-height: 100vh;
}
.sidebar {
  width: 240px;
  background: #2c3e50;
  color: white;
  padding: 20px;
  position: fixed;
  height: 100%;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.2);
}
.content {
  margin-left: 240px;
  padding: 20px;
  flex-grow: 1;
}
.page-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 20px;
}
.page-header h1 {
  margin: 0;
  font-size: 1.8rem;
}
.page-content {
  background: white;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.assignments-list {
  list-style: none;
  padding: 0;
}
.assignment-card {
  padding: 15px;
  border-bottom: 1px solid #e0e0e0;
  border-radius: 4px;
  margin-bottom: 10px;
  background: #f9f9f9;
}
.assignment-card h4 {
  margin: 0 0 5px;
  font-size: 1.1rem;
}
.assignment-card p {
  margin: 0;
  font-size: 0.95rem;
}
.assignment-date {
  display: block;
  margin-top: 8px;
  font-size: 0.85rem;
  color: #777;
}
.view-assignment-btn {
  display: inline-block;
  margin-top: 10px;
  padding: 8px 12px;
  background: #667eea;
  color: white;
  text-decoration: none;
  border-radius: 4px;
}
.view-assignment-btn:hover {
  background: #5563c1;
}
footer {
  margin-left: 120px;
  padding: 15px 20px;
  background: #fff;
  border-top: 1px solid #e0e0e0;
  text-align: center;
  font-size: 0.9rem;
  color: #555;
}
@media (max-width: 1024px) {
  body.student-page {
    flex-direction: column;
  }
  .sidebar {
    width: 100%;
    position: relative;
    height: auto;
  }
  .content {
    margin-left: 0;
    padding: 15px;
  }
  footer {
    margin-left: 0;
  }
}
</style>
