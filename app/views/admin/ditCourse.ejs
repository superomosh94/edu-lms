<% const title = 'Edit Course' %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-edit text-primary me-2"></i>Edit Course
    </h1>
    <a href="/admin/courses" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Courses
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form action="/admin/courses/<%= course.id %>" method="POST">
            <input type="hidden" name="_method" value="PUT">
            
            <div class="mb-3">
                <label for="title" class="form-label">Course Title <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="title" name="title" required 
                       value="<%= course.title %>" placeholder="Enter course title">
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                <textarea class="form-control" id="description" name="description" rows="4" required 
                          placeholder="Enter course description"><%= course.description %></textarea>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="teacher_id" class="form-label">Instructor <span class="text-danger">*</span></label>
                        <select class="form-select" id="teacher_id" name="teacher_id" required>
                            <option value="">Select Instructor</option>
                            <% teachers.forEach(teacher => { %>
                                <option value="<%= teacher.id %>" 
                                    <%= teacher.id == course.teacher_id ? 'selected' : '' %>>
                                    <%= teacher.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="status" class="form-label">Status <span class="text-danger">*</span></label>
                        <select class="form-select" id="status" name="status" required>
                            <option value="pending" <%= course.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="active" <%= course.status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="inactive" <%= course.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                            <option value="rejected" <%= course.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/admin/courses" class="btn btn-outline-secondary me-md-2">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Course
                </button>
            </div>
        </form>
    </div>
</div>