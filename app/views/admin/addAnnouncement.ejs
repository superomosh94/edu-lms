<% const title = 'Add Announcement' %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-bullhorn text-primary me-2"></i>Add Announcement
    </h1>
    <a href="/admin/announcements" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Announcements
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form action="/admin/announcements/add" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="title" name="title" required 
                       placeholder="Enter announcement title">
            </div>
            
            <div class="mb-3">
                <label for="message" class="form-label">Message <span class="text-danger">*</span></label>
                <textarea class="form-control" id="message" name="message" rows="6" required 
                          placeholder="Enter announcement message"></textarea>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="reset" class="btn btn-outline-secondary me-md-2">
                    <i class="fas fa-undo me-2"></i>Reset
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create Announcement
                </button>
            </div>
        </form>
    </div>
</div>