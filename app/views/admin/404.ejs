<% const title = 'Page Not Found' %>
<%- include('../layouts/admin-layout', { title }) %>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-page">
                <i class="fas fa-exclamation-triangle text-warning mb-4" style="font-size: 4rem;"></i>
                <h1 class="display-4 fw-bold text-dark">404</h1>
                <h2 class="mb-4">Page Not Found</h2>
                <p class="lead text-muted mb-4">The page you're looking for doesn't exist or has been moved.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="/admin/dashboard" class="btn btn-primary btn-lg">
                        <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>