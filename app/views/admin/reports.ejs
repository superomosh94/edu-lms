<!DOCTYPE html>
<html>
<%- include('../partials/header', { title: "Reports", headerTitle: "Reports", adminName: "Admin" }) %>

<body style="display:flex; margin:0; font-family:'Segoe UI', Arial, sans-serif; background:#f4f6f8; height:100vh;">
    <%- include('../partials/sidebar') %>

    <div class="main" style="flex:1; display:flex; flex-direction:column; overflow:auto;">
        <div style="flex:1; padding:30px;">
            <h2 style="color:#1a73e8; margin-bottom:20px;">Reports</h2>

            <div style="background:#ffffff; padding:20px; border-radius:12px; box-shadow:0 6px 20px rgba(0,0,0,0.1);">
                <table style="border-collapse:collapse; width:100%; font-size:14px;">
                    <thead style="background:#1a73e8; color:white;">
                        <tr>
                            <th style="padding:12px; text-align:left;">ID</th>
                            <th style="padding:12px; text-align:left;">Title</th>
                            <th style="padding:12px; text-align:left;">Description</th>
                            <th style="padding:12px; text-align:left;">Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reportData.forEach(report => { %>
                            <tr style="border-bottom:1px solid #ccc;">
                                <td style="padding:10px;"><%= report.id %></td>
                                <td style="padding:10px;"><%= report.title %></td>
                                <td style="padding:10px;"><%= report.description %></td>
                                <td style="padding:10px;"><%= report.created_at %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
