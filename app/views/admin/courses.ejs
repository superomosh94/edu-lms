<% const title = 'Courses' %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-book text-primary me-2"></i>Course Management
    </h1>
    <a href="/admin/courses/add" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add Course
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Courses</h5>
    </div>
    <div class="card-body">
        <% if (courses && courses.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Instructor</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.id %></td>
                            <td><strong><%= course.title %></strong></td>
                            <td><%= course.description.length > 50 ? course.description.substring(0, 50) + '...' : course.description %></td>
                            <td><%= course.teacher %></td>
                            <td>
                                <span class="badge 
                                    <%= course.status === 'active' ? 'bg-success' : 
                                        course.status === 'pending' ? 'bg-warning' : 
                                        course.status === 'rejected' ? 'bg-danger' : 'bg-secondary' %>">
                                    <%= course.status %>
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/courses/<%= course.id %>/edit" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/admin/courses/moderate/<%= course.id %>" method="POST" class="d-inline">
                                        <input type="hidden" name="status" value="active">
                                        <button type="submit" class="btn btn-outline-success" 
                                                title="Approve Course" 
                                                onclick="return confirm('Approve this course?')">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    <form action="/admin/courses/moderate/<%= course.id %>" method="POST" class="d-inline">
                                        <input type="hidden" name="status" value="rejected">
                                        <button type="submit" class="btn btn-outline-danger" 
                                                title="Reject Course"
                                                onclick="return confirm('Reject this course?')">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                    <form action="/admin/courses/delete/<%= course.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this course?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-4">
                <i class="fas fa-book fa-3x text-muted mb-3"></i>
                <h5>No courses found</h5>
                <p class="text-muted">Get started by creating your first course.</p>
                <a href="/admin/courses/add" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create Course
                </a>
            </div>
        <% } %>
    </div>
</div>