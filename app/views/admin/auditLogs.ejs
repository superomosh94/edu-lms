<!DOCTYPE html>
<html lang="en">
    <!-- add sidebar the header and navigation pluss styling -->
     <%- include('../partials/header', { title: "Audit Logs", headerTitle: "Audit Logs", adminName: "Admin" }) %>
    <%- include('../partials/navigation') %>
<head>
  <meta charset="UTF-8">
  <title>Audit Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    
    body {
      background: #f4f6f8;
      font-family: "Segoe UI", Arial, sans-serif;
      color: #333;
      padding: 20px;
    }
    .container {
      max-width: 1100px;
      margin: 0 auto;
    }
    h1 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #0d6efd;
      font-weight: 600;
    }
    .card {
      border: none;
      border-radius: 8px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }
    .table th {
      background: #0d6efd;
      color: #fff;
    }
    .action-create { color: green; font-weight: 600; }
    .action-update { color: #0d6efd; font-weight: 600; }
    .action-delete { color: red; font-weight: 600; }
    .action-view { color: gray; font-weight: 600; }
    .filter-bar {
      display: flex;
      gap: 10px;
      margin-bottom: 15px;
      flex-wrap: wrap;
    }
    .filter-bar input, .filter-bar select {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 8px 10px;
    }
    .export-btn {
      background: #198754;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 8px 12px;
      cursor: pointer;
    }
    .export-btn:hover {
      background: #146c43;
    }
    @media (max-width: 768px) {
      .table-responsive { font-size: 14px; }
      h1 { font-size: 20px; }
    }
  </style>
</head>
<body>
    <!-- add sidebar -->
     <%- include('../partials/adminSidebar') %>
  <div class="container">
    <h1><i class="fa-solid fa-clipboard-list me-2"></i>Audit Logs</h1>

    <!-- Filter and Search Bar -->
    <div class="filter-bar">
      <input type="text" id="searchInput" placeholder="Search logs...">
      <select id="actionFilter">
        <option value="">All Actions</option>
        <option value="create">Create</option>
        <option value="update">Update</option>
        <option value="delete">Delete</option>
        <option value="view">View</option>
      </select>
      <input type="date" id="dateFilter">
      <button class="export-btn" onclick="exportLogs()">Export CSV</button>
    </div>

    <!-- Logs Table -->
    <div class="card p-3">
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>#</th>
              <th>Date</th>
              <th>User</th>
              <th>Action</th>
              <th>Details</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="logTable">
            <% logs.forEach((log, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= new Date(log.created_at).toLocaleString() %></td>
                <td><%= log.user_name || 'System' %></td>
                <td class="action-<%= log.action.toLowerCase() %>"><%= log.action %></td>
                <td><%= log.details %></td>
                <td><button class="btn btn-sm btn-outline-primary" onclick="viewDetails('<%= log.id %>', '<%= log.created_at %>', '<%= log.action %>', '<%= log.details %>', '<%= log.user_name || 'System' %>')">View</button></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-3">
      <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Prev</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
    </nav>
  </div>

  <!-- Log Details Modal -->
  <div class="modal fade" id="logModal" tabindex="-1" aria-labelledby="logModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logModalLabel">Log Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p><strong>User:</strong> <span id="modalUser"></span></p>
          <p><strong>Date:</strong> <span id="modalDate"></span></p>
          <p><strong>Action:</strong> <span id="modalAction"></span></p>
          <p><strong>Details:</strong> <span id="modalDetails"></span></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function viewDetails(id, date, action, details, user) {
      document.getElementById('modalUser').textContent = user;
      document.getElementById('modalDate').textContent = new Date(date).toLocaleString();
      document.getElementById('modalAction').textContent = action;
      document.getElementById('modalDetails').textContent = details;
      const modal = new bootstrap.Modal(document.getElementById('logModal'));
      modal.show();
    }

    function exportLogs() {
      alert("Export feature not yet connected to backend.");
    }
  </script>
</body>
</html>
