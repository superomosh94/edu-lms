<!DOCTYPE html>
<html>
<%- include('../partials/header', { title: "Manage Users", headerTitle: "Manage Users", adminName: "Admin" }) %>

<head>
  <style>
    body {
      display: flex;
      margin: 0;
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f4f6f8;
      height: 100vh;
    }

    .sidebar {
      width: 250px;
      background: #1e293b;
      color: #f1f5f9;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      display: flex;
      flex-direction: column;
    }

    .main {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: auto;
      margin-left: 250px;
    }

    .content {
      flex: 1;
      padding: 30px;
    }

    h2 {
      color: #1a73e8;
      margin-bottom: 20px;
    }

    .table-container {
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    table {
      border-collapse: collapse;
      width: 100%;
      font-size: 14px;
    }

    thead {
      background: #1a73e8;
      color: #fff;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    .status {
      padding: 4px 8px;
      border-radius: 4px;
      color: #fff;
      font-weight: 500;
    }

    .status.active {
      background: #28a745;
    }

    .status.inactive {
      background: #dc3545;
    }

    .actions {
      display: flex;
      gap: 6px;
    }

    .btn {
      padding: 6px 10px;
      border: none;
      border-radius: 4px;
      color: #fff;
      font-size: 13px;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .btn.delete {
      background: #dc3545;
    }

    .btn.delete:hover {
      background: #b02a37;
    }

    .btn.edit {
      background: #1a73e8;
    }

    .btn.edit:hover {
      background: #155ab6;
    }
  </style>
</head>

<body>
  <!-- Sidebar must be inside the body -->
  <%- include('../partials/adminSidebar') %>

  <div class="main">
    <div class="content">
      <h2>Manage Users</h2>

      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td>
                  <span class="status <%= user.is_active ? 'active' : 'inactive' %>">
                    <%= user.is_active ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <div class="actions">
                    <form action="/admin/users/<%= user.id %>?_method=DELETE" method="POST">
                      <button class="btn delete" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                    </form>
                    <a href="/admin/users/<%= user.id %>/edit" class="btn edit">Edit</a>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
