                    <div class="d-flex justify-content-between">
                        <span>Audit Logs</span>
                        <span class="text-info">97.8 MB</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Application Info -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2 text-info"></i>Application Information
                </h5>
            </div>
            <div class="card-body">
                <div class="app-info">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>App Version:</strong> 2.1.0
                        </div>
                        <div class="col-6">
                            <strong>Node.js:</strong> 18.0.0
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Express:</strong> 4.18.0
                        </div>
                        <div class="col-6">
                            <strong>Environment:</strong> Production
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Start Time:</strong> 
                            <span id="startTime">15 days ago</span>
                        </div>
                        <div class="col-6">
                            <strong>Requests:</strong> 12,458
                        </div>
                    </div>
                </div>
                
                <h6 class="mt-4 mb-3">Dependencies</h6>
                <div class="dependencies">
                    <span class="badge bg-primary me-1 mb-1">Express 4.18.0</span>
                    <span class="badge bg-success me-1 mb-1">MySQL2 3.0.0</span>
                    <span class="badge bg-info me-1 mb-1">EJS 3.1.8</span>
                    <span class="badge bg-warning me-1 mb-1">BCrypt 5.0.0</span>
                    <span class="badge bg-danger me-1 mb-1">Passport 0.6.0</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-shield-alt me-2 text-warning"></i>Security Status
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 text-center">
                <i class="fas fa-lock fa-2x text-success mb-2"></i>
                <h6>SSL/TLS</h6>
                <span class="badge bg-success">Enabled</span>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-fire fa-2x text-success mb-2"></i>
                <h6>Firewall</h6>
                <span class="badge bg-success">Active</span>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-bug fa-2x text-warning mb-2"></i>
                <h6>Vulnerabilities</h6>
                <span class="badge bg-warning">2 Minor</span>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-clock fa-2x text-info mb-2"></i>
                <h6>Last Scan</h6>
                <span class="badge bg-info">2 hours ago</span>
            </div>
        </div>
    </div>
</div>

<style>
.resource-circle {
    position: relative;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
}

.circle-progress {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: conic-gradient(#007bff var(--progress), #f8f9fa 0deg);
}

.circle-text {
    position: relative;
    font-weight: bold;
    font-size: 14px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const circles = document.querySelectorAll('.circle-progress');
    circles.forEach(circle => {
        const value = circle.getAttribute('data-value');
        circle.style.setProperty('--progress', `${value * 3.6}deg`);
    });
});
</script>