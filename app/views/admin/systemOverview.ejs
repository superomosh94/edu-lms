<% const title = 'System Overview' %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-server text-primary me-2"></i>System Overview
    </h1>
    <div class="btn-group">
        <button class="btn btn-outline-primary" onclick="window.location.reload()">
            <i class="fas fa-sync-alt me-2"></i>Refresh
        </button>
        <button class="btn btn-outline-success">
            <i class="fas fa-download me-2"></i>Export Report
        </button>
    </div>
</div>

<div class="row">
    <!-- System Health -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-heartbeat me-2"></i>System Health
                </h5>
            </div>
            <div class="card-body text-center">
                <div class="system-status mb-3">
                    <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                    <h4 class="text-success">All Systems Operational</h4>
                </div>
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <div class="h5 text-primary">99.9%</div>
                            <small class="text-muted">Uptime</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div>
                            <div class="h5 text-success">0</div>
                            <small class="text-muted">Issues</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Resource Usage -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2 text-primary"></i>Resource Usage
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <div class="resource-circle mx-auto mb-2">
                                <div class="circle-progress" data-value="25"></div>
                                <span class="circle-text">25%</span>
                            </div>
                            <h6>CPU</h6>
                            <small class="text-muted">2.5 GHz / 4 cores</small>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <div class="resource-circle mx-auto mb-2">
                                <div class="circle-progress" data-value="65"></div>
                                <span class="circle-text">65%</span>
                            </div>
                            <h6>Memory</h6>
                            <small class="text-muted">6.5 GB / 10 GB</small>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <div class="resource-circle mx-auto mb-2">
                                <div class="circle-progress" data-value="45"></div>
                                <span class="circle-text">45%</span>
                            </div>
                            <h6>Disk</h6>
                            <small class="text-muted">45 GB / 100 GB</small>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="mb-3">
                            <div class="resource-circle mx-auto mb-2">
                                <div class="circle-progress" data-value="80"></div>
                                <span class="circle-text">80%</span>
                            </div>
                            <h6>Network</h6>
                            <small class="text-muted">80 Mbps / 100 Mbps</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Database Status -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-database me-2 text-success"></i>Database Status
                </h5>
            </div>
            <div class="card-body">
                <div class="database-info">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Type:</strong> MySQL 8.0
                        </div>
                        <div class="col-6">
                            <strong>Version:</strong> 8.0.28
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Connections:</strong> 12/100
                        </div>
                        <div class="col-6">
                            <strong>Uptime:</strong> 15 days
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Size:</strong> 245 MB
                        </div>
                        <div class="col-6">
                            <strong>Tables:</strong> 28
                        </div>
                    </div>
                </div>
                
                <h6 class="mt-4 mb-3">Table Sizes</h6>
                <div class="table-size">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Users Table</span>
                        <span class="text-primary">45.2 MB</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Courses Table</span>
                        <span class="text-success">89.7 MB</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Payments Table</span>
                        <span class="text-warning">12.3 MB</span>
