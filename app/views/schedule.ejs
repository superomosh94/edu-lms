<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Schedule - EDU LMS</title>
    <%- include('./partials/header') %>
    <style>
        .schedule-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }
        .schedule-header {
            margin-bottom: 2rem;
        }
        .calendar-navigation {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        .calendar-header {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            text-align: center;
            font-weight: 500;
            margin-bottom: 1rem;
        }
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background: #ddd;
            border: 1px solid #ddd;
        }
        .calendar-day {
            background: white;
            min-height: 100px;
            padding: 0.5rem;
            position: relative;
        }
        .calendar-day.other-month {
            background: #f8f9fa;
            color: #999;
        }
        .calendar-day.today {
            background: #e3f2fd;
        }
        .day-number {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
        .event {
            background: #667eea;
            color: white;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 0.75rem;
            margin-bottom: 2px;
            cursor: pointer;
        }
        .btn-nav {
            background: #667eea;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <%- include('./partials/navigation') %>
    
    <div class="schedule-container">
        <div class="schedule-header">
            <h1>My Schedule</h1>
            <p style="color: #666;">View your upcoming classes and deadlines</p>
        </div>

        <div class="calendar-navigation">
            <button class="btn-nav">← Previous</button>
            <h2 id="current-month">Loading...</h2>
            <button class="btn-nav">Next →</button>
        </div>

        <div class="calendar-header">
            <div>Sun</div>
            <div>Mon</div>
            <div>Tue</div>
            <div>Wed</div>
            <div>Thu</div>
            <div>Fri</div>
            <div>Sat</div>
        </div>

        <div class="calendar-grid" id="calendar">
            <!-- Calendar will be populated by JavaScript -->
        </div>

        <div style="margin-top: 3rem;">
            <h3>Upcoming Deadlines</h3>
            <div id="upcoming-events">
                <!-- Upcoming events will be populated -->
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>

    <script>
        // Simple calendar functionality
        function generateCalendar() {
            const now = new Date();
            const month = now.getMonth();
            const year = now.getFullYear();
            
            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];
            
            document.getElementById('current-month').textContent = `${monthNames[month]} ${year}`;
            
            // This is a simplified version - you would integrate with your actual schedule data
            const calendarGrid = document.getElementById('calendar');
            calendarGrid.innerHTML = '<div style="grid-column: 1 / -1; text-align: center; padding: 2rem; color: #666;">Calendar integration would display your schedule here</div>';
        }

        generateCalendar();
    </script>
</body>
</html>