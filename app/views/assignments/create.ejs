<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Assignment - EDU LMS</title>
    <%- include('../partials/header') %>
    <style>
        body {
            background-color: #121212;
            color: #f1f1f1;
            font-family: Arial, sans-serif;
        }

        a {
            color: #00bcd4;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .create-assignment-container {
            min-height: 100vh;
            padding: 2rem;
        }

        .form-card {
            border: none;
            border-radius: 12px;
            background-color: #1e1e1e;
            box-shadow: 0 5px 15px rgba(0,0,0,0.5);
        }

        .form-label {
            color: #ccc;
        }

        input, select, textarea {
            background: #2c2c2c;
            border: 1px solid #444;
            color: #f1f1f1;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #00bcd4;
        }

        .card-header {
            background-color: #212121 !important;
            color: #00bcd4 !important;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #00bcd4;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0097a7;
        }

        .btn-success {
            background-color: #4caf50;
            border: none;
        }

        .btn-success:hover {
            background-color: #388e3c;
        }

        .btn-secondary {
            background-color: #616161;
            border: none;
            color: white;
        }

        .btn-outline-primary {
            border: 1px solid #00bcd4;
            color: #00bcd4;
        }

        .btn-outline-primary:hover {
            background-color: #00bcd4;
            color: #fff;
        }

        .rich-text-editor {
            background-color: #2c2c2c;
            border: 1px solid #444;
            border-radius: 5px;
            color: #f1f1f1;
            padding: 0.75rem;
        }

        .requirement-item {
            border-left: 3px solid #00bcd4;
            padding-left: 1rem;
            margin-bottom: 1rem;
        }

        .datetime-picker i {
            color: #ccc;
        }

        .card {
            background-color: #1e1e1e;
        }

        footer {
            background-color: #1c1c1c;
            color: #aaa;
            padding: 1rem;
            text-align: center;
            font-size: 0.9rem;
        }

        nav {
            background-color: #1c1c1c;
            padding: 0.75rem 1rem;
        }

        nav a {
            margin-right: 1rem;
            font-weight: bold;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav>
        <a href="/teacher">Dashboard</a>
        <a href="/teacher/courses">Courses</a>
        <a href="/teacher/assignments">Assignments</a>
        <a href="/teacher/submissions">Submissions</a>
        <a href="/teacher/grades">Grades</a>
    </nav>

    <div class="create-assignment-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card form-card">
                        <div class="card-header">
                            <h4>Create New Assignment</h4>
                        </div>
                        <div class="card-body p-4">
                            <form id="assignmentForm" action="/teacher/assignments/create" method="POST">
                                <div class="row">
                                    <div class="col-md-8">
                                        <!-- Basic Info -->
                                        <div class="mb-4">
                                            <h5>Basic Information</h5>
                                            <div class="mb-3">
                                                <label class="form-label">Assignment Title *</label>
                                                <input type="text" class="form-control" name="title" required>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Course *</label>
                                                    <select class="form-select" name="courseId" required>
                                                        <option value="">Select Course</option>
                                                        <% if (courses && courses.length > 0) { %>
                                                            <% courses.forEach(course => { %>
                                                                <option value="<%= course.id %>"><%= course.title %></option>
                                                            <% }) %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Assignment Type *</label>
                                                    <select class="form-select" name="type" required>
                                                        <option value="essay">Essay</option>
                                                        <option value="quiz">Quiz</option>
                                                        <option value="project">Project</option>
                                                        <option value="presentation">Presentation</option>
                                                        <option value="homework">Homework</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Description *</label>
                                                <textarea class="form-control rich-text-editor" name="description" rows="4" required></textarea>
                                            </div>
                                        </div>

                                        <!-- Requirements -->
                                        <div class="mb-4">
                                            <h5>Requirements</h5>
                                            <div id="requirementsContainer">
                                                <div class="requirement-item">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="requirements[]" placeholder="Enter requirement">
                                                        <button type="button" class="btn btn-outline-danger remove-requirement">Remove</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-outline-primary btn-sm" id="addRequirement">Add Requirement</button>
                                        </div>

                                        <!-- Instructions -->
                                        <div class="mb-4">
                                            <h5>Instructions</h5>
                                            <textarea class="form-control rich-text-editor" name="instructions" rows="6"></textarea>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <!-- Sidebar -->
                                        <div class="sticky-top" style="top: 20px;">
                                            <div class="card mb-4">
                                                <div class="card-header">Due Date & Time</div>
                                                <div class="card-body">
                                                    <div class="datetime-picker mb-3">
                                                        <label class="form-label">Due Date *</label>
                                                        <input type="text" class="form-control" name="dueDate" required>
                                                    </div>
                                                    <div class="datetime-picker">
                                                        <label class="form-label">Due Time *</label>
                                                        <input type="text" class="form-control" name="dueTime" required>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="card mb-4">
                                                <div class="card-header">Grading</div>
                                                <div class="card-body">
                                                    <div class="mb-3">
                                                        <label class="form-label">Maximum Points *</label>
                                                        <input type="number" class="form-control" name="maxPoints" min="1" value="100" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Grading Scale</label>
                                                        <select class="form-select" name="gradingScale">
                                                            <option value="percentage">Percentage</option>
                                                            <option value="points">Points</option>
                                                            <option value="letter">Letter Grade</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="card mb-4">
                                                <div class="card-header">Submission Settings</div>
                                                <div class="card-body">
                                                    <div class="mb-3">
                                                        <label class="form-label">Submission Type</label>
                                                        <select class="form-select" name="submissionType">
                                                            <option value="file">File Upload</option>
                                                            <option value="text">Text Entry</option>
                                                            <option value="both">Both</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-12 d-flex justify-content-between">
                                        <a href="/teacher/assignments" class="btn btn-secondary">Cancel</a>
                                        <button type="submit" class="btn btn-success">Create Assignment</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        &copy; <%= new Date().getFullYear() %> EDU LMS. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("input[name='dueDate']", { dateFormat: "Y-m-d", minDate: "today" });
        flatpickr("input[name='dueTime']", { enableTime: true, noCalendar: true, dateFormat: "H:i", time_24hr: true });

        document.getElementById('addRequirement').addEventListener('click', function() {
            const container = document.getElementById('requirementsContainer');
            const newReq = document.createElement('div');
            newReq.className = 'requirement-item';
            newReq.innerHTML = `
                <div class="input-group">
                    <input type="text" class="form-control" name="requirements[]" placeholder="Enter requirement">
                    <button type="button" class="btn btn-outline-danger remove-requirement">Remove</button>
                </div>
            `;
            container.appendChild(newReq);
        });

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-requirement')) {
                e.target.closest('.requirement-item').remove();
            }
        });
    </script>
</body>
</html>
