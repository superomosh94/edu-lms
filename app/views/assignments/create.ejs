<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Assignment - EDU LMS</title>
    <%- include('../partials/header') %>
    <style>
        .create-assignment-container {
            background: #f8f9fa;
            min-height: 100vh;
        }
        .form-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .rich-text-editor {
            min-height: 200px;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            padding: 0.75rem;
        }
        .requirement-item {
            border-left: 3px solid #007bff;
            padding-left: 1rem;
            margin-bottom: 1rem;
        }
        .datetime-picker {
            position: relative;
        }
        .datetime-picker .form-control {
            padding-right: 40px;
        }
        .datetime-picker i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }
        .grading-scale {
            background: #f8f9fa;
            border-radius: 5px;
            padding: 1rem;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<body>
    <%- include('../partials/navigation') %>

    <div class="create-assignment-container py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card form-card">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">Create New Assignment</h4>
                        </div>
                        <div class="card-body p-4">
                            <form id="assignmentForm" action="/assignments/create" method="POST">
                                <div class="row">
                                    <div class="col-md-8">
                                        <!-- Basic Information -->
                                        <div class="mb-4">
                                            <h5 class="mb-3">Basic Information</h5>
                                            
                                            <div class="mb-3">
                                                <label for="assignmentTitle" class="form-label">Assignment Title *</label>
                                                <input type="text" class="form-control" id="assignmentTitle" name="title" required>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="assignmentCourse" class="form-label">Course *</label>
                                                    <select class="form-select" id="assignmentCourse" name="courseId" required>
                                                        <option value="">Select Course</option>
                                                        <% if (courses && courses.length > 0) { %>
                                                            <% courses.forEach(course => { %>
                                                                <option value="<%= course.id %>"><%= course.title %></option>
                                                            <% }) %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="assignmentType" class="form-label">Assignment Type *</label>
                                                    <select class="form-select" id="assignmentType" name="type" required>
                                                        <option value="essay">Essay</option>
                                                        <option value="quiz">Quiz</option>
                                                        <option value="project">Project</option>
                                                        <option value="presentation">Presentation</option>
                                                        <option value="homework">Homework</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="assignmentDescription" class="form-label">Description *</label>
                                                <textarea class="form-control rich-text-editor" id="assignmentDescription" name="description" rows="4" required></textarea>
                                            </div>
                                        </div>

                                        <!-- Requirements -->
                                        <div class="mb-4">
                                            <h5 class="mb-3">Requirements</h5>
                                            <div id="requirementsContainer">
                                                <div class="requirement-item">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="requirements[]" placeholder="Enter requirement">
                                                        <button type="button" class="btn btn-outline-danger remove-requirement">Remove</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-sm btn-outline-primary" id="addRequirement">Add Requirement</button>
                                        </div>

                                        <!-- Instructions -->
                                        <div class="mb-4">
                                            <h5 class="mb-3">Instructions</h5>
                                            <textarea class="form-control rich-text-editor" id="assignmentInstructions" name="instructions" rows="6" placeholder="Provide detailed instructions for the assignment..."></textarea>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <!-- Settings Sidebar -->
                                        <div class="sticky-top" style="top: 20px;">
                                            <!-- Due Date -->
                                            <div class="card mb-4">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Due Date & Time</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="datetime-picker mb-3">
                                                        <label for="dueDate" class="form-label">Due Date *</label>
                                                        <input type="text" class="form-control" id="dueDate" name="dueDate" required>
                                                        <i class="fas fa-calendar-alt"></i>
                                                    </div>
                                                    <div class="datetime-picker">
                                                        <label for="dueTime" class="form-label">Due Time *</label>
                                                        <input type="text" class="form-control" id="dueTime" name="dueTime" required>
                                                        <i class="fas fa-clock"></i>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Grading -->
                                            <div class="card mb-4">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Grading</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="mb-3">
                                                        <label for="maxPoints" class="form-label">Maximum Points *</label>
                                                        <input type="number" class="form-control" id="maxPoints" name="maxPoints" min="1" max="1000" value="100" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="gradingScale" class="form-label">Grading Scale</label>
                                                        <select class="form-select" id="gradingScale" name="gradingScale">
                                                            <option value="percentage">Percentage</option>
                                                            <option value="points">Points</option>
                                                            <option value="letter">Letter Grade</option>
                                                        </select>
                                                    </div>
                                                    <div class="grading-scale">
                                                        <small class="text-muted">Grading Breakdown:</small>
                                                        <div class="mt-2">
                                                            <div class="d-flex justify-content-between">
                                                                <span>A: 90-100%</span>
                                                                <span>B: 80-89%</span>
                                                                <span>C: 70-79%</span>
                                                            </div>
                                                            <div class="d-flex justify-content-between mt-1">
                                                                <span>D: 60-69%</span>
                                                                <span>F: 0-59%</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Submission Settings -->
                                            <div class="card mb-4">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Submission Settings</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="mb-3">
                                                        <label for="submissionType" class="form-label">Submission Type</label>
                                                        <select class="form-select" id="submissionType" name="submissionType">
                                                            <option value="file">File Upload</option>
                                                            <option value="text">Text Entry</option>
                                                            <option value="both">Both</option>
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="allowedFiles" class="form-label">Allowed File Types</label>
                                                        <select class="form-select" id="allowedFiles" name="allowedFiles" multiple>
                                                            <option value="pdf">PDF</option>
                                                            <option value="doc">Word Document</option>
                                                            <option value="image">Images</option>
                                                            <option value="video">Video</option>
                                                            <option value="audio">Audio</option>
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="maxFileSize" class="form-label">Max File Size (MB)</label>
                                                        <input type="number" class="form-control" id="maxFileSize" name="maxFileSize" min="1" max="100" value="10">
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="allowLate" name="allowLate">
                                                        <label class="form-check-label" for="allowLate">Allow late submissions</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="allowResubmit" name="allowResubmit">
                                                        <label class="form-check-label" for="allowResubmit">Allow resubmission</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Additional Settings -->
                                            <div class="card">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0">Additional Settings</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="form-check mb-2">
                                                        <input class="form-check-input" type="checkbox" id="notifyStudents" name="notifyStudents" checked>
                                                        <label class="form-check-label" for="notifyStudents">Notify students</label>
                                                    </div>
                                                    <div class="form-check mb-2">
                                                        <input class="form-check-input" type="checkbox" id="addToCalendar" name="addToCalendar" checked>
                                                        <label class="form-check-label" for="addToCalendar">Add to course calendar</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="requireApproval" name="requireApproval">
                                                        <label class="form-check-label" for="requireApproval">Require approval</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-between">
                                            <a href="/assignments" class="btn btn-secondary">Cancel</a>
                                            <div>
                                                <button type="button" class="btn btn-outline-primary me-2" id="saveDraft">Save Draft</button>
                                                <button type="submit" class="btn btn-success">Create Assignment</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        // Initialize date and time pickers
        flatpickr("#dueDate", {
            dateFormat: "Y-m-d",
            minDate: "today"
        });

        flatpickr("#dueTime", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: true
        });

        // Add/remove requirements
        document.getElementById('addRequirement').addEventListener('click', function() {
            const container = document.getElementById('requirementsContainer');
            const newRequirement = document.createElement('div');
            newRequirement.className = 'requirement-item';
            newRequirement.innerHTML = `
                <div class="input-group">
                    <input type="text" class="form-control" name="requirements[]" placeholder="Enter requirement">
                    <button type="button" class="btn btn-outline-danger remove-requirement">Remove</button>
                </div>
            `;
            container.appendChild(newRequirement);
        });

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-requirement')) {
                e.target.closest('.requirement-item').remove();
            }
        });

        // Save draft functionality
        document.getElementById('saveDraft').addEventListener('click', function() {
            // In a real application, this would save the form data as a draft
            alert('Draft saved successfully!');
        });

        // Form validation
        document.getElementById('assignmentForm').addEventListener('submit', function(e) {
            const title = document.getElementById('assignmentTitle').value;
            const course = document.getElementById('assignmentCourse').value;
            const dueDate = document.getElementById('dueDate').value;
            
            if (!title || !course || !dueDate) {
                e.preventDefault();
                alert('Please fill in all required fields.');
                return;
            }

            // Additional validation can be added here
        });

        // Dynamic form behavior based on assignment type
        document.getElementById('assignmentType').addEventListener('change', function() {
            const type = this.value;
            const submissionType = document.getElementById('submissionType');
            
            if (type === 'quiz') {
                submissionType.value = 'text';
                submissionType.disabled = true;
            } else {
                submissionType.disabled = false;
            }
        });
    </script>
</body>
</html>