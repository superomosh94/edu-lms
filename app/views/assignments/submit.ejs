<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Assignment - EDU LMS</title>
    <%- include('../partials/header') %>
    <style>
        .submit-assignment-container {
            background: #f8f9fa;
            min-height: 100vh;
        }
        .submit-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .assignment-info-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
        }
        .file-upload-area {
            border: 2px dashed #dee2e6;
            border-radius: 10px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }
        .file-upload-area.dragover {
            border-color: #007bff;
            background-color: #e7f3ff;
        }
        .file-list {
            max-height: 200px;
            overflow-y: auto;
        }
        .file-item {
            display: flex;
            justify-content: between;
            align-items: center;
            padding: 0.5rem;
            border-bottom: 1px solid #dee2e6;
        }
        .file-item:last-child {
            border-bottom: none;
        }
        .text-editor {
            min-height: 300px;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            padding: 1rem;
        }
        .submission-preview {
            background: #f8f9fa;
            border-radius: 5px;
            padding: 1rem;
        }
        .progress-bar {
            transition: width 0.3s ease;
        }
    </style>
</head>
<body>
    <%- include('../partials/navigation') %>

    <div class="submit-assignment-container py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card submit-card">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">Submit Assignment</h4>
                        </div>
                        <div class="card-body p-4">
                            <!-- Assignment Info -->
                            <div class="assignment-info-card p-4 mb-4">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h5 class="mb-2"><%= assignment.title %></h5>
                                        <p class="mb-1"><strong>Course:</strong> <%= assignment.courseTitle %></p>
                                        <p class="mb-1"><strong>Due Date:</strong> <%= assignment.dueDate %></p>
                                        <p class="mb-0"><strong>Points:</strong> <%= assignment.maxPoints %></p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <div class="display-6 fw-bold text-<%= assignment.isOverdue ? 'danger' : 'warning' %>">
                                            <%= assignment.daysLeft %>
                                        </div>
                                        <small><%= assignment.isOverdue ? 'Days Overdue' : 'Days Left' %></small>
                                    </div>
                                </div>
                            </div>

                            <% if (assignment.submission && !assignment.allowResubmit) { %>
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-info-circle me-2"></i>Already Submitted</h6>
                                    <p>You have already submitted this assignment and resubmission is not allowed.</p>
                                    <a href="/assignments/view/<%= assignment.id %>" class="btn btn-outline-primary">View Submission</a>
                                </div>
                            <% } else { %>
                                <form id="submissionForm" action="/assignments/submit/<%= assignment.id %>" method="POST" enctype="multipart/form-data">
                                    <!-- Submission Type Selection -->
                                    <div class="mb-4">
                                        <h5 class="mb-3">Submission Type</h5>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-check card p-3 mb-3">
                                                    <input class="form-check-input" type="radio" name="submissionType" id="typeFile" value="file" checked>
                                                    <label class="form-check-label" for="typeFile">
                                                        <i class="fas fa-file-upload fa-2x text-primary mb-2 d-block"></i>
                                                        <strong>File Upload</strong>
                                                        <p class="text-muted mb-0">Upload documents, images, or other files</p>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check card p-3 mb-3">
                                                    <input class="form-check-input" type="radio" name="submissionType" id="typeText" value="text">
                                                    <label class="form-check-label" for="typeText">
                                                        <i class="fas fa-edit fa-2x text-success mb-2 d-block"></i>
                                                        <strong>Text Entry</strong>
                                                        <p class="text-muted mb-0">Type or paste your submission directly</p>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- File Upload Section -->
                                    <div id="fileUploadSection">
                                        <h5 class="mb-3">File Upload</h5>
                                        <div class="file-upload-area mb-3" id="dropArea">
                                            <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                            <h5>Drag and drop files here</h5>
                                            <p class="text-muted">or</p>
                                            <input type="file" id="fileInput" multiple style="display: none;">
                                            <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                                                Browse Files
                                            </button>
                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    Maximum file size: <%= assignment.maxFileSize || 10 %>MB â€¢ 
                                                    Allowed types: <%= assignment.allowedFiles ? assignment.allowedFiles.join(', ') : 'All files' %>
                                                </small>
                                            </div>
                                        </div>

                                        <!-- Selected Files -->
                                        <div id="fileList" class="file-list mb-3" style="display: none;">
                                            <h6>Selected Files:</h6>
                                            <div id="fileItems"></div>
                                        </div>

                                        <!-- Upload Progress -->
                                        <div id="uploadProgress" class="mb-3" style="display: none;">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Uploading...</span>
                                                <span id="progressPercent">0%</span>
                                            </div>
                                            <div class="progress">
                                                <div id="progressBar" class="progress-bar" style="width: 0%"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Text Entry Section -->
                                    <div id="textEntrySection" style="display: none;">
                                        <h5 class="mb-3">Text Entry</h5>
                                        <div class="mb-3">
                                            <label for="submissionText" class="form-label">Your Submission</label>
                                            <textarea class="form-control text-editor" id="submissionText" name="submissionText" rows="10" placeholder="Type your assignment submission here..."></textarea>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted" id="charCount">0 characters</small>
                                            <small class="text-muted">Minimum: 100 characters</small>
                                        </div>
                                    </div>

                                    <!-- Comments -->
                                    <div class="mb-4">
                                        <h5 class="mb-3">Additional Comments</h5>
                                        <textarea class="form-control" id="submissionComments" name="comments" rows="3" placeholder="Add any comments for your instructor (optional)..."></textarea>
                                    </div>

                                    <!-- Submission Agreement -->
                                    <div class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="submissionAgreement" required>
                                            <label class="form-check-label" for="submissionAgreement">
                                                I confirm that this submission is my own work and complies with the academic integrity policy.
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="d-flex justify-content-between">
                                        <a href="/assignments/view/<%= assignment.id %>" class="btn btn-secondary">Cancel</a>
                                        <div>
                                            <button type="button" class="btn btn-outline-primary me-2" id="saveDraft">Save Draft</button>
                                            <button type="submit" class="btn btn-success" id="submitBtn">Submit Assignment</button>
                                        </div>
                                    </div>
                                </form>

                                <!-- Submission Guidelines -->
                                <div class="mt-4">
                                    <div class="card">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0">Submission Guidelines</h6>
                                        </div>
                                        <div class="card-body">
                                            <ul class="list-unstyled mb-0">
                                                <li class="mb-2">
                                                    <i class="fas fa-<%= assignment.allowLate ? 'check text-success' : 'times text-danger' %> me-2"></i>
                                                    Late submissions: <%= assignment.allowLate ? 'Allowed with penalty' : 'Not allowed' %>
                                                </li>
                                                <li class="mb-2">
                                                    <i class="fas fa-<%= assignment.allowResubmit ? 'check text-success' : 'times text-danger' %> me-2"></i>
                                                    Resubmission: <%= assignment.allowResubmit ? 'Allowed' : 'Not allowed' %>
                                                </li>
                                                <% if (assignment.allowedFiles && assignment.allowedFiles.length > 0) { %>
                                                    <li class="mb-2">
                                                        <i class="fas fa-file me-2 text-info"></i>
                                                        Allowed file types: <%= assignment.allowedFiles.join(', ') %>
                                                    </li>
                                                <% } %>
                                                <% if (assignment.maxFileSize) { %>
                                                    <li class="mb-2">
                                                        <i class="fas fa-weight me-2 text-info"></i>
                                                        Maximum file size: <%= assignment.maxFileSize %>MB
                                                    </li>
                                                <% } %>
                                                <li>
                                                    <i class="fas fa-clock me-2 text-info"></i>
                                                    Submission deadline: <%= assignment.dueDate %>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Toggle between file upload and text entry
        document.getElementById('typeFile').addEventListener('change', function() {
            document.getElementById('fileUploadSection').style.display = 'block';
            document.getElementById('textEntrySection').style.display = 'none';
        });

        document.getElementById('typeText').addEventListener('change', function() {
            document.getElementById('fileUploadSection').style.display = 'none';
            document.getElementById('textEntrySection').style.display = 'block';
        });

        // Character count for text entry
        document.getElementById('submissionText').addEventListener('input', function() {
            const charCount = this.value.length;
            document.getElementById('charCount').textContent = charCount + ' characters';
            
            // Update submit button state
            updateSubmitButton();
        });

        // File upload functionality
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const fileList = document.getElementById('fileList');
        const fileItems = document.getElementById('fileItems');
        const uploadProgress = document.getElementById('uploadProgress');
        const progressBar = document.getElementById('progressBar');
        const progressPercent = document.getElementById('progressPercent');

        let uploadedFiles = [];

        // Drag and drop events
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });

        function highlight() {
            dropArea.classList.add('dragover');
        }

        function unhighlight() {
            dropArea.classList.remove('dragover');
        }

        dropArea.addEventListener('drop', handleDrop, false);
        fileInput.addEventListener('change', handleFiles, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            handleFiles({ target: { files } });
        }

        function handleFiles(e) {
            const files = e.target.files;
            if (files.length > 0) {
                Array.from(files).forEach(file => {
                    if (validateFile(file)) {
                        uploadedFiles.push(file);
                        displayFile(file);
                    }
                });
                fileList.style.display = 'block';
                updateSubmitButton();
            }
        }

        function validateFile(file) {
            const maxSize = <%= assignment.maxFileSize || 10 %> * 1024 * 1024; // Convert to bytes
            const allowedTypes = <%= assignment.allowedFiles ? JSON.stringify(assignment.allowedFiles) : '[]' %>;
            
            if (file.size > maxSize) {
                alert(`File ${file.name} is too large. Maximum size is ${<%= assignment.maxFileSize || 10 %>}MB.`);
                return false;
            }
            
            // Basic file type validation (can be enhanced)
            if (allowedTypes.length > 0) {
                const fileExtension = file.name.split('.').pop().toLowerCase();
                if (!allowedTypes.includes(fileExtension)) {
                    alert(`File type ${fileExtension} is not allowed.`);
                    return false;
                }
            }
            
            return true;
        }

        function displayFile(file) {
            const fileItem = document.createElement('div');
            fileItem.className = 'file-item';
            fileItem.innerHTML = `
                <div class="flex-grow-1">
                    <i class="fas fa-file me-2 text-primary"></i>
                    <span>${file.name}</span>
                    <small class="text-muted">(${(file.size / 1024 / 1024).toFixed(2)} MB)</small>
                </div>
                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeFile('${file.name}')">
                    <i class="fas fa-times"></i>
                </button>
            `;
            fileItems.appendChild(fileItem);
        }

        function removeFile(fileName) {
            uploadedFiles = uploadedFiles.filter(file => file.name !== fileName);
            fileItems.innerHTML = '';
            uploadedFiles.forEach(displayFile);
            
            if (uploadedFiles.length === 0) {
                fileList.style.display = 'none';
            }
            updateSubmitButton();
        }

        function updateSubmitButton() {
            const submissionType = document.querySelector('input[name="submissionType"]:checked').value;
            const agreementChecked = document.getElementById('submissionAgreement').checked;
            let isValid = false;

            if (submissionType === 'file') {
                isValid = uploadedFiles.length > 0 && agreementChecked;
            } else {
                const textContent = document.getElementById('submissionText').value;
                isValid = textContent.length >= 100 && agreementChecked;
            }

            document.getElementById('submitBtn').disabled = !isValid;
        }

        // Save draft functionality
        document.getElementById('saveDraft').addEventListener('click', function() {
            // In a real application, this would save the current state as a draft
            alert('Draft saved successfully!');
        });

        // Form submission
        document.getElementById('submissionForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulate upload progress
            if (document.getElementById('typeFile').checked) {
                uploadProgress.style.display = 'block';
                let progress = 0;
                const interval = setInterval(() => {
                    progress += 5;
                    progressBar.style.width = progress + '%';
                    progressPercent.textContent = progress + '%';
                    
                    if (progress >= 100) {
                        clearInterval(interval);
                        // In a real application, this would submit the form
                        setTimeout(() => {
                            alert('Assignment submitted successfully!');
                            window.location.href = '/assignments/view/<%= assignment.id %>';
                        }, 500);
                    }
                }, 100);
            } else {
                // For text submissions
                alert('Assignment submitted successfully!');
                window.location.href = '/assignments/view/<%= assignment.id %>';
            }
        });

        // Initialize
        document.getElementById('submissionAgreement').addEventListener('change', updateSubmitButton);
        updateSubmitButton();
    </script>
</body>
</html>