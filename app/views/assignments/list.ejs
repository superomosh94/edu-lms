<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignments - EduPortal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #3b82f6;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
        }

        .assignment-card {
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            height: 100%;
        }

        .assignment-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        }

        .status-badge {
            font-size: 0.75rem;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-weight: 600;
        }

        .status-pending { background: #fef3c7; color: #92400e; }
        .status-submitted { background: #d1fae5; color: #065f46; }
        .status-overdue { background: #fee2e2; color: #dc2626; }

        .stat-card {
            border-radius: 12px;
            border: none;
            transition: transform 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .filter-btn {
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            transition: all 0.3s ease;
            background: white;
        }

        .filter-btn.active, .filter-btn:hover {
            border-color: var(--primary);
            background-color: var(--primary);
            color: white;
        }

        .empty-state {
            padding: 3rem 1rem;
        }

        /* Mobile optimizations */
        @media (max-width: 768px) {
            .container-fluid {
                padding: 1rem;
            }
            
            .stat-card .card-body {
                padding: 1rem;
            }
            
            .filter-section .card-body {
                padding: 1rem;
            }
            
            .btn-group-mobile {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
            }
            
            .btn-group-mobile .btn {
                flex: 1;
                min-width: 120px;
            }
        }
    </style>
</head>
<body>
    <!-- Your existing top navigation bar will be here -->
    <!-- This page assumes you already have navigation at the top -->

    <div class="container-fluid py-3">
        <!-- Page Header with Create Button -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h2 mb-1">Assignments</h1>
                        <p class="text-muted mb-0">Manage and track your assignments</p>
                    </div>
                    <% if (user && (user.role === 'Teacher' || user.role === 'Admin')) { %>
                        <a href="/assignments/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>New Assignment
                        </a>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3 col-6 mb-3">
                <div class="card stat-card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h4 class="mb-0"><%= assignments ? assignments.length : 0 %></h4>
                                <small>Total</small>
                            </div>
                            <i class="fas fa-tasks fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card stat-card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h4 class="mb-0"><%= stats ? stats.pending : 0 %></h4>
                                <small>Pending</small>
                            </div>
                            <i class="fas fa-clock fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card stat-card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h4 class="mb-0"><%= stats ? stats.submitted : 0 %></h4>
                                <small>Submitted</small>
                            </div>
                            <i class="fas fa-check fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card stat-card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h4 class="mb-0"><%= stats ? stats.overdue : 0 %></h4>
                                <small>Overdue</small>
                            </div>
                            <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Simple Filters -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card filter-section">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Filter Assignments</h5>
                        
                        <!-- Status Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Status:</label>
                            <div class="btn-group-mobile">
                                <button class="btn filter-btn active" data-status="all">
                                    All Assignments
                                </button>
                                <button class="btn filter-btn" data-status="pending">
                                    Pending
                                </button>
                                <button class="btn filter-btn" data-status="submitted">
                                    Submitted
                                </button>
                                <button class="btn filter-btn" data-status="overdue">
                                    Overdue
                                </button>
                            </div>
                        </div>

                        <!-- Course Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Course:</label>
                            <div class="d-flex flex-wrap align-items-center">
                                <div class="form-check me-3 mb-2">
                                    <input class="form-check-input" type="checkbox" id="course-all" checked>
                                    <label class="form-check-label" for="course-all">
                                        All Courses
                                    </label>
                                </div>
                                <% if (courses && courses.length > 0) { %>
                                    <% courses.forEach(course => { %>
                                        <div class="form-check me-3 mb-2">
                                            <input class="form-check-input course-checkbox" type="checkbox" id="course-<%= course.id %>" checked>
                                            <label class="form-check-label" for="course-<%= course.id %>">
                                                <%= course.title || 'Untitled Course' %>
                                            </label>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <span class="text-muted">No courses available</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assignments List -->
        <% if (!assignments || assignments.length === 0) { %>
            <div class="empty-state">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                        <h3 class="text-muted mb-3">No Assignments Found</h3>
                        <p class="text-muted mb-4">There are no assignments to display at this time.</p>
                        <% if (user && (user.role === 'Teacher' || user.role === 'Admin')) { %>
                            <a href="/assignments/create" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Create Your First Assignment
                            </a>
                        <% } else { %>
                            <p class="text-muted">Check back later for new assignments from your teachers.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="row g-3" id="assignmentsContainer">
                <% assignments.forEach(assignment => { 
                    const isOverdue = assignment.due_date && new Date(assignment.due_date) < new Date() && !assignment.submitted;
                    const assignmentStatus = isOverdue ? 'overdue' : (assignment.submitted ? 'submitted' : 'pending');
                    const statusText = assignmentStatus.charAt(0).toUpperCase() + assignmentStatus.slice(1);
                    
                    const assignmentTitle = assignment.title || 'Untitled Assignment';
                    const assignmentDescription = assignment.description || 'No description provided';
                    const dueDate = assignment.due_date ? new Date(assignment.due_date).toLocaleDateString() : 'No due date';
                    const courseId = assignment.courseId || assignment.course_id || 'all';
                    const courseName = assignment.course_name || assignment.course_title || 'General';
                %>
                    <div class="col-xl-4 col-lg-6 col-12 assignment-item" 
                         data-status="<%= assignmentStatus %>" 
                         data-course="<%= courseId %>">
                        <div class="card assignment-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0 flex-grow-1 me-2"><%= assignmentTitle %></h5>
                                    <span class="badge status-<%= assignmentStatus %> status-badge">
                                        <%= statusText %>
                                    </span>
                                </div>
                                
                                <p class="card-text text-muted small mb-3">
                                    <%= assignmentDescription.substring(0, 100) + (assignmentDescription.length > 100 ? '...' : '') %>
                                </p>
                                
                                <div class="assignment-meta small text-muted mb-3">
                                    <div class="mb-1">
                                        <i class="fas fa-book me-1"></i><%= courseName %>
                                    </div>
                                    <div class="mb-1">
                                        <i class="fas fa-calendar me-1"></i>Due: <%= dueDate %>
                                    </div>
                                    <% if (assignment.points) { %>
                                        <div>
                                            <i class="fas fa-star me-1"></i><%= assignment.points %> points
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a href="/assignments/view/<%= assignment.id %>" class="btn btn-outline-primary btn-sm flex-grow-1">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    <% if (user && (user.role === 'Teacher' || user.role === 'Admin')) { %>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/assignments/edit/<%= assignment.id %>">
                                                    <i class="fas fa-edit me-2"></i>Edit
                                                </a></li>
                                                <li><a class="dropdown-item text-danger" href="/assignments/delete/<%= assignment.id %>" onclick="return confirm('Are you sure you want to delete this assignment?')">
                                                    <i class="fas fa-trash me-2"></i>Delete
                                                </a></li>
                                            </ul>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Simple filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');
            const courseCheckboxes = document.querySelectorAll('.course-checkbox');
            const courseAllCheckbox = document.getElementById('course-all');
            
            let currentStatus = 'all';
            let selectedCourses = new Set(['all']);
            
            // Status filter
            filterButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    filterButtons.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentStatus = this.dataset.status;
                    filterAssignments();
                });
            });
            
            // Course filter
            courseAllCheckbox.addEventListener('change', function() {
                courseCheckboxes.forEach(cb => cb.checked = this.checked);
                selectedCourses = this.checked ? new Set(['all']) : new Set();
                filterAssignments();
            });
            
            courseCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const courseId = this.id.replace('course-', '');
                    
                    if (this.checked) {
                        selectedCourses.add(courseId);
                    } else {
                        selectedCourses.delete(courseId);
                    }
                    
                    // Update "all" checkbox
                    const allChecked = Array.from(courseCheckboxes).every(cb => cb.checked);
                    courseAllCheckbox.checked = allChecked;
                    if (allChecked) {
                        selectedCourses.add('all');
                    } else {
                        selectedCourses.delete('all');
                    }
                    
                    filterAssignments();
                });
            });
            
            function filterAssignments() {
                const items = document.querySelectorAll('.assignment-item');
                let visibleCount = 0;
                
                items.forEach(item => {
                    const statusMatch = currentStatus === 'all' || item.dataset.status === currentStatus;
                    const courseMatch = selectedCourses.has('all') || selectedCourses.has(item.dataset.course);
                    
                    if (statusMatch && courseMatch) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });
                
                // Show empty state if no items visible
                const emptyState = document.querySelector('.empty-state');
                const assignmentsContainer = document.getElementById('assignmentsContainer');
                
                if (visibleCount === 0 && assignmentsContainer) {
                    if (!emptyState) {
                        const emptyHtml = `
                            <div class="empty-state">
                                <div class="card">
                                    <div class="card-body text-center py-5">
                                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                        <h3 class="text-muted mb-3">No Matching Assignments</h3>
                                        <p class="text-muted">Try adjusting your filters to see more results.</p>
                                        <button class="btn btn-outline-primary" onclick="resetFilters()">
                                            Reset Filters
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                        assignmentsContainer.innerHTML = emptyHtml;
                    }
                }
            }
            
            // Reset filters function
            window.resetFilters = function() {
                filterButtons.forEach(btn => {
                    if (btn.dataset.status === 'all') {
                        btn.classList.add('active');
                        currentStatus = 'all';
                    } else {
                        btn.classList.remove('active');
                    }
                });
                
                courseAllCheckbox.checked = true;
                courseCheckboxes.forEach(cb => cb.checked = true);
                selectedCourses = new Set(['all']);
                
                filterAssignments();
            };
        });
    </script>
</body>
</html>