<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Assignment - Teacher Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --secondary: #64748b;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --light: #f8fafc;
            --dark: #0f172a;
            --sidebar-bg: #1e293b;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --hover-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f1f5f9;
            color: #334155;
            line-height: 1.6;
        }

        .edit-assignment-page {
            min-height: 100vh;
            display: flex;
        }

        /* Sidebar Styles */
        .sidebar {
            background: linear-gradient(180deg, var(--sidebar-bg) 0%, var(--dark) 100%);
            width: 280px;
            min-height: 100vh;
            padding: 0;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            position: fixed;
            z-index: 100;
            overflow-y: auto;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 0;
            background: #f8f9fa;
        }

        .container-fluid {
            padding: 2rem;
        }

        /* Header */
        .page-header h1 {
            font-weight: 700;
            color: var(--dark);
        }

        .page-header p {
            color: var(--secondary);
            font-size: 1.1rem;
        }

        /* Form Styles */
        .form-card {
            border-radius: 12px;
            border: none;
            box-shadow: var(--card-shadow);
            overflow: hidden;
        }

        .form-card .card-header {
            background: white;
            border-bottom: 1px solid #e2e8f0;
            padding: 1.5rem;
        }

        .form-card .card-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-text {
            color: var(--secondary);
            font-size: 0.875rem;
        }

        /* Button Styles */
        .btn {
            border-radius: 8px;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: var(--primary);
            border: none;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .btn-outline-secondary {
            color: var(--secondary);
            border-color: var(--secondary);
        }

        .btn-outline-secondary:hover {
            background: var(--secondary);
            color: white;
            transform: translateY(-2px);
        }

        /* Assignment Preview */
        .preview-section {
            background: #f8fafc;
            border-radius: 8px;
            padding: 1.5rem;
            margin-top: 2rem;
        }

        .preview-section h5 {
            color: var(--dark);
            margin-bottom: 1rem;
        }

        /* Mobile Menu Button */
        .mobile-menu-btn {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 101;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            width: 40px;
            height: 40px;
            align-items: center;
            justify-content: center;
            box-shadow: var(--card-shadow);
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            
            .sidebar.active {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .mobile-menu-btn {
                display: flex;
            }
        }

        @media (max-width: 768px) {
            .container-fluid {
                padding: 1.5rem;
            }

            .form-card .card-body {
                padding: 1.5rem;
            }
        }

        /* Required Field Indicator */
        .required::after {
            content: " *";
            color: var(--danger);
        }

        /* Form Sections */
        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .form-section:last-of-type {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .form-section h6 {
            color: var(--dark);
            margin-bottom: 1rem;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="edit-assignment-page">
        <!-- Mobile Menu Button -->
        <button class="mobile-menu-btn" id="mobileMenuButton">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <div class="sidebar">
            <%- include('../partials/sidebar', { menu: menu, activePage: 'assignments', user: user }) %>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            <div class="container-fluid py-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 page-header">
                    <div>
                        <h1 class="h2 mb-1">Edit Assignment</h1>
                        <p class="text-muted mb-0">Update assignment details and settings.</p>
                    </div>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/teacher/assignments" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Back to Assignments
                        </a>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card form-card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-edit me-2 text-primary"></i>
                                    Edit Assignment: <%= assignment.title %>
                                </h5>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="/teacher/assignments/<%= assignment.id %>/edit">
                                    <!-- Basic Information Section -->
                                    <div class="form-section">
                                        <h6><i class="fas fa-info-circle me-2 text-primary"></i>Basic Information</h6>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="course_id" class="form-label required">Course</label>
                                                <select class="form-select" id="course_id" name="course_id" required>
                                                    <option value="">Select a course...</option>
                                                    <% courses.forEach(course => { %>
                                                        <option value="<%= course.id %>" 
                                                                <%= course.id == assignment.course_id ? 'selected' : '' %>>
                                                            <%= course.title %>
                                                        </option>
                                                    <% }); %>
                                                </select>
                                                <div class="form-text">Select the course this assignment belongs to.</div>
                                            </div>
                                            
                                            <div class="col-md-6 mb-3">
                                                <label for="due_date" class="form-label">Due Date</label>
                                                <input type="datetime-local" class="form-control" id="due_date" name="due_date"
                                                       value="<%= assignment.due_date ? new Date(assignment.due_date).toISOString().slice(0,16) : '' %>">
                                                <div class="form-text">Set a due date for this assignment (optional).</div>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="title" class="form-label required">Assignment Title</label>
                                            <input type="text" class="form-control" id="title" name="title" 
                                                   value="<%= assignment.title %>" 
                                                   placeholder="Enter assignment title" required>
                                            <div class="form-text">Give your assignment a clear and descriptive title.</div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="description" class="form-label">Description</label>
                                            <textarea class="form-control" id="description" name="description" 
                                                      rows="6" placeholder="Provide assignment instructions, requirements, and any additional information for students..."><%= assignment.description || '' %></textarea>
                                            <div class="form-text">Detailed instructions help students understand what's expected.</div>
                                        </div>
                                    </div>

                                    <!-- Assignment Status Section -->
                                    <div class="form-section">
                                        <h6><i class="fas fa-toggle-on me-2 text-primary"></i>Assignment Status</h6>
                                        <div class="alert alert-info">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-info-circle me-2"></i>
                                                <div>
                                                    <strong>Assignment Information</strong>
                                                    <br>
                                                    Created: <%= new Date(assignment.created_at).toLocaleString() %>
                                                    <% if (assignment.updated_at) { %>
                                                        <br>Last Updated: <%= new Date(assignment.updated_at).toLocaleString() %>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-4">
                                        <a href="/teacher/assignments" class="btn btn-outline-secondary me-md-2">
                                            <i class="fas fa-times me-2"></i>Cancel
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-2"></i>Update Assignment
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Quick Actions Card -->
                        <div class="card form-card mt-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-bolt me-2 text-warning"></i>
                                    Quick Actions
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <a href="/teacher/assignments/<%= assignment.id %>" class="btn btn-outline-primary w-100">
                                            <i class="fas fa-eye me-2"></i>View Assignment
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="/teacher/submissions?assignment=<%= assignment.id %>" class="btn btn-outline-success w-100">
                                            <i class="fas fa-file-alt me-2"></i>View Submissions
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="/teacher/assignments/create" class="btn btn-outline-info w-100">
                                            <i class="fas fa-copy me-2"></i>Duplicate Assignment
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <form method="POST" action="/teacher/assignments/<%= assignment.id %>/delete" class="d-inline w-100">
                                            <button type="submit" class="btn btn-outline-danger w-100" 
                                                    onclick="return confirm('Are you sure you want to delete this assignment? This action cannot be undone.')">
                                                <i class="fas fa-trash me-2"></i>Delete Assignment
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobileMenuButton');
            const sidebar = document.querySelector('.sidebar');
            
            if (mobileMenuButton && sidebar) {
                mobileMenuButton.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                });
            }

            // Form validation and enhancement
            const form = document.querySelector('form');
            const titleInput = document.getElementById('title');
            const courseSelect = document.getElementById('course_id');

            if (form) {
                form.addEventListener('submit', function(e) {
                    if (!titleInput.value.trim()) {
                        e.preventDefault();
                        titleInput.focus();
                        alert('Please enter an assignment title.');
                        return;
                    }

                    if (!courseSelect.value) {
                        e.preventDefault();
                        courseSelect.focus();
                        alert('Please select a course for this assignment.');
                        return;
                    }

                    // Show loading state
                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating...';
                        submitBtn.disabled = true;
                    }
                });
            }

            // Character counter for description
            const descriptionTextarea = document.getElementById('description');
            if (descriptionTextarea) {
                const charCount = document.createElement('div');
                charCount.className = 'form-text text-end';
                charCount.id = 'charCount';
                descriptionTextarea.parentNode.appendChild(charCount);

                function updateCharCount() {
                    const length = descriptionTextarea.value.length;
                    charCount.textContent = `${length} characters`;
                    
                    if (length > 1000) {
                        charCount.classList.add('text-warning');
                    } else {
                        charCount.classList.remove('text-warning');
                    }
                }

                descriptionTextarea.addEventListener('input', updateCharCount);
                updateCharCount(); // Initial count
            }
        });
    </script>
</body>
</html>