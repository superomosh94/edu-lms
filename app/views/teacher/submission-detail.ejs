<%- include('../partials/header', { title: 'Submission Details - ' + (submission ? submission.title : 'Not Found') }) %>

<style>
  :root {
    /* Gold Color Palette */
    --gold-50: #fffdf0;
    --gold-100: #fef9d7;
    --gold-200: #fdf0a8;
    --gold-300: #fbe571;
    --gold-400: #f9d43b;
    --gold-500: #f7c21d;
    --gold-600: #e8a50d;
    --gold-700: #c27d09;
    --gold-800: #9a620f;
    --gold-900: #7d5012;
    
    /* Dark Theme Colors */
    --dark-50: #f8fafc;
    --dark-100: #f1f5f9;
    --dark-200: #e2e8f0;
    --dark-300: #cbd5e1;
    --dark-400: #94a3b8;
    --dark-500: #64748b;
    --dark-600: #475569;
    --dark-700: #334155;
    --dark-800: #1e293b;
    --dark-900: #0f172a;
    --dark-950: #020617;
    
    /* Semantic Colors */
    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    
    /* Spacing */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    
    /* Typography */
    --text-sm: 0.875rem;
    --text-base: 1rem;
    --text-lg: 1.125rem;
    --text-xl: 1.25rem;
    --text-2xl: 1.5rem;
    --text-3xl: 1.875rem;
    
    /* Effects */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-gold: 0 4px 14px 0 rgba(247, 194, 29, 0.2);
    
    --radius-sm: 0.375rem;
    --radius: 0.5rem;
    --radius-md: 0.75rem;
    --radius-lg: 1rem;
    
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
    background: linear-gradient(135deg, var(--dark-950) 0%, var(--dark-900) 50%, var(--dark-800) 100%);
    color: var(--dark-100);
    line-height: 1.6;
    font-size: var(--text-base);
    font-weight: 400;
    min-height: 100vh;
  }

  /* Layout System */
  .main-container {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    width: 280px;
    background: var(--dark-800);
    border-right: 1px solid var(--dark-700);
    position: fixed;
    height: 100vh;
    overflow-y: auto;
    z-index: 40;
  }

  .content-wrapper {
    flex: 1;
    margin-left: 280px;
    min-height: 100vh;
    background: transparent;
  }

  .submission-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: var(--space-8);
  }

  /* Header Section */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-8);
    gap: var(--space-6);
  }

  .header-content {
    flex: 1;
  }

  .page-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--gold-400);
    line-height: 1.2;
    margin-bottom: var(--space-2);
    background: linear-gradient(135deg, var(--gold-400), var(--gold-300));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--dark-300);
    font-weight: 400;
  }

  /* Button System */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border: 1px solid transparent;
    border-radius: var(--radius);
    font-size: var(--text-sm);
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: var(--transition);
    white-space: nowrap;
    height: fit-content;
  }

  .btn:focus-visible {
    outline: 2px solid var(--gold-500);
    outline-offset: 2px;
  }

  .btn-secondary {
    background: var(--dark-700);
    color: var(--dark-100);
    border-color: var(--dark-600);
    box-shadow: var(--shadow-sm);
  }

  .btn-secondary:hover {
    background: var(--dark-600);
    border-color: var(--gold-500);
    transform: translateY(-1px);
    box-shadow: var(--shadow);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--gold-500), var(--gold-600));
    color: var(--dark-900);
    border: 1px solid var(--gold-400);
    box-shadow: var(--shadow-gold);
    font-weight: 600;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, var(--gold-600), var(--gold-700));
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-success {
    background: linear-gradient(135deg, var(--success), #059669);
    color: white;
    border: none;
    box-shadow: var(--shadow-md);
    font-weight: 600;
  }

  .btn-success:hover {
    background: linear-gradient(135deg, #059669, #047857);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  /* Card System */
  .submission-card {
    background: linear-gradient(145deg, var(--dark-800), var(--dark-900));
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--dark-700);
    overflow: hidden;
    margin-bottom: var(--space-8);
    position: relative;
  }

  .submission-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--gold-500), var(--gold-300), var(--gold-500));
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
  }

  .card-header {
    background: linear-gradient(135deg, var(--dark-700), var(--dark-800));
    padding: var(--space-8);
    border-bottom: 1px solid var(--dark-600);
    position: relative;
  }

  .card-title {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--gold-300);
    margin-bottom: var(--space-2);
    line-height: 1.3;
  }

  .card-subtitle {
    color: var(--dark-300);
    font-size: var(--text-base);
    font-weight: 400;
  }

  .card-body {
    padding: var(--space-8);
  }

  /* Information Grid */
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
    padding: var(--space-6);
    background: var(--dark-700);
    border-radius: var(--radius-md);
    border: 1px solid var(--dark-600);
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .info-label {
    font-size: var(--text-sm);
    color: var(--gold-400);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-value {
    font-size: var(--text-base);
    color: var(--dark-100);
    font-weight: 500;
  }

  /* Status Badges */
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    border-radius: 9999px;
    font-size: var(--text-sm);
    font-weight: 600;
    width: fit-content;
    border: 1px solid;
  }

  .status-graded {
    background: rgba(16, 185, 129, 0.1);
    color: var(--success);
    border-color: var(--success);
  }

  .status-pending {
    background: rgba(245, 158, 11, 0.1);
    color: var(--warning);
    border-color: var(--warning);
  }

  /* Content Sections */
  .section {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--dark-600);
  }

  .section:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .section-title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--gold-400);
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .section-title::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, var(--gold-500), var(--gold-300));
    border-radius: var(--radius-sm);
  }

  .section-content {
    background: var(--dark-700);
    padding: var(--space-6);
    border-radius: var(--radius-md);
    border: 1px solid var(--dark-600);
  }

  .submission-text {
    white-space: pre-wrap;
    line-height: 1.7;
    color: var(--dark-100);
    font-size: var(--text-base);
  }

  /* File Attachment */
  .file-attachment {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--dark-700);
    border-radius: var(--radius);
    border: 1px solid var(--dark-600);
    transition: var(--transition);
    text-decoration: none;
    color: inherit;
  }

  .file-attachment:hover {
    border-color: var(--gold-500);
    box-shadow: var(--shadow-gold);
    transform: translateY(-1px);
  }

  .file-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--gold-500), var(--gold-400));
    border-radius: var(--radius);
    color: var(--dark-900);
    font-size: var(--text-xl);
    font-weight: bold;
  }

  .file-info {
    flex: 1;
  }

  .file-name {
    font-weight: 600;
    color: var(--dark-100);
    margin-bottom: var(--space-1);
  }

  .file-download {
    color: var(--gold-400);
    font-weight: 500;
    font-size: var(--text-sm);
  }

  /* Grading Form */
  .grading-form {
    background: var(--dark-700);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    border: 1px solid var(--dark-600);
  }

  .form-group {
    margin-bottom: var(--space-6);
  }

  .form-label {
    display: block;
    font-weight: 600;
    color: var(--gold-400);
    margin-bottom: var(--space-3);
    font-size: var(--text-sm);
  }

  .form-control {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--dark-600);
    border-radius: var(--radius);
    font-size: var(--text-base);
    transition: var(--transition);
    background: var(--dark-800);
    color: var(--dark-100);
    font-family: inherit;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--gold-500);
    box-shadow: 0 0 0 3px rgba(247, 194, 29, 0.1);
  }

  textarea.form-control {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }

  /* Grade Input Enhancement */
  .grade-input-container {
    position: relative;
  }

  .grade-input {
    padding-left: var(--space-12);
  }

  .grade-suffix {
    position: absolute;
    left: var(--space-4);
    top: 50%;
    transform: translateY(-50%);
    color: var(--gold-400);
    font-weight: 600;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-16) var(--space-8);
    color: var(--dark-400);
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: var(--space-4);
    color: var(--gold-500);
    opacity: 0.7;
  }

  .empty-title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--dark-200);
    margin-bottom: var(--space-2);
  }

  .empty-description {
    font-size: var(--text-base);
    color: var(--dark-400);
    max-width: 400px;
    margin: 0 auto;
  }

  /* Alert System */
  .alert {
    padding: var(--space-4);
    border-radius: var(--radius);
    margin-bottom: var(--space-6);
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    border: 1px solid;
    background: var(--dark-800);
  }

  .alert-error {
    color: var(--error);
    border-color: var(--error);
    background: rgba(239, 68, 68, 0.1);
  }

  .alert-success {
    color: var(--success);
    border-color: var(--success);
    background: rgba(16, 185, 129, 0.1);
  }

  /* Divider */
  .divider {
    border: none;
    border-top: 1px solid var(--dark-600);
    margin: var(--space-6) 0;
    position: relative;
  }

  .divider::before {
    content: '';
    position: absolute;
    top: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 4px;
    background: linear-gradient(90deg, var(--gold-500), var(--gold-300));
    border-radius: var(--radius-sm);
  }

  /* Animations */
  @keyframes shimmer {
    0%, 100% { background-position: -200% 0; }
    50% { background-position: 200% 0; }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .submission-card {
    animation: fadeIn 0.5s ease-out;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .sidebar {
      width: 240px;
    }
    
    .content-wrapper {
      margin-left: 240px;
    }
    
    .submission-container {
      padding: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .main-container {
      flex-direction: column;
    }

    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
    }

    .content-wrapper {
      margin-left: 0;
    }

    .page-header {
      flex-direction: column;
      align-items: stretch;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .card-body {
      padding: var(--space-6);
    }

    .grading-form {
      padding: var(--space-6);
    }
  }

  @media (max-width: 640px) {
    .submission-container {
      padding: var(--space-4);
    }

    .page-title {
      font-size: var(--text-2xl);
    }

    .card-header {
      padding: var(--space-6);
    }

    .card-title {
      font-size: var(--text-xl);
    }
  }
</style>

<div class="main-container">
    <div class="sidebar">
        <%- include('../partials/sidebar', { menu: menu, activePage: 'submissions', user: user }) %>
    </div>

    <div class="content-wrapper">
        <div class="submission-container">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-content">
                    <h1 class="page-title">Submission Details</h1>
                    <p class="page-subtitle">Review and evaluate student work with precision</p>
                </div>
                <a href="/teacher/submissions" class="btn btn-secondary">
                    ‚Üê Back to Submissions
                </a>
            </div>

            <!-- Alert Messages -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <strong>Unable to process request:</strong> <%= typeof error === 'string' ? error : 'Please check your input and try again.' %>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success">
                    <strong>Success:</strong> <%= typeof success === 'string' ? success : 'Grade submitted successfully.' %>
                </div>
            <% } %>

            <% if (submission) { %>
                <!-- Submission Details Card -->
                <div class="submission-card">
                    <div class="card-header">
                        <h2 class="card-title"><%= submission.title %></h2>
                        <p class="card-subtitle"><%= submission.course_name %></p>
                    </div>
                    
                    <div class="card-body">
                        <!-- Submission Information -->
                        <div class="info-grid">
                            <div class="info-item">
                                <span class="info-label">Student</span>
                                <span class="info-value"><%= submission.student_name %></span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Submitted On</span>
                                <span class="info-value">
                                    <%= new Date(submission.submitted_at).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Status</span>
                                <span class="status-badge <%= submission.grade ? 'status-graded' : 'status-pending' %>">
                                    <%= submission.grade ? 'Graded' : 'Pending Review' %>
                                </span>
                            </div>
                            <% if (submission.grade) { %>
                            <div class="info-item">
                                <span class="info-label">Current Grade</span>
                                <span class="info-value"><%= submission.grade %>%</span>
                            </div>
                            <% } %>
                        </div>

                        <!-- Assignment Description -->
                        <div class="section">
                            <h3 class="section-title">Assignment Description</h3>
                            <div class="section-content">
                                <p class="submission-text"><%= submission.description || 'No description provided for this assignment.' %></p>
                            </div>
                        </div>

                        <!-- Submitted Work -->
                        <div class="section">
                            <h3 class="section-title">Submitted Work</h3>
                            <div class="section-content">
                                <% if (submission.file_url) { %>
                                    <a href="<%= submission.file_url %>" class="file-attachment" target="_blank" download>
                                        <div class="file-icon">‚Üì</div>
                                        <div class="file-info">
                                            <div class="file-name">Submitted File</div>
                                            <span class="file-download">Download student submission</span>
                                        </div>
                                    </a>
                                <% } else { %>
                                    <p style="color: var(--dark-400); font-style: italic; padding: var(--space-4);">
                                        No file submitted. Text entry only.
                                    </p>
                                <% } %>
                            </div>
                        </div>

                        <div class="divider"></div>

                        <!-- Grading Section -->
                        <div class="section">
                            <h3 class="section-title">Evaluation & Grading</h3>
                            <form action="/teacher/submissions/<%= submission.id %>/grade" method="POST" class="grading-form">
                                <div class="form-group">
                                    <label for="grade" class="form-label">Grade Assessment</label>
                                    <div class="grade-input-container">
                                        <span class="grade-suffix">%</span>
                                        <input 
                                            type="number" 
                                            id="grade" 
                                            name="grade" 
                                            value="<%= submission.grade || '' %>" 
                                            class="form-control grade-input"
                                            min="0" 
                                            max="100" 
                                            step="0.5"
                                            placeholder="Enter grade (0-100)"
                                            required
                                        >
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="feedback" class="form-label">
                                        Constructive Feedback
                                    </label>
                                    <textarea 
                                        id="feedback" 
                                        name="feedback" 
                                        class="form-control" 
                                        rows="6"
                                        placeholder="Provide detailed feedback to help the student understand their performance and areas for improvement..."
                                    ><%= submission.feedback || '' %></textarea>
                                </div>

                                <button type="submit" class="btn btn-success" style="width: 100%; padding: var(--space-4); font-size: var(--text-base);">
                                    Submit Grade & Feedback
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="empty-state">
                    <div class="empty-icon">üìù</div>
                    <h3 class="empty-title">Submission Not Found</h3>
                    <p class="empty-description">
                        The requested submission could not be located. It may have been removed or you might not have the necessary permissions to view it.
                    </p>
                    <a href="/teacher/submissions" class="btn btn-secondary" style="margin-top: var(--space-6);">
                        Return to Submissions
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Form submission handling
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', function(e) {
        const grade = document.getElementById('grade').value;
        const feedback = document.getElementById('feedback').value;
        
        if (grade < 0 || grade > 100) {
          e.preventDefault();
          alert('Please provide a valid grade between 0 and 100.');
          return false;
        }
        
        // Enhanced loading state
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = 'Submitting Evaluation...';
        submitBtn.disabled = true;
        
        // Re-enable button if form submission fails
        setTimeout(() => {
          submitBtn.innerHTML = originalText;
          submitBtn.disabled = false;
        }, 5000);
      });
    }

    // Add subtle interactions
    const cards = document.querySelectorAll('.submission-card');
    cards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-2px)';
        this.style.boxShadow = '0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = 'var(--shadow-lg)';
      });
    });
  });
</script>

