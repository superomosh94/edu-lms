<%- include('../partials/header', { title: 'Assignments' }) %>
<%- include('../partials/navigation') %>
<%- include('../partials/sidebar', { activePage: 'assignments' }) %>

<div class="main-container">
  <main class="content">
    <div class="page-header">
      <h2>Assignments</h2>
      <a href="#newAssignmentForm" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Assignment
      </a>
    </div>

    <% if (assignments && assignments.length > 0) { %>
      <table class="data-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Course</th>
            <th>Due Date</th>
            <th>Submissions</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% assignments.forEach(a => { %>
            <tr>
              <td><%= a.title %></td>
              <td><%= a.course_name %></td>
              <td><%= a.due_date ? new Date(a.due_date).toISOString().split('T')[0] : '—' %></td>
              <td><%= a.submissions_count || 0 %></td>
              <td class="actions">
                <a href="/teacher/assignments/<%= a.id %>/view" class="btn btn-icon"><i class="fas fa-eye"></i></a>
                <a href="/teacher/assignments/<%= a.id %>/edit" class="btn btn-icon"><i class="fas fa-edit"></i></a>
                <a href="/teacher/assignments/<%= a.id %>/delete" class="btn btn-icon" onclick="return confirm('Delete this assignment?')"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="empty">
        <i class="fas fa-folder-open"></i>
        <p>No assignments available.</p>
      </div>
    <% } %>

    <hr>

    <section id="newAssignmentForm" class="new-assignment">
      <h3>Create New Assignment</h3>
      <form action="/teacher/assignments/create" method="POST">
        <input type="text" name="title" placeholder="Assignment Title" required>
        <textarea name="description" rows="4" placeholder="Assignment Description" required></textarea>
        <select name="course_id" required>
          <option value="">Select Course</option>
          <% if (courses && courses.length > 0) { %>
            <% courses.forEach(c => { %>
              <option value="<%= c.id %>"><%= c.name %></option>
            <% }) %>
          <% } %>
        </select>
        <input type="date" name="due_date" required>
        <button type="submit" class="btn btn-primary">Save Assignment</button>
      </form>
    </section>
  </main>
</div>

<%- include('../partials/footer') %>

