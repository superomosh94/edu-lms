<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Teacher Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #3b82f6;
            --primary-dark: #1e40af;
            --secondary: #64748b;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --light: #f8fafc;
            --dark: #0f172a;
            --sidebar-bg: #1e293b;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --hover-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f1f5f9;
            color: #334155;
            line-height: 1.6;
        }

        .assignments-page {
            min-height: 100vh;
            display: flex;
        }

        /* Sidebar Styles */
        .sidebar {
            background: linear-gradient(180deg, var(--sidebar-bg) 0%, var(--dark) 100%);
            width: 280px;
            min-height: 100vh;
            padding: 0;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            position: fixed;
            z-index: 100;
            overflow-y: auto;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 0;
            background: #f8f9fa;
        }

        .container-fluid {
            padding: 2rem;
        }

        /* Header */
        .page-header h1 {
            font-weight: 700;
            color: var(--dark);
        }

        .page-header p {
            color: var(--secondary);
            font-size: 1.1rem;
        }

        /* Stats Cards */
        .stat-card {
            border-radius: 12px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }

        .stat-card .card-body {
            padding: 1.5rem;
        }

        .stat-card h4 {
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        .stat-card small {
            font-weight: 500;
            opacity: 0.9;
        }

        .stat-card i {
            opacity: 0.8;
        }

        /* Assignment Cards */
        .assignment-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            border: none;
            box-shadow: var(--card-shadow);
            overflow: hidden;
            height: 100%;
        }

        .assignment-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }

        .assignment-card .card-header {
            padding: 1.25rem 1.5rem 0;
            background: transparent;
            border: none;
        }

        .assignment-card .card-body {
            padding: 1rem 1.5rem;
        }

        .assignment-card .card-footer {
            padding: 1rem 1.5rem;
            background: transparent;
            border: none;
        }

        .assignment-card .card-title {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.75rem;
        }

        .assignment-card .card-text {
            color: var(--secondary);
            font-size: 0.95rem;
            line-height: 1.5;
        }

        /* Status Badges */
        .status-badge {
            font-size: 0.75rem;
            padding: 0.5rem 0.75rem;
            border-radius: 20px;
            font-weight: 600;
        }

        .status-badge.pending { 
            background: #fef3c7; 
            color: #d97706; 
        }
        
        .status-badge.submitted { 
            background: #dbeafe; 
            color: #1d4ed8; 
        }
        
        .status-badge.overdue { 
            background: #fee2e2; 
            color: #dc2626; 
        }

        .status-badge.draft { 
            background: #e5e7eb; 
            color: #4b5563; 
        }

        .status-badge.published { 
            background: #d1fae5; 
            color: #065f46; 
        }

        /* Assignment Meta Info */
        .assignment-meta {
            margin-top: 1.25rem;
        }

        .assignment-meta .d-flex {
            margin-bottom: 0.5rem;
        }

        .assignment-meta i {
            width: 16px;
        }

        /* Submission Stats */
        .submission-stats {
            background: #f8fafc;
            border-radius: 8px;
            padding: 0.75rem;
            margin-top: 1rem;
        }

        .submission-stats .progress {
            height: 6px;
            margin-top: 0.5rem;
        }

        /* Teacher Actions */
        .teacher-actions {
            display: flex;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .teacher-actions .btn {
            flex: 1;
            font-size: 0.85rem;
            padding: 0.5rem 0.75rem;
        }

        /* Bulk Actions */
        .bulk-actions {
            background: white;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--card-shadow);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .bulk-actions select {
            max-width: 200px;
        }

        /* Quick Stats */
        .quick-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .quick-stat-item {
            background: white;
            border-radius: 8px;
            padding: 1.5rem;
            text-align: center;
            box-shadow: var(--card-shadow);
        }

        .quick-stat-item .number {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary);
        }

        .quick-stat-item .label {
            font-size: 0.85rem;
            color: var(--secondary);
            margin-top: 0.25rem;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .action-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .action-btn.primary {
            background: var(--primary);
            color: white;
        }

        .action-btn.secondary {
            background: #f1f5f9;
            color: var(--dark);
            border: 1px solid #e2e8f0;
        }

        .action-btn.success {
            background: var(--success);
            color: white;
        }

        .action-btn.warning {
            background: var(--warning);
            color: white;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--hover-shadow);
            color: white;
            text-decoration: none;
        }

        /* Empty State */
        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
            background: white;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
        }

        .empty-icon {
            opacity: 0.5;
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            color: var(--secondary);
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: var(--secondary);
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            
            .sidebar.active {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .mobile-menu-btn {
                display: block;
            }
        }

        @media (max-width: 768px) {
            .container-fluid {
                padding: 1.5rem;
            }
            
            .stat-card .card-body {
                padding: 1.25rem;
            }

            .quick-stats {
                grid-template-columns: 1fr;
            }

            .teacher-actions {
                flex-direction: column;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-btn {
                justify-content: center;
            }

            .bulk-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .bulk-actions select {
                max-width: none;
            }
        }

        /* Mobile Menu Button */
        .mobile-menu-btn {
            display: none;
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 101;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            width: 40px;
            height: 40px;
            align-items: center;
            justify-content: center;
            box-shadow: var(--card-shadow);
        }

        @media (max-width: 992px) {
            .mobile-menu-btn {
                display: flex;
            }
        }

        /* Button Styles */
        .btn-primary {
            background: var(--primary);
            border: none;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .btn-outline-primary {
            color: var(--primary);
            border-color: var(--primary);
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
        }

        /* Due Date Warning */
        .due-date-warning {
            color: var(--danger);
            font-weight: 500;
        }

        .due-date-normal {
            color: var(--success);
            font-weight: 500;
        }

        /* Course Filter */
        .course-filter {
            background: white;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--card-shadow);
        }

        .course-filter h6 {
            margin-bottom: 0.75rem;
            color: var(--dark);
        }

        .form-check {
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="assignments-page">
        <!-- Mobile Menu Button -->
        <button class="mobile-menu-btn" id="mobileMenuButton">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <div class="sidebar">
            <%- include('../partials/sidebar', { menu: menu, activePage: 'assignments', user: user }) %>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            <div class="container-fluid py-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 page-header">
                    <div>
                        <h1 class="h2 mb-1"><%= title %></h1>
                        <p class="text-muted mb-0">Create, manage, and track assignments across all your courses.</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="/teacher/reports" class="btn btn-outline-primary">
                            <i class="fas fa-chart-pie me-2"></i>View Analytics
                        </a>
                        <a href="/teacher/assignments/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create Assignment
                        </a>
                    </div>
                </div>

                <!-- Quick Action Buttons -->
                <div class="action-buttons">
                    <a href="/teacher/assignments/create" class="action-btn primary">
                        <i class="fas fa-plus-circle"></i>
                        Create New Assignment
                    </a>
                    <a href="/teacher/submissions" class="action-btn secondary">
                        <i class="fas fa-file-alt"></i>
                        View All Submissions
                    </a>
                    <a href="/teacher/grades" class="action-btn success">
                        <i class="fas fa-clipboard-check"></i>
                        Gradebook
                    </a>
                    <a href="/teacher/courses" class="action-btn warning">
                        <i class="fas fa-book"></i>
                        Manage Courses
                    </a>
                </div>

                <!-- Quick Stats -->
                <div class="quick-stats">
                    <div class="quick-stat-item">
                        <div class="number"><%= stats.total %></div>
                        <div class="label">Total Assignments</div>
                    </div>
                    <div class="quick-stat-item">
                        <div class="number"><%= stats.ungraded %></div>
                        <div class="label">Need Grading</div>
                    </div>
                    <div class="quick-stat-item">
                        <div class="number"><%= stats.dueThisWeek %></div>
                        <div class="label">Due This Week</div>
                    </div>
                    <div class="quick-stat-item">
                        <div class="number"><%= stats.averageSubmissions %>%</div>
                        <div class="label">Avg. Submission Rate</div>
                    </div>
                </div>

                <!-- Course Filter -->
                <% if (courses && courses.length > 0) { %>
                <div class="course-filter">
                    <h6><i class="fas fa-filter me-2"></i>Filter by Course</h6>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-check">
                                <input class="form-check-input course-checkbox" type="checkbox" id="course-all" checked>
                                <label class="form-check-label" for="course-all">All Courses</label>
                            </div>
                        </div>
                        <% courses.forEach(course => { %>
                        <div class="col-md-3">
                            <div class="form-check">
                                <input class="form-check-input course-checkbox" type="checkbox" id="course-<%= course.id %>" checked>
                                <label class="form-check-label" for="course-<%= course.id %>"><%= course.title %></label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <% } %>

                <!-- Assignments List -->
                <% if (!assignments || assignments.length === 0) { %>
                    <div class="empty-state text-center py-5">
                        <div class="empty-icon mb-3">
                            <i class="fas fa-tasks fa-4x text-muted"></i>
                        </div>
                        <h3 class="text-muted mb-3">No Assignments Created Yet</h3>
                        <p class="text-muted mb-4">Start by creating your first assignment to share with students.</p>
                        <div class="d-flex gap-3 justify-content-center">
                            <a href="/teacher/assignments/create" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Create Your First Assignment
                            </a>
                            <a href="/teacher/courses" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-book me-2"></i>Manage Courses First
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row g-4 assignments-list" id="assignmentsContainer">
                        <% assignments.forEach(function(assignment) { 
                            const isOverdue = assignment.due_date && new Date(assignment.due_date) < new Date();
                            const assignmentStatus = isOverdue ? 'overdue' : 'published';
                            const statusText = isOverdue ? 'Overdue' : 'Published';
                            
                            const totalStudents = assignment.total_students || 25;
                            const submissions = assignment.submissions_count || 0;
                            const submissionRate = Math.round((submissions / totalStudents) * 100);
                            const ungraded = assignment.ungraded_count || 0;
                            const graded = submissions - ungraded;
                        %>
                            <div class="col-xl-4 col-lg-6 assignment-item" 
                                 data-course="<%= assignment.course_id %>">
                                <div class="card assignment-card border-0 shadow-sm h-100">
                                    <div class="card-header bg-transparent border-0 pb-0">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <span class="badge status-badge <%= assignmentStatus %> mb-2">
                                                <i class="fas <%= 
                                                    assignmentStatus === 'published' ? 'fa-eye' : 'fa-exclamation-triangle'
                                                %> me-1"></i>
                                                <%= statusText %>
                                            </span>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary border-0" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="/teacher/assignments/<%= assignment.id %>">
                                                            <i class="fas fa-eye me-2"></i>View
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="/teacher/assignments/<%= assignment.id %>/edit">
                                                            <i class="fas fa-edit me-2"></i>Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="/teacher/submissions?assignment=<%= assignment.id %>">
                                                            <i class="fas fa-file-alt me-2"></i>Submissions (<%= submissions %>)
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <form method="POST" action="/teacher/assignments/<%= assignment.id %>/delete" class="d-inline">
                                                            <button type="submit" class="dropdown-item text-danger" 
                                                                    onclick="return confirm('Are you sure you want to delete this assignment?')">
                                                                <i class="fas fa-trash me-2"></i>Delete
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title mb-3"><%= assignment.title %></h5>
                                        <p class="card-text text-muted mb-3">
                                            <%= assignment.description ? 
                                                (assignment.description.substring(0, 100) + (assignment.description.length > 100 ? '...' : '')) 
                                                : 'No description provided' %>
                                        </p>
                                        
                                        <div class="assignment-meta">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fas fa-book text-primary me-2"></i>
                                                <small class="text-muted"><%= assignment.course_name %></small>
                                            </div>
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fas fa-calendar-alt <%= isOverdue ? 'text-danger' : 'text-warning' %> me-2"></i>
                                                <small class="<%= isOverdue ? 'due-date-warning' : 'due-date-normal' %>">
                                                    Due: <%= assignment.due_date ? new Date(assignment.due_date).toLocaleDateString() : 'No due date' %>
                                                    <% if (isOverdue) { %>
                                                        <i class="fas fa-exclamation-circle ms-1"></i>
                                                    <% } %>
                                                </small>
                                            </div>
                                        </div>

                                        <!-- Submission Stats -->
                                        <div class="submission-stats">
                                            <div class="d-flex justify-content-between">
                                                <small class="text-muted">Submissions: <%= submissions %>/<%= totalStudents %></small>
                                                <small class="text-muted"><%= submissionRate %>%</small>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar <%= submissionRate >= 80 ? 'bg-success' : submissionRate >= 50 ? 'bg-warning' : 'bg-danger' %>" 
                                                     role="progressbar" 
                                                     style="width: <%= submissionRate %>%">
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between mt-1">
                                                <small class="text-muted">Graded: <%= graded %></small>
                                                <small class="text-muted">Pending: <%= ungraded %></small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent border-0 pt-0">
                                        <div class="teacher-actions">
                                            <a href="/teacher/assignments/<%= assignment.id %>/edit" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <a href="/teacher/submissions?assignment=<%= assignment.id %>" class="btn btn-primary btn-sm">
                                                <i class="fas fa-file-alt me-1"></i>Grade (<%= ungraded %>)
                                            </a>
                                            <a href="/teacher/assignments/<%= assignment.id %>" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobileMenuButton');
            const sidebar = document.querySelector('.sidebar');
            
            if (mobileMenuButton && sidebar) {
                mobileMenuButton.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                });
            }

            // Course filter functionality
            const courseCheckboxes = document.querySelectorAll('.course-checkbox');
            const courseAll = document.getElementById('course-all');
            
            if (courseCheckboxes.length > 0) {
                // Select All functionality
                courseAll.addEventListener('change', function() {
                    courseCheckboxes.forEach(checkbox => {
                        if (checkbox !== courseAll) {
                            checkbox.checked = courseAll.checked;
                        }
                    });
                    filterAssignments();
                });

                // Individual checkbox functionality
                courseCheckboxes.forEach(checkbox => {
                    if (checkbox !== courseAll) {
                        checkbox.addEventListener('change', function() {
                            // If any individual checkbox is unchecked, uncheck "Select All"
                            const allChecked = Array.from(courseCheckboxes)
                                .filter(cb => cb !== courseAll)
                                .every(cb => cb.checked);
                            courseAll.checked = allChecked;
                            filterAssignments();
                        });
                    }
                });

                function filterAssignments() {
                    const selectedCourses = Array.from(courseCheckboxes)
                        .filter(cb => cb.checked && cb.id !== 'course-all')
                        .map(cb => cb.id.replace('course-', ''));
                    
                    const showAll = courseAll.checked;
                    
                    document.querySelectorAll('.assignment-item').forEach(item => {
                        const courseId = item.dataset.course;
                        if (showAll || selectedCourses.includes(courseId)) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                }
            }
        });
    </script>
</body>
</html>