    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobileMenuButton');
            const sidebar = document.querySelector('.sidebar');
            
            mobileMenuButton.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });

            // Bulk actions functionality
            const selectAll = document.getElementById('selectAll');
            const bulkAction = document.getElementById('bulkAction');
            const applyBulkAction = document.getElementById('applyBulkAction');
            
            selectAll.addEventListener('change', function() {
                const checkboxes = document.querySelectorAll('.assignment-select');
                checkboxes.forEach(checkbox => {
                    checkbox.checked = selectAll.checked;
                });
            });

            applyBulkAction.addEventListener('click', function() {
                const selectedAction = bulkAction.value;
                const selectedAssignments = document.querySelectorAll('.assignment-select:checked');
                
                if (selectedAssignments.length === 0) {
                    alert('Please select at least one assignment.');
                    return;
                }

                if (selectedAction === 'delete') {
                    if (!confirm(`Are you sure you want to delete ${selectedAssignments.length} assignment(s)? This will also delete all submissions.`)) {
                        return;
                    }
                }

                // Implement bulk action logic here
                console.log(`Applying ${selectedAction} to ${selectedAssignments.length} assignments`);
                
                // Reset selection
                selectAll.checked = false;
                selectedAssignments.forEach(checkbox => {
                    checkbox.checked = false;
                });
            });

            // Course filter functionality
            const courseCheckboxes = document.querySelectorAll('.course-checkbox');
            courseCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    filterAssignments();
                });
            });

            function filterAssignments() {
                const selectedCourses = Array.from(courseCheckboxes)
                    .filter(cb => cb.checked && cb.id !== 'course-all')
                    .map(cb => cb.id.replace('course-', ''));
                
                const showAll = document.getElementById('course-all').checked;
                
                document.querySelectorAll('.assignment-item').forEach(item => {
                    const courseId = item.dataset.course;
                    if (showAll || selectedCourses.includes(courseId)) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }
        });
    </script>
