<%- include('../partials/header', { title: 'Reports' }) %>

<%- include('../partials/sidebar', { activePage: 'reports' }) %>
<div class="main-container">

  <main class="content">
    <header class="page-header">
      <h1>Reports</h1>
      <button id="newReportBtn" class="btn-primary">
        <i class="fas fa-plus"></i> New Report
      </button>
    </header>

    <section class="filters">
      <form method="GET" action="/teacher/reports" class="filter-form">
        <label for="course">Filter by Course:</label>
        <select name="course" id="course" onchange="this.form.submit()">
          <option value="">All Courses</option>
          <% if (courses && courses.length > 0) { %>
            <% courses.forEach(c => { %>
              <option value="<%= c.id %>" <%= selectedCourse == c.id ? 'selected' : '' %>><%= c.title %></option>
            <% }) %>
          <% } %>
        </select>
      </form>
    </section>

    <section class="reports-list">
      <% if (reports && reports.length > 0) { %>
        <table class="data-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Course</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% reports.forEach((r, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= r.title %></td>
                <td><%= r.course_title || 'N/A' %></td>
                <td><%= new Date(r.created_at).toLocaleDateString() %></td>
                <td>
                  <a href="/teacher/reports/<%= r.id %>" class="btn-view"><i class="fas fa-eye"></i></a>
                  <a href="/teacher/reports/delete/<%= r.id %>" class="btn-delete" onclick="return confirm('Delete this report?')"><i class="fas fa-trash-alt"></i></a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-file-alt"></i>
          <p>No reports found.</p>
        </div>
      <% } %>
    </section>
  </main>
</div>

<!-- New Report Modal -->
<div id="reportModal" class="modal hidden">
  <div class="modal-content">
    <h2>Create Report</h2>
    <form method="POST" action="/teacher/reports/create">
      <div class="form-group">
        <label for="title">Report Title</label>
        <input type="text" name="title" id="title" required>
      </div>

      <div class="form-group">
        <label for="course_id">Select Course</label>
        <select name="course_id" id="course_id" required>
          <% if (courses && courses.length > 0) { %>
            <% courses.forEach(c => { %>
              <option value="<%= c.id %>"><%= c.title %></option>
            <% }) %>
          <% } else { %>
            <option value="">No courses available</option>
          <% } %>
        </select>
      </div>

      <div class="form-group">
        <label for="content">Report Details</label>
        <textarea name="content" id="content" rows="6" required></textarea>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">Submit</button>
        <button type="button" id="closeModal" class="btn-secondary">Cancel</button>
      </div>
    </form>
  </div>
</div>

<script>
  const modal = document.getElementById('reportModal');
  const newBtn = document.getElementById('newReportBtn');
  const closeBtn = document.getElementById('closeModal');

  newBtn.addEventListener('click', () => modal.classList.remove('hidden'));
  closeBtn.addEventListener('click', () => modal.classList.add('hidden'));
</script>

