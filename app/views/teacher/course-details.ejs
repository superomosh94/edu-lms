<%- include('../partials/header', { title: course.title + ' - Course Details' }) %>

<style>
  :root {
    --primary: #3498db;
    --primary-dark: #2980b9;
    --success: #27ae60;
    --success-dark: #219a52;
    --warning: #f39c12;
    --danger: #e74c3c;
    --dark: #2c3e50;
    --light: #ecf0f1;
    --gray: #95a5a6;
    --white: #ffffff;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --shadow-hover: 0 8px 15px rgba(0, 0, 0, 0.15);
    --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --radius: 12px;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    line-height: 1.6;
  }

  .main-container {
    display: flex;
    min-height: 100vh;
  }

  .sidebar {
    width: 250px;
    background: var(--white);
    box-shadow: var(--shadow);
    position: fixed;
    height: 100vh;
    overflow-y: auto;
    z-index: 1000;
  }

  .content-wrapper {
    flex: 1;
    margin-left: 250px;
    padding: 2rem;
    min-height: 100vh;
  }

  .course-details-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .course-header {
    background: var(--gradient);
    color: var(--white);
    padding: 3rem;
    border-radius: var(--radius);
    margin-bottom: 2rem;
    box-shadow: var(--shadow);
    position: relative;
    overflow: hidden;
  }

  .course-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    transform: rotate(30deg);
  }

  .course-title {
    font-size: 2.8rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
    position: relative;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .course-description {
    font-size: 1.2rem;
    opacity: 0.95;
    margin-bottom: 1.5rem;
    max-width: 800px;
    line-height: 1.6;
    position: relative;
  }

  .course-meta {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
    flex-wrap: wrap;
    position: relative;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: var(--transition);
  }

  .meta-item:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .meta-item span:first-child {
    font-size: 1.2rem;
  }

  .section {
    background: var(--white);
    padding: 2.5rem;
    border-radius: var(--radius);
    margin-bottom: 2rem;
    box-shadow: var(--shadow);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: var(--transition);
    position: relative;
  }

  .section:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .section-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    border-bottom: 3px solid var(--primary);
    padding-bottom: 0.75rem;
  }

  .section-title::before {
    font-size: 1.5rem;
  }

  .btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    transition: var(--transition);
    font-size: 1rem;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn-primary {
    background: var(--primary);
    color: var(--white);
    box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
  }

  .btn-primary:hover {
    background: var(--primary-dark);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
  }

  .btn-success {
    background: var(--success);
    color: var(--white);
    box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
  }

  .btn-success:hover {
    background: var(--success-dark);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(39, 174, 96, 0.4);
  }

  .assignment-list {
    display: grid;
    gap: 1.25rem;
  }

  .assignment-item {
    padding: 1.5rem;
    border: 2px solid transparent;
    border-radius: var(--radius);
    background: linear-gradient(145deg, #ffffff, #f8f9fa);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .assignment-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--primary);
    transform: scaleY(0);
    transition: var(--transition);
  }

  .assignment-item:hover {
    border-color: var(--primary);
    transform: translateX(8px) translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  .assignment-item:hover::before {
    transform: scaleY(1);
  }

  .assignment-title {
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 0.75rem;
    font-size: 1.3rem;
    position: relative;
  }

  .assignment-title a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
    display: block;
  }

  .assignment-title a:hover {
    color: var(--primary);
    transform: translateX(5px);
  }

  .assignment-meta {
    display: flex;
    gap: 1.5rem;
    font-size: 0.9rem;
    color: var(--gray);
    flex-wrap: wrap;
  }

  .assignment-meta span {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--light);
    border-radius: 20px;
    transition: var(--transition);
  }

  .assignment-meta span:hover {
    background: var(--primary);
    color: var(--white);
    transform: translateY(-1px);
  }

  .no-data {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--gray);
  }

  .no-data p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  .action-buttons {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .stat-card {
    background: var(--white);
    padding: 2rem 1.5rem;
    border-radius: var(--radius);
    text-align: center;
    box-shadow: var(--shadow);
    border-top: 4px solid var(--primary);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, transparent, rgba(52, 152, 219, 0.05));
    opacity: 0;
    transition: var(--transition);
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
  }

  .stat-card:hover::before {
    opacity: 1;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--dark);
    margin-bottom: 0.5rem;
    position: relative;
  }

  .stat-label {
    color: var(--gray);
    font-size: 0.95rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
  }

  .status-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-left: auto;
  }

  .status-active {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .status-completed {
    background: #e2e3e5;
    color: #383d41;
    border: 1px solid #d6d8db;
  }

  @media (max-width: 1024px) {
    .sidebar {
      width: 200px;
    }
    
    .content-wrapper {
      margin-left: 200px;
    }
  }

  @media (max-width: 768px) {
    .main-container {
      flex-direction: column;
    }

    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
    }

    .content-wrapper {
      margin-left: 0;
      padding: 1rem;
    }

    .course-header {
      padding: 2rem 1.5rem;
    }

    .course-title {
      font-size: 2.2rem;
    }

    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }

    .action-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .assignment-meta {
      flex-direction: column;
      gap: 0.75rem;
    }

    .meta-item {
      flex: 1;
      min-width: 200px;
    }
  }

  @media (max-width: 480px) {
    .course-title {
      font-size: 1.8rem;
    }

    .section {
      padding: 1.5rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .course-meta {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<div class="main-container">
    <div class="sidebar">
        <%- include('../partials/sidebar', { menu: menu, activePage: 'courses', user: user }) %>
    </div>

    <div class="content-wrapper">
        <div class="course-details-container">
            <!-- Course Header -->
            <div class="course-header">
                <h1 class="course-title"><%= course.title %></h1>
                <% if (course.description) { %>
                    <p class="course-description"><%= course.description %></p>
                <% } %>
                
                <div class="course-meta">
                    <div class="meta-item">
                        <span>üìö</span>
                        <span>Course Code: <%= course.code || 'N/A' %></span>
                    </div>
                    <div class="meta-item">
                        <span>üë®‚Äçüè´</span>
                        <span>Instructor: You</span>
                    </div>
                    <div class="meta-item">
                        <span>üìÖ</span>
                        <span>Created: <%= new Date(course.createdAt).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %></span>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="/teacher/assignments/create?course_id=<%= course.id %>" class="btn btn-primary">
                        <span>‚ûï</span>
                        Create Assignment
                    </a>
                    <a href="/teacher/courses" class="btn btn-success">
                        <span>üìã</span>
                        Back to Courses
                    </a>
                </div>
            </div>

            <!-- Statistics Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number"><%= assignments.length %></div>
                    <div class="stat-label">Total Assignments</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">
                        <%= assignments.filter(a => new Date(a.due_date) > new Date()).length %>
                    </div>
                    <div class="stat-label">Active Assignments</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">
                        <%= assignments.filter(a => new Date(a.due_date) < new Date()).length %>
                    </div>
                    <div class="stat-label">Completed Assignments</div>
                </div>
            </div>

            <!-- Assignments Section -->
            <div class="section">
                <h2 class="section-title">üìã Course Assignments</h2>
                
                <% if (assignments && assignments.length > 0) { %>
                    <div class="assignment-list">
                        <% assignments.forEach(assignment => { 
                            const isActive = new Date(assignment.due_date) > new Date();
                        %>
                            <div class="assignment-item">
                                <div style="display: flex; align-items: flex-start; justify-content: space-between; gap: 1rem; flex-wrap: wrap;">
                                    <div style="flex: 1; min-width: 300px;">
                                        <div class="assignment-title">
                                            <a href="/teacher/assignments/<%= assignment.id %>">
                                                <%= assignment.title %>
                                            </a>
                                        </div>
                                        <div class="assignment-meta">
                                            <span title="Due Date">
                                                üìÖ <%= new Date(assignment.due_date).toLocaleDateString('en-US', { 
                                                    weekday: 'long', 
                                                    year: 'numeric', 
                                                    month: 'long', 
                                                    day: 'numeric' 
                                                }) %>
                                            </span>
                                            <span title="Due Time">
                                                ‚è∞ <%= new Date(assignment.due_date).toLocaleTimeString('en-US', { 
                                                    hour: '2-digit', 
                                                    minute: '2-digit' 
                                                }) %>
                                            </span>
                                            <% if (assignment.description) { %>
                                                <span title="Description">
                                                    üìù <%= assignment.description.length > 80 ? 
                                                        assignment.description.substring(0, 80) + '...' : 
                                                        assignment.description %>
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="status-indicator <%= isActive ? 'status-active' : 'status-completed' %>">
                                        <span><%= isActive ? 'üü¢' : '‚úÖ' %></span>
                                        <%= isActive ? 'Active' : 'Completed' %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-data">
                        <p>üåü No assignments created for this course yet.</p>
                        <p style="margin-top: 0.5rem; font-size: 1rem;">Create your first assignment to get started!</p>
                        <a href="/teacher/assignments/create?course_id=<%= course.id %>" class="btn btn-primary" style="margin-top: 1.5rem;">
                            <span>üöÄ</span>
                            Create First Assignment
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>