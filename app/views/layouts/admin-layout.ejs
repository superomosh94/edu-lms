<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %> - LMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
    
    <!-- CSRF Token for AJAX requests -->
    <meta name="csrf-token" content="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
    
    <style>
        /* Admin Layout Fixes - FIXED VERSION */
        .admin-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .admin-main {
            display: flex;
            flex: 1;
            min-height: 0;
        }

        .admin-sidebar {
            width: 250px;
            background: #2c3e50;
            color: white;
            flex-shrink: 0;
            overflow-y: auto;
        }

        .admin-content {
            flex: 1;
            padding: 20px;
            background: #f8f9fa;
            overflow-y: auto;
            min-height: 0;
        }

        .admin-footer {
            background: #343a40;
            color: white;
            padding: 20px 0;
            margin-top: auto;
            border-top: 1px solid #495057;
            flex-shrink: 0;
        }

        .admin-content-wrapper {
            width: 100%;
        }

        /* Ensure the body and html take full height */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Mobile Menu Toggle */
        .mobile-menu-toggle {
            display: none;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1001;
            background: #3498db;
            border: none;
            color: white;
            padding: 10px;
            border-radius: 4px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .admin-main {
                flex-direction: column;
            }
            
            .admin-sidebar {
                width: 100%;
                height: auto;
                position: fixed;
                left: -100%;
                height: 100vh;
                z-index: 1000;
                transition: left 0.3s ease;
            }
            
            .admin-sidebar.active {
                left: 0;
            }
            
            .admin-content {
                padding: 15px;
                margin-left: 0;
                width: 100%;
            }
            
            .mobile-menu-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        <header class="admin-header">
            <%- include('../partials/admin-header') %>
        </header>
        
        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle" data-mobile-menu>
            <i class="fas fa-bars"></i>
        </button>
        
        <!-- Main Content Area -->
        <div class="admin-main">
            <!-- Sidebar -->
            <aside class="admin-sidebar">
                <%- include('../partials/adminSidebar') %>
            </aside>
            
            <!-- Content -->
            <main class="admin-content">
                <div class="admin-content-wrapper">
                    <!-- Flash Messages -->
                    <% if (success_msg && success_msg.length > 0) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert" data-auto-dismiss="5000">
                            <i class="fas fa-check-circle me-2"></i>
                            <%= success_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                    
                    <% if (error_msg && error_msg.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert" data-auto-dismiss="5000">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <!-- CONTENT AREA - Your controller passes 'body' variable -->
                    <%- typeof body !== 'undefined' ? body : '' %>
                </div>
            </main>
        </div>
        
        <!-- Footer -->
        <footer class="admin-footer">
            <%- include('../partials/footer') %>
        </footer>
    </div>

    <!-- Simple Mobile Menu Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuToggle = document.querySelector('[data-mobile-menu]');
            const sidebar = document.querySelector('.admin-sidebar');
            
            if (mobileMenuToggle && sidebar) {
                mobileMenuToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                });
            }
            
            // Close mobile menu when clicking on sidebar links
            const sidebarLinks = document.querySelectorAll('.admin-sidebar a');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth <= 768) {
                        sidebar.classList.remove('active');
                    }
                });
            });

            // Auto-dismiss alerts
            const autoDismissAlerts = document.querySelectorAll('[data-auto-dismiss]');
            autoDismissAlerts.forEach(alert => {
                const delay = parseInt(alert.getAttribute('data-auto-dismiss'));
                setTimeout(() => {
                    if (alert.parentNode) {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, delay);
            });
        });

        // Global utility functions
        window.AdminUtils = {
            // Confirm action
            confirmAction: function(message, callback) {
                if (confirm(message || 'Are you sure you want to perform this action?')) {
                    callback();
                }
            },

            // Format date
            formatDate: function(dateString) {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            },

            // Format datetime
            formatDateTime: function(dateString) {
                const date = new Date(dateString);
                return date.toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            },

            // Show loading state
            setLoading: function(element, isLoading) {
                if (isLoading) {
                    element.classList.add('btn-loading');
                    element.disabled = true;
                } else {
                    element.classList.remove('btn-loading');
                    element.disabled = false;
                }
            }
        };
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>

    <!-- Additional scripts for specific pages -->
    <% if (typeof additionalScripts !== 'undefined') { %>
        <%- additionalScripts %>
    <% } %>
</body>
</html>