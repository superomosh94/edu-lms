<%- include('partials/header', { title: 'Profile - EDU LMS' }) %>

<div class="profile-page">
  <!-- Sidebar -->
  <aside class="sidebar">
    <%- include('partials/sidebar', { user: user, activePage: 'profile' }) %>
  </aside>

  <!-- Main Content -->
  <main class="profile-content">
    <div class="profile-container">
      <div class="profile-header">
        <h1>Your Profile</h1>
        <p>Manage your account information</p>
      </div>

      <% if (user) { %>
        <div class="profile-card">
          <div class="profile-row">
            <div class="profile-label">Name:</div>
            <div class="profile-value"><%= user.name %></div>
          </div>
          <div class="profile-row">
            <div class="profile-label">Email:</div>
            <div class="profile-value"><%= user.email %></div>
          </div>
          <div class="profile-row">
            <div class="profile-label">Role:</div>
            <div class="profile-value"><%= user.roleName || user.role %></div>
          </div>

          <div class="profile-actions">
            <a href="/settings/profile/edit">Edit Profile</a>
            <a href="/settings/password">Change Password</a>
            <a href="/">Go to Home</a>
          </div>
        </div>
      <% } else { %>
        <div class="profile-error">
          You are not logged in.
        </div>
      <% } %>
    </div>
  </main>
</div>

<%- include('partials/footer') %>

<style>
body.profile-page {
  display: flex;
  margin: 0;
  font-family: 'Segoe UI', Arial, sans-serif;
  background: #f4f6f9;
  min-height: 100vh;
  color: #333;
}

/* Sidebar */
.sidebar {
  width: 250px;
  background: #2c3e50;
  color: white;
  padding: 20px;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  overflow-y: auto;
  box-shadow: 2px 0 5px rgba(0,0,0,0.5);
}

/* Main content */
.profile-content {
  margin-left: 250px;
  padding: 20px;
  flex-grow: 1;
  overflow-y: auto;
}

/* Profile container */
.profile-container {
  max-width: 800px;
  margin: 2rem auto;
  padding: 1rem;
}

/* Profile header */
.profile-header {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
}

.profile-header h1 {
  margin: 0;
  font-size: 1.8rem;
}

.profile-header p {
  margin-top: 5px;
  font-size: 1rem;
}

/* Profile card */
.profile-card {
  background: white;
  padding: 20px;
  border-radius: 8px;
  margin-top: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.profile-row {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.profile-row:last-child {
  border-bottom: none;
}

.profile-label {
  font-weight: bold;
  color: #555;
}

.profile-value {
  color: #222;
}

/* Actions */
.profile-actions {
  margin-top: 20px;
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.profile-actions a {
  padding: 10px 20px;
  background: #667eea;
  color: white;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
  transition: background 0.3s ease;
}

.profile-actions a:hover {
  background: #556cd6;
}

/* Error message */
.profile-error {
  background: #fee2e2;
  padding: 15px;
  border-radius: 8px;
  color: #b91c1c;
}

/* Footer */
footer {
  margin-left: 280px;
  padding: 20px;
  background: #f8f9fa;
  text-align: center;
  color: #555;
}

/* Responsive */
@media (max-width: 1024px) {
  body.profile-page {
    flex-direction: column;
  }
  .sidebar {
    position: relative;
    width: 100%;
    height: auto;
  }
  .profile-content {
    margin-left: 0;
  }
  footer {
    margin-left: 0;
  }
}
</style>
