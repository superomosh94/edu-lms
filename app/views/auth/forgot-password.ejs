<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head-content') %>
    <title>Forgot Password - EduLMS</title>
    <style>
        :root {
            --primary-blue: #2563eb;
            --primary-blue-dark: #1d4ed8;
            --dark-bg: #0f172a;
            --dark-card: #1e293b;
            --dark-text: #f1f5f9;
            --light-text: #94a3b8;
            --white: #ffffff;
            --error-red: #ef4444;
            --success-green: #10b981;
            --warning-orange: #f59e0b;
            --radius-md: 0.5rem;
            --radius-lg: 0.75rem;
            --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1),
                        0 4px 6px -2px rgba(0,0,0,0.05);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: var(--dark-bg);
            color: var(--dark-text);
            line-height: 1.6;
            min-height: 100vh;
        }

        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        }

        .auth-card {
            background: var(--dark-card);
            padding: 2.5rem;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
            width: 100%;
            max-width: 440px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .auth-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-blue), var(--success-green));
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-logo {
            width: 48px;
            height: 48px;
            margin: 0 auto 1rem;
            background: var(--primary-blue);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .auth-header h2 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--white);
            margin-bottom: 0.5rem;
        }

        .auth-header p {
            color: var(--light-text);
            font-size: 0.95rem;
            margin-top: 0.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--light-text);
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem;
            border-radius: var(--radius-md);
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.05);
            color: var(--white);
            font-size: 1rem;
            transition: all 0.2s ease;
        }

        .form-control::placeholder {
            color: var(--light-text);
            opacity: 0.7;
        }

        .form-control:focus {
            border-color: var(--primary-blue);
            outline: none;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            background: rgba(255, 255, 255, 0.08);
        }

        .btn-primary {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0.875rem;
            border-radius: var(--radius-md);
            background: var(--primary-blue);
            color: var(--white);
            font-weight: 600;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-primary:hover {
            background: var(--primary-blue-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .btn-primary:disabled {
            background: var(--light-text);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .btn-loading .btn-text {
            opacity: 0;
        }

        .btn-spinner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid var(--white);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            display: none;
        }

        @keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }

        .auth-footer {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.9rem;
            color: var(--light-text);
        }

        .auth-footer a {
            color: var(--primary-blue);
            font-weight: 500;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .auth-footer a:hover {
            color: var(--primary-blue-dark);
            text-decoration: underline;
        }

        .info-box {
            background: rgba(37, 99, 235, 0.1);
            border: 1px solid rgba(37, 99, 235, 0.3);
            border-radius: var(--radius-md);
            padding: 1rem;
            margin-bottom: 1.5rem;
            font-size: 0.85rem;
        }

        .info-box h5 {
            color: var(--primary-blue);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .error-message {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: var(--error-red);
            padding: 0.875rem;
            border-radius: var(--radius-md);
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            text-align: center;
        }

        .success-message {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.3);
            color: var(--success-green);
            padding: 0.875rem;
            border-radius: var(--radius-md);
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            text-align: center;
        }

        /* RESPONSIVE DESIGN */
        @media (max-width: 768px) {
            .auth-card {
                padding: 2rem;
                margin: 1rem;
            }

            .auth-header h2 {
                font-size: 1.5rem;
            }

            .form-control {
                padding: 0.75rem;
            }

            .btn-primary {
                padding: 0.75rem;
            }
        }

        @media (max-width: 480px) {
            .auth-card {
                padding: 1.5rem;
                margin: 0.5rem;
            }

            .auth-header h2 {
                font-size: 1.3rem;
            }

            .form-label {
                font-size: 0.85rem;
            }

            .form-control {
                padding: 0.7rem;
                font-size: 0.95rem;
            }

            .btn-primary {
                padding: 0.7rem;
                font-size: 0.95rem;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">E</div>
                <h2>Reset Your Password</h2>
                <p>Enter your email address and we'll send you a reset link</p>
            </div>

            <!-- Info Box -->
            <div class="info-box">
                <h5>How it works:</h5>
                <p>Enter your email address below. If an account exists, we'll send you a password reset link that expires in 1 hour.</p>
            </div>

            <!-- Flash Messages -->
            <% if (messages && messages.error) { %>
                <div class="error-message"><%= messages.error %></div>
            <% } %>
            
            <% if (messages && messages.success) { %>
                <div class="success-message"><%= messages.success %></div>
            <% } %>

            <form id="forgotPasswordForm" class="auth-form" novalidate>
                <div class="form-group">
                    <label for="email" class="form-label">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="e.g. you@example.com" 
                        required 
                        class="form-control"
                        autocomplete="email"
                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                        title="Please enter a valid email address"
                    >
                </div>

                <button type="submit" class="btn-primary" id="submitButton">
                    <span class="btn-text">Send Reset Link</span>
                    <div class="btn-spinner" id="submitSpinner"></div>
                </button>
            </form>

            <div class="auth-footer">
                <p>Remember your password? <a href="/auth/login">Back to login</a></p>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('forgotPasswordForm');
            const submitButton = document.getElementById('submitButton');
            const submitSpinner = document.getElementById('submitSpinner');
            const emailInput = document.getElementById('email');

            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                // Disable form and show loading state
                submitButton.disabled = true;
                submitButton.classList.add('btn-loading');
                submitSpinner.style.display = 'block';

                const formData = new FormData(form);
                const data = Object.fromEntries(formData);

                try {
                    const response = await fetch('/auth/forgot-password', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();

                    if (result.success) {
                        showMessage('success', 'If an account with this email exists, a reset link has been sent. Please check your email.');
                        
                        // Clear form
                        form.reset();
                        
                        // For development: show the reset link in console
                        console.log('Development: Check server logs for the reset link URL');
                        
                    } else {
                        showMessage('error', result.message || 'Failed to send reset link. Please try again.');
                    }
                } catch (error) {
                    console.error('Forgot password error:', error);
                    showMessage('error', 'Network error. Please check your connection and try again.');
                } finally {
                    // Re-enable form
                    submitButton.disabled = false;
                    submitButton.classList.remove('btn-loading');
                    submitSpinner.style.display = 'none';
                }
            });

            function showMessage(type, message) {
                // Remove existing messages
                const existingMessages = document.querySelectorAll('.error-message, .success-message');
                existingMessages.forEach(msg => msg.remove());

                // Create and show new message
                const messageDiv = document.createElement('div');
                messageDiv.className = type === 'error' ? 'error-message' : 'success-message';
                messageDiv.textContent = message;
                
                const infoBox = document.querySelector('.info-box');
                infoBox.insertAdjacentElement('afterend', messageDiv);
                
                // Scroll to message
                messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                // Auto-remove message after 5 seconds
                setTimeout(() => {
                    if (messageDiv.parentNode) {
                        messageDiv.remove();
                    }
                }, 5000);
            }

            // Auto-focus on email field
            emailInput.focus();

            // Add input event listeners for real-time validation
            emailInput.addEventListener('blur', function() {
                this.reportValidity();
            });
        });
    </script>
</body>
</html>