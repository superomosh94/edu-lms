<%- include('../partials/header', { title: 'Register' }) %>

<style>
:root {
  --primary-blue: #2563eb;
  --primary-blue-dark: #1d4ed8;
  --dark-bg: #0f172a;
  --dark-card: #1e293b;
  --dark-text: #f1f5f9;
  --light-text: #94a3b8;
  --white: #ffffff;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1),
               0 4px 6px -2px rgba(0,0,0,0.05);
}

body {
  font-family: 'Inter', sans-serif;
  background: var(--dark-bg);
  color: var(--dark-text);
  margin: 0;
}

.auth-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
}

.auth-card {
  background: var(--dark-card);
  padding: 2rem;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  width: 100%;
  max-width: 420px;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-header h2 {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--white);
}

.auth-header p {
  color: var(--light-text);
}

.form-group {
  margin-bottom: 1.5rem;
  position: relative;
}

.form-label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--light-text);
}

.form-control {
  width: 100%;
  padding: 0.75rem;
  border-radius: var(--radius-md);
  border: 1px solid rgba(255,255,255,0.1);
  background: rgba(255,255,255,0.05);
  color: var(--white);
  font-size: 1rem;
}

.form-control::placeholder {
  color: var(--white);
  opacity: 1;
}

.form-control:focus {
  border-color: var(--primary-blue);
  outline: none;
}

.password-wrapper {
  position: relative;
}

.toggle-password {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  cursor: pointer;
  color: var(--light-text);
}

.password-rules {
  font-size: 0.75rem;
  color: var(--light-text);
  margin-top: 0.5rem;
  line-height: 1.2;
}

.password-rules span {
  display: block;
}

.password-rules .valid {
  color: #22c55e;
}

.password-rules .invalid {
  color: #ef4444;
}

.btn-primary {
  width: 100%;
  padding: 0.75rem;
  border-radius: var(--radius-md);
  background: var(--primary-blue);
  color: var(--white);
  font-weight: 600;
  border: none;
  cursor: pointer;
}

.btn-primary:hover {
  background: var(--primary-blue-dark);
}

.auth-footer {
  text-align: center;
  margin-top: 1rem;
}

.auth-footer a {
  color: var(--primary-blue);
  text-decoration: none;
}

.auth-footer a:hover {
  color: var(--primary-blue-dark);
}

.error {
  color: #ef4444;
  text-align: center;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .auth-card {
    padding: 1.5rem;
    margin: 1rem;
  }

  .auth-header h2 {
    font-size: 1.3rem;
  }
}
</style>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2>Create Account</h2>
      <p>Fill in the details below to register</p>
    </div>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/auth/register" method="POST">
      <div class="form-group">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" id="name" name="name" value="<%= name %>" placeholder="e.g John Doe" required class="form-control">
      </div>

      <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" id="email" name="email" value="<%= email %>" placeholder="e.g you@example.com" required class="form-control">
      </div>

      <div class="form-group password-wrapper">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" placeholder="**********" required class="form-control">
        <button type="button" id="togglePassword" class="toggle-password">
          <i class="fas fa-eye"></i>
        </button>
      </div>

      <div class="password-rules" id="passwordRules">
        <span id="length" class="invalid">• At least 8 characters</span>
        <span id="uppercase" class="invalid">• One uppercase letter</span>
        <span id="lowercase" class="invalid">• One lowercase letter</span>
        <span id="number" class="invalid">• One number</span>
        <span id="symbol" class="invalid">• One special character</span>
      </div>

      <div class="form-group password-wrapper">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="**********" required class="form-control">
        <button type="button" id="toggleConfirmPassword" class="toggle-password">
          <i class="fas fa-eye"></i>
        </button>
      </div>

      <button type="submit" class="btn-primary">Register</button>
    </form>

    <div class="auth-footer">
      <p>Already have an account? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>

<script>
document.getElementById('togglePassword').addEventListener('click', function(){
  const pass = document.getElementById('password');
  const type = pass.getAttribute('type') === 'password' ? 'text' : 'password';
  pass.setAttribute('type', type);
});

document.getElementById('toggleConfirmPassword').addEventListener('click', function(){
  const pass = document.getElementById('confirmPassword');
  const type = pass.getAttribute('type') === 'password' ? 'text' : 'password';
  pass.setAttribute('type', type);
});

const password = document.getElementById('password');
const rules = {
  length: document.getElementById('length'),
  uppercase: document.getElementById('uppercase'),
  lowercase: document.getElementById('lowercase'),
  number: document.getElementById('number'),
  symbol: document.getElementById('symbol')
};

password.addEventListener('input', function(){
  const val = password.value;

  rules.length.textContent = val.length >= 8 ? "✓ At least 8 characters" : "• At least 8 characters";
  rules.length.className = val.length >= 8 ? "valid" : "invalid";

  rules.uppercase.textContent = /[A-Z]/.test(val) ? "✓ One uppercase letter" : "• One uppercase letter";
  rules.uppercase.className = /[A-Z]/.test(val) ? "valid" : "invalid";

  rules.lowercase.textContent = /[a-z]/.test(val) ? "✓ One lowercase letter" : "• One lowercase letter";
  rules.lowercase.className = /[a-z]/.test(val) ? "valid" : "invalid";

  rules.number.textContent = /\d/.test(val) ? "✓ One number" : "• One number";
  rules.number.className = /\d/.test(val) ? "valid" : "invalid";

  rules.symbol.textContent = /[!@#$%^&*(),.?":{}|<>]/.test(val) ? "✓ One special character" : "• One special character";
  rules.symbol.className = /[!@#$%^&*(),.?":{}|<>]/.test(val) ? "valid" : "invalid";
});
</script>
